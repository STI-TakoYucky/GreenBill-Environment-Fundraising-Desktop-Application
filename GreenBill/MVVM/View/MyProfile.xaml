<UserControl x:Class="GreenBill.MVVM.View.MyProfile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GreenBill.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1400"
             Background="#F5F5F5">

    <UserControl.Resources>
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#4CAF50"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#4CAF50"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{TemplateBinding Content}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#4CAF50"/>
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <Style x:Key="StripeButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#635BFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="BadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="30"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" 
                                    BlurRadius="10" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,30">
                <TextBlock Text="My Profile" FontSize="32" FontWeight="Bold" 
                          Foreground="#333333" Margin="0,0,0,10"/>
                <TextBlock Text="Manage your personal information and account settings" 
                          FontSize="16" Foreground="#666666"/>
            </StackPanel>

            <Border Grid.Row="1" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Account Status" FontSize="20" FontWeight="SemiBold" 
                              Foreground="#333333" Margin="0,0,0,20"/>

                    <WrapPanel Orientation="Horizontal">
                        <Border x:Name="AccountStatusBadge" Style="{StaticResource BadgeStyle}"
                               Background="#E8F5E8">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="8" Height="8" Fill="#4CAF50" 
                                        VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <TextBlock x:Name="AccountStatusText" Text="Active" 
                                          FontSize="12" FontWeight="SemiBold" 
                                          Foreground="#4CAF50"/>
                            </StackPanel>
                        </Border>

                        <Border x:Name="EmailVerificationBadge" Style="{StaticResource BadgeStyle}"
                               Background="#FFF3E0">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="8" Height="8" Fill="#FF9800" 
                                        VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <TextBlock x:Name="EmailVerificationText" Text="Email Pending" 
                                          FontSize="12" FontWeight="SemiBold" 
                                          Foreground="#FF9800"/>
                            </StackPanel>
                        </Border>

                        <Border x:Name="StripeStatusBadge" Style="{StaticResource BadgeStyle}"
                               Background="#FFEBEE">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="8" Height="8" Fill="#F44336" 
                                        VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <TextBlock x:Name="StripeStatusText" Text="Not Connected" 
                                          FontSize="12" FontWeight="SemiBold" 
                                          Foreground="#F44336"/>
                            </StackPanel>
                        </Border>
                    </WrapPanel>
                </StackPanel>
            </Border>

            <Border Grid.Row="2" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,40,0">
                        <TextBlock Text="Profile Picture" FontSize="18" FontWeight="SemiBold" 
                                  Foreground="#333333" Margin="0,0,0,20"/>

                        <Border Width="200" Height="200" CornerRadius="100" 
                               BorderBrush="#E0E0E0" BorderThickness="2"
                               HorizontalAlignment="Center" Margin="0,0,0,20">
                            <Border.Background>
                                <ImageBrush x:Name="ProfileImageBrush" 
                                          ImageSource="/Assets/Images/defaultProfile.jpg" 
                                          Stretch="UniformToFill"/>
                            </Border.Background>
                            <Grid>
                                <Border Background="Black" Opacity="0.3" CornerRadius="100" 
                                       x:Name="ImageOverlay" Visibility="Collapsed"/>
                                <Button x:Name="ChangePhotoButton" 
                                       Background="Transparent" BorderThickness="0"
                                       Cursor="Hand" ToolTip="Change Profile Picture"
                                   >
                                    <Button.Template>
                                        <ControlTemplate>
                                            <Grid>
                                                <Ellipse Fill="Transparent"/>
                                            </Grid>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>
                        </Border>

                        <Button x:Name="UploadPhotoButton" Content="Upload New Photo" 
                               Style="{StaticResource SecondaryButton}"
                               />
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Personal Information" FontSize="18" FontWeight="SemiBold" 
                                  Foreground="#333333" Margin="0,0,0,30"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Column="0" Grid.Row="0">
                                <TextBlock Text="First Name" FontWeight="Medium" 
                                           Foreground="#555555" Margin="0,0,0,8"/>
                                <TextBox x:Name="FirstNameTextBox" 
                                           Text="{Binding FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Grid.Row="0">
                                <TextBlock Text="Last Name" FontWeight="Medium" 
                                           Foreground="#555555" Margin="0,0,0,8"/>
                                <TextBox x:Name="LastNameTextBox" 
                                           Text="{Binding LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3">
                                <TextBlock Text="Username" FontWeight="Medium" 
                                           Foreground="#555555" Margin="0,0,0,8"/>
                                <TextBox x:Name="UsernameTextBox"
                                           Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="3">
                                <TextBlock Text="Email Address" FontWeight="Medium" 
                                           Foreground="#555555" Margin="0,0,0,8"/>
                                <TextBox x:Name="EmailTextBox"
                                        Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="0" Grid.Row="8" Grid.ColumnSpan="3" 
                                        Orientation="Horizontal">
                                <Button x:Name="UpdateProfileButton" Content="Update Profile" 
                                        Style="{StaticResource PrimaryButton}" Width="140"
                                        Command="{Binding UpdateProfileCommand}"
                                        Margin="0,0,15,0"/>

                                <Button x:Name="CancelButton" Content="Cancel" 
                                        Style="{StaticResource SecondaryButton}" Width="100"
                                        Command="{Binding CancelCommand}"/>
                            </StackPanel>

                            <Border Grid.Column="0" Grid.Row="10" Grid.ColumnSpan="3"
                                   Background="#F8F9FA" CornerRadius="8" Padding="20"
                                   BorderBrush="#E9ECEF" BorderThickness="1">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                        <TextBlock Text="💳" FontSize="20" Margin="0,0,10,0"/>
                                        <TextBlock Text="Payment Processing" FontSize="16" FontWeight="SemiBold" 
                                                  Foreground="#333333" VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,15" 
                                              Foreground="#666666" FontSize="14">
                                        <Run Text="Setup your Stripe account to receive donations and manage fundraising campaigns. This is required to create and manage fundraising campaigns on the platform."/>
                                    </TextBlock>

                                    <StackPanel Orientation="Horizontal"  >
                                        <Button Command="{Binding ConnectStripeAccountCommand}"
                                                Visibility="{Binding CurrentUser.CanReceiveFunds, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                                               Style="{StaticResource StripeButton}"
                                               Width="200" Margin="0,0,15,0"
                                             >
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Setup Account" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>

                                        <Button  Visibility="{Binding CurrentUser.CanReceiveFunds, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                Style="{StaticResource StripeButton}"
                                                Width="200" Margin="0,0,15,0"
                                                 Cursor="Arrow"
                                                >
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Completed" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>


                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>