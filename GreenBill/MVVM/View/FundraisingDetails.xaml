<UserControl x:Class="GreenBill.MVVM.View.FundraisingDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GreenBill.MVVM.View"
      mc:Ignorable="d" 
        d:DesignHeight="900" d:DesignWidth="1400"
    Background="#F5F5F5">
        
    <Grid>
        <!-- Header -->


        <!-- Back Button -->
        <Button x:Name="BackButton"
            Content="← Back"
            Command="{Binding NavigateBack}"
            Style="{StaticResource SecondaryButton}"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="100,20,0,0"
            Panel.ZIndex="15"/>

        <!-- Main Content -->
        <ScrollViewer Margin="10,60,0,0" 
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="100,20,100,40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Content -->
                <StackPanel Grid.Column="0">
                    <!-- Title -->
                    <TextBlock Text="{Binding SelectedCampaign.Title}"
                           
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#333333"
                           Margin="0,0,0,20"
                           TextWrapping="Wrap"/>

                    <!-- Main Image -->
                    <Border Background="White"
                       CornerRadius="8"
                       Margin="0,0,0,20">
                        <Grid>
                            <Image Source="{Binding SelectedCampaign.Image, Converter={StaticResource ImageConverter}}"
                               Height="350"
                                Stretch="UniformToFill"/>

                        </Grid>
                    </Border>

                    <!-- Organizer Info -->
                    <StackPanel Orientation="Horizontal" 
                           Margin="0,0,0,20">
                        <Ellipse Width="30" 
                            Height="30" 
                            Fill="#CCCCCC"/>
                        <TextBlock 
                                    FontSize="14"
                                    Foreground="#666666"
                                    VerticalAlignment="Center"
                                    Margin="10,0,0,0">
                                <Run Text="{Binding SelectedCampaign.User.Username}" />
                                <Run Text="is organizing this campaign." />
                        </TextBlock>

                    </StackPanel>

                    <!-- Donation Protected Badge -->
                    <Border Background="#E8F5E8"
                       CornerRadius="15"
                       HorizontalAlignment="Left"
                       Padding="12,6"
                       Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="12" 
                                Height="12" 
                                Fill="#00A651"
                                VerticalAlignment="Center"/>
                            <TextBlock Text="Donation protected"
                                  
                                  FontSize="12"
                                  FontWeight="SemiBold"
                                  Foreground="#00A651"
                                  Margin="8,0,0,0"
                                  VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Description -->
                    <TextBlock TextWrapping="Wrap"
                           
                           FontSize="15"
                           LineHeight="24"
                           Foreground="#555555"
                           Margin="0,0,0,20"
                               Text="{Binding SelectedCampaign.Description}"/>

                    <!-- Read More Button -->
                    <Button Content="Read more"
                       Style="{StaticResource PrimaryButton}"
                       HorizontalAlignment="Left" Height="35" Width="107"/>
                </StackPanel>

                <!-- Right Sidebar -->
                <Border Grid.Column="2"
                   Background="White"
                   CornerRadius="12"
                   Padding="24"
                   VerticalAlignment="Top">
                    <StackPanel>
                        <!-- Donation Amount -->
                        <TextBlock Text="$45,665 USD raised"
                              
                              FontSize="24"
                              FontWeight="Bold"
                              Foreground="#333333"
                              Margin="0,0,0,8"/>

                        <!-- Progress Info -->
                        <StackPanel Orientation="Horizontal" 
                               Margin="0,0,0,12">
                            <TextBlock Text="{Binding SelectedCampaign.DonationGoal}"
                                  
                                  FontSize="14"
                                  Foreground="#888888"/>
                            <TextBlock Text=" • "
                                  
                                  FontSize="14"
                                  Foreground="#888888"/>
                            <TextBlock Text="980 donations"
                                  
                                  FontSize="14"
                                  Foreground="#888888"/>
                        </StackPanel>

                        <!-- Progress Bar -->
                        <ProgressBar
                                Value="20.7"
                                Maximum="100"
                                Margin="0,0,0,20"/>


                        <Button Content="Donate now"
                           Style="{StaticResource SecondaryButton}"
                           Width="111"
                           HorizontalAlignment="Stretch"
                           Margin="0,0,0,20"/>

                        <!-- Recent Donation -->
                        <StackPanel Orientation="Horizontal" 
                               Margin="0,0,0,16">
                            <Ellipse Width="16" 
                                Height="16" 
                                Fill="#E8B4FF"
                                VerticalAlignment="Top"
                                Margin="0,2,0,0"/>
                            <TextBlock Text="715 people just donated"
                                  
                                  FontSize="14"
                                  Foreground="#8B5FBF"
                                  Margin="8,0,0,0"/>
                        </StackPanel>

                        <!-- Organizer Info -->
                        <StackPanel Margin="0,0,0,16">
                            <StackPanel Orientation="Horizontal" 
                                   Margin="0,0,0,8">
                                <Ellipse Width="20" 
                                    Height="20" 
                                    Fill="#CCCCCC"/>
                                <StackPanel Margin="8,0,0,0">
                                    <TextBlock Text="Eric Welmiar"
                                          
                                          FontSize="13"
                                          FontWeight="SemiBold"
                                          Foreground="#333333"/>
                                    <TextBlock Text="$50 • Recent donation"
                                          
                                          FontSize="11"
                                          Foreground="#888888"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                        <!-- Anonymous Donations -->
                        <StackPanel Margin="0,0,0,16">
                            <StackPanel Orientation="Horizontal" 
                                   Margin="0,0,0,8">
                                <Ellipse Width="20" 
                                    Height="20" 
                                    Fill="#CCCCCC"/>
                                <StackPanel Margin="8,0,0,0">
                                    <TextBlock Text="Anonymous"
                                          
                                          FontSize="13"
                                          FontWeight="SemiBold"
                                          Foreground="#333333"/>
                                    <TextBlock Text="$1,800 • Top donation"
                                          
                                          FontSize="11"
                                          Foreground="#888888"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,20">
                            <StackPanel Orientation="Horizontal" 
                                   Margin="0,0,0,8">
                                <Ellipse Width="20" 
                                    Height="20" 
                                    Fill="#CCCCCC"/>
                                <StackPanel Margin="8,0,0,0">
                                    <TextBlock Text="Anonymous"
                                          
                                          FontSize="13"
                                          FontWeight="SemiBold"
                                          Foreground="#333333"/>
                                    <TextBlock Text="$50 • First donation"
                                          
                                          FontSize="11"
                                          Foreground="#888888"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                        <!-- See All / See Top Links -->
                        <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Center">
                            <TextBlock Text="See all"
                                  
                                  FontSize="14"
                                  Foreground="#00A651"
                                  TextDecorations="Underline"
                                  Cursor="Hand"
                                  Margin="0,0,16,0"/>
                            <TextBlock Text="See top"
                                  
                                  FontSize="14"
                                  Foreground="#00A651"
                                  TextDecorations="Underline"
                                  Cursor="Hand"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
