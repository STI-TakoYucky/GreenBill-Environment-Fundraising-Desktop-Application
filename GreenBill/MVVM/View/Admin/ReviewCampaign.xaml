<UserControl
    x:Class="GreenBill.MVVM.View.Admin.ReviewCampaign"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="900"
    d:DesignWidth="1400"
    Background="#f0f2f5"
    SnapsToDevicePixels="True"
    TextOptions.TextFormattingMode="Display"
    TextOptions.TextRenderingMode="ClearType"
    UseLayoutRounding="True"
    mc:Ignorable="d">

    <Grid>
        <ScrollViewer Padding="20" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!--  Header  -->
                <StackPanel Margin="0,0,0,20" HorizontalAlignment="Left">
                    <Button
                        Command="{Binding NavigateBack}"
                        Content="Back"
                        Style="{StaticResource BackButtonStyle}" />
                </StackPanel>

                <!--  Campaign Card (modernized, preserves bindings & actions)  -->
                <Border
                    Margin="0,0,0,20"
                    Padding="25"
                    Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="12"
                    Effect="{DynamicResource DropShadowEffect}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="340" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  Left: Image + quick summary  -->
                        <StackPanel
                            Grid.Column="0"
                            Margin="0,0,24,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top">
                            <Border
                                Width="280"
                                Height="280"
                                Background="#FFF"
                                BorderBrush="#E6E9EB"
                                BorderThickness="1"
                                CornerRadius="8">
                                <Button
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Command="{Binding PreviewImageCommand}"
                                    CommandParameter="{Binding SelectedCampaign.Image}"
                                    Cursor="Hand"
                                    Focusable="False">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Grid>
                                                <Image
                                                    RenderOptions.BitmapScalingMode="HighQuality"
                                                    SnapsToDevicePixels="True"
                                                    Source="{Binding SelectedCampaign.Image, Converter={StaticResource ImageConverter}}"
                                                    Stretch="UniformToFill"
                                                    UseLayoutRounding="True" />
                                            </Grid>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Border>

                            <!--  Actions row  -->
                            <StackPanel
                                Grid.Row="0"
                                Margin="0,30,0,12"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">
                                <Button Margin="0,0,12,0" Command="{Binding Approve_ReviewCampaign}">
                                    <Button.Style>
                                        <Style BasedOn="{StaticResource PrimaryButton}" TargetType="Button">
                                            <Setter Property="Content" Value="Approve" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedCampaign.Status}" Value="Verified">
                                                    <Setter Property="Content" Value="Review" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding SelectedCampaign.Status}" Value="in review">
                                                    <Setter Property="Content" Value="Approve" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <Button
                                    Command="{Binding RejectCampaign}"
                                    CommandParameter="{Binding SelectedCampaign.Id}"
                                    Content="Reject"
                                    Style="{StaticResource SecondaryButton}" />
                            </StackPanel>
                        </StackPanel>

                        <!--  Right: details and actions  -->
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                                <TextBlock
                                    Margin="0,0,0,20"
                                    FontSize="24"
                                    FontWeight="Bold"
                                    Foreground="#00695C"
                                    Text="{Binding SelectedCampaign.Title}" />
                                <TextBlock
                                    Margin="0,0,0,20"
                                    FontSize="14"
                                    Text="{Binding SelectedCampaign.Description}"
                                    TextWrapping="Wrap" />
                                <Border
                                    Width="100"
                                    Margin="0,0,0,20"
                                    Padding="6,2"
                                    HorizontalAlignment="Left"
                                    CornerRadius="10">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Text="{Binding SelectedCampaign.Status}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedCampaign.Status}" Value="in review">
                                                        <Setter Property="Foreground" Value="#856404" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SelectedCampaign.Status}" Value="Verified">
                                                        <Setter Property="Foreground" Value="#1B5E20" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SelectedCampaign.Status}" Value="Rejected">
                                                        <Setter Property="Foreground" Value="#721C24" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedCampaign.Status}" Value="in review">
                                                    <Setter Property="Background" Value="#FFF3CD" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding SelectedCampaign.Status}" Value="Verified">
                                                    <Setter Property="Background" Value="#C8E6C9" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding SelectedCampaign.Status}" Value="Rejected">
                                                    <Setter Property="Background" Value="#F8D7DA" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>
                            </StackPanel>

                            <!--  Details: field cards  -->
                            <ScrollViewer
                                Grid.Row="1"
                                CanContentScroll="False"
                                HorizontalScrollBarVisibility="Disabled"
                                SnapsToDevicePixels="True"
                                UseLayoutRounding="True"
                                VerticalScrollBarVisibility="Auto">
                                <UniformGrid Columns="1">
                                    <!--  ID  -->
                                    <Border
                                        Margin="0,0,12,12"
                                        Padding="12"
                                        Background="#FBFCFD"
                                        BorderBrush="#E6E9EB"
                                        BorderThickness="1"
                                        CornerRadius="8">
                                        <StackPanel>
                                            <TextBlock
                                                FontSize="12"
                                                Foreground="#8A8F95"
                                                Text="ID" />
                                            <TextBlock
                                                FontSize="14"
                                                FontWeight="SemiBold"
                                                Foreground="#263238"
                                                Text="{Binding SelectedCampaign.IdString}"
                                                TextWrapping="Wrap" />
                                        </StackPanel>
                                    </Border>

                                    <!--  UserID  -->
                                    <Border
                                        Margin="0,0,12,12"
                                        Padding="12"
                                        Background="#FBFCFD"
                                        BorderBrush="#E6E9EB"
                                        BorderThickness="1"
                                        CornerRadius="8">
                                        <StackPanel>
                                            <TextBlock
                                                FontSize="12"
                                                Foreground="#8A8F95"
                                                Text="UserID" />
                                            <TextBlock
                                                FontSize="14"
                                                FontWeight="SemiBold"
                                                Foreground="#263238"
                                                Text="{Binding SelectedCampaign.UserId}"
                                                TextWrapping="Wrap" />
                                        </StackPanel>
                                    </Border>

                                    <!--  Category  -->
                                    <Border
                                        Margin="0,0,12,12"
                                        Padding="12"
                                        Background="#FBFCFD"
                                        BorderBrush="#E6E9EB"
                                        BorderThickness="1"
                                        CornerRadius="8">
                                        <StackPanel>
                                            <TextBlock
                                                FontSize="12"
                                                Foreground="#8A8F95"
                                                Text="Category" />
                                            <TextBlock
                                                FontSize="14"
                                                FontWeight="SemiBold"
                                                Foreground="#263238"
                                                Text="{Binding SelectedCampaign.Category}"
                                                TextWrapping="Wrap" />
                                        </StackPanel>
                                    </Border>

                                    <!--  Country  -->
                                    <Border
                                        Margin="0,0,12,12"
                                        Padding="12"
                                        Background="#FBFCFD"
                                        BorderBrush="#E6E9EB"
                                        BorderThickness="1"
                                        CornerRadius="8">
                                        <StackPanel>
                                            <TextBlock
                                                FontSize="12"
                                                Foreground="#8A8F95"
                                                Text="Country" />
                                            <TextBlock
                                                FontSize="14"
                                                FontWeight="SemiBold"
                                                Foreground="#263238"
                                                Text="{Binding SelectedCampaign.Country}"
                                                TextWrapping="Wrap" />
                                        </StackPanel>
                                    </Border>

                                    <!--  ZipCode  -->
                                    <Border
                                        Margin="0,0,12,12"
                                        Padding="12"
                                        Background="#FBFCFD"
                                        BorderBrush="#E6E9EB"
                                        BorderThickness="1"
                                        CornerRadius="8">
                                        <StackPanel>
                                            <TextBlock
                                                FontSize="12"
                                                Foreground="#8A8F95"
                                                Text="ZipCode" />
                                            <TextBlock
                                                FontSize="14"
                                                FontWeight="SemiBold"
                                                Foreground="#263238"
                                                Text="{Binding SelectedCampaign.ZipCode}"
                                                TextWrapping="Wrap" />
                                        </StackPanel>
                                    </Border>

                                    <!--  Donation Goal  -->
                                    <Border
                                        Margin="0,0,12,12"
                                        Padding="12"
                                        Background="#FBFCFD"
                                        BorderBrush="#E6E9EB"
                                        BorderThickness="1"
                                        CornerRadius="8">
                                        <StackPanel>
                                            <TextBlock
                                                FontSize="12"
                                                Foreground="#8A8F95"
                                                Text="Donation Goal" />
                                            <TextBlock
                                                FontSize="14"
                                                FontWeight="SemiBold"
                                                Foreground="#263238"
                                                Text="{Binding SelectedCampaign.DonationGoal}"
                                                TextWrapping="Wrap" />
                                        </StackPanel>
                                    </Border>

                                    <!--  Created At  -->
                                    <Border
                                        Margin="0,0,12,12"
                                        Padding="12"
                                        Background="#FBFCFD"
                                        BorderBrush="#E6E9EB"
                                        BorderThickness="1"
                                        CornerRadius="8">
                                        <StackPanel>
                                            <TextBlock
                                                FontSize="12"
                                                Foreground="#8A8F95"
                                                Text="Created At" />
                                            <TextBlock
                                                FontSize="14"
                                                FontWeight="SemiBold"
                                                Foreground="#263238"
                                                Text="{Binding SelectedCampaign.CreatedAt}"
                                                TextWrapping="Wrap" />
                                        </StackPanel>
                                    </Border>
                                </UniformGrid>
                            </ScrollViewer>
                        </Grid>
                    </Grid>
                </Border>

                <!--  Supporting Documents Section (unchanged, preserved bindings & actions)  -->
                <TextBlock
                    Margin="0,0,0,15"
                    FontSize="20"
                    FontWeight="Bold"
                    Text="Supporting Documents" />

                <ItemsControl ItemsSource="{Binding SupportingDocument}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="0,0,15,15"
                                Padding="15"
                                Background="White"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                CornerRadius="10">

                                <StackPanel>
                                    <!--  Document info  -->
                                    <DockPanel>
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                FontSize="14"
                                                FontWeight="Bold"
                                                Text="{Binding FileName}" />

                                            <TextBlock
                                                FontSize="12"
                                                Foreground="Gray"
                                                Text="{Binding DocumentType}"
                                                TextWrapping="Wrap" />
                                        </StackPanel>

                                        <!--  Buttons  -->
                                        <StackPanel
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                            <Button
                                                Width="100"
                                                Height="30"
                                                Margin="0,0,10,0"
                                                Command="{Binding DataContext.Approve_ReviewSupportingDocument, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding Id}">
                                                <Button.Style>
                                                    <Style BasedOn="{StaticResource PrimaryButton}" TargetType="Button">
                                                        <Setter Property="Content" Value="Approve" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Verified">
                                                                <Setter Property="Content" Value="Review" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="in review">
                                                                <Setter Property="Content" Value="Approve" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>

                                            <Button
                                                Width="100"
                                                Height="30"
                                                Command="{Binding DataContext.RejectDocument, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding Id}"
                                                Content="Reject"
                                                Style="{DynamicResource SecondaryButton}" />
                                        </StackPanel>
                                    </DockPanel>

                                    <Border
                                        Margin="0,20,0,0"
                                        VerticalAlignment="Top"
                                        CornerRadius="8">

                                        <StackPanel Orientation="Horizontal">
                                            <Button
                                                Width="250"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Command="{Binding DataContext.PreviewImageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding FileData}"
                                                Cursor="Hand"
                                                Focusable="False">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Grid>
                                                            <Image
                                                                Height="350"
                                                                RenderOptions.BitmapScalingMode="HighQuality"
                                                                SnapsToDevicePixels="True"
                                                                Source="{Binding FileData, Converter={StaticResource ImageConverter}}"
                                                                Stretch="UniformToFill"
                                                                UseLayoutRounding="True" />
                                                            <Rectangle
                                                                x:Name="Overlay"
                                                                Fill="Black"
                                                                IsHitTestVisible="False"
                                                                Opacity="0" />
                                                        </Grid>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="Overlay" Property="Opacity" Value="0.2" />
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>

                                            <StackPanel
                                                Width="Auto"
                                                Margin="30,0,0,0"
                                                Orientation="Vertical">
                                                <StackPanel.Resources>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Margin" Value="0,0,0,10" />
                                                    </Style>
                                                </StackPanel.Resources>

                                                <TextBlock TextWrapping="Wrap">
                                                    <Run
                                                        FontSize="12"
                                                        Foreground="Gray"
                                                        Text="ID" />
                                                    <LineBreak />
                                                    <Run FontSize="14" Text="{Binding Id}" />
                                                </TextBlock>

                                                <TextBlock TextWrapping="Wrap">
                                                    <Run
                                                        FontSize="12"
                                                        Foreground="Gray"
                                                        Text="Content Type" />
                                                    <LineBreak />
                                                    <Run FontSize="14" Text="{Binding ContentType}" />
                                                </TextBlock>

                                                <TextBlock TextWrapping="Wrap">
                                                    <Run
                                                        FontSize="12"
                                                        Foreground="Gray"
                                                        Text="File Size" />
                                                    <LineBreak />
                                                    <Run FontSize="14" Text="{Binding FileSize}" />
                                                </TextBlock>

                                                <TextBlock TextWrapping="Wrap">
                                                    <Run
                                                        FontSize="12"
                                                        Foreground="Gray"
                                                        Text="Upload Date" />
                                                    <LineBreak />
                                                    <Run FontSize="14" Text="{Binding UploadDate}" />
                                                </TextBlock>

                                                <TextBlock TextWrapping="Wrap">
                                                    <Run
                                                        FontSize="12"
                                                        Foreground="Gray"
                                                        Text="Status" />
                                                    <LineBreak />
                                                    <InlineUIContainer>
                                                        <Border Padding="6,2" CornerRadius="10">
                                                            <TextBlock
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"
                                                                FontSize="14"
                                                                Text="{Binding Status}">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding Status}" Value="in review">
                                                                                <Setter Property="Foreground" Value="#856404" />
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Status}" Value="Verified">
                                                                                <Setter Property="Foreground" Value="#1B5E20" />
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Status}" Value="Rejected">
                                                                                <Setter Property="Foreground" Value="#721C24" />
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>

                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Status}" Value="in review">
                                                                            <Setter Property="Background" Value="#FFF3CD" />
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Verified">
                                                                            <Setter Property="Background" Value="#C8E6C9" />
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Rejected">
                                                                            <Setter Property="Background" Value="#F8D7DA" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                        </Border>
                                                    </InlineUIContainer>
                                                </TextBlock>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>