<UserControl x:Class="GreenBill.MVVM.View.FundraisingDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GreenBill.MVVM.View"
      mc:Ignorable="d" 
        d:DesignHeight="900" d:DesignWidth="1400"
    Background="#F5F5F5">

    <Grid>
        <Button x:Name="BackButton"
            Content="Back"
            Command="{Binding NavigateBack}"
            Style="{StaticResource BackButtonStyle}"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="100,20,0,0"
            Panel.ZIndex="15"/>

        <ScrollViewer Margin="10,60,0,0" 
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="100,20,100,40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column: Campaign Details -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding SelectedCampaign.Title}"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#333333"
                           Margin="0,0,0,20"
                           TextWrapping="Wrap"/>

                    <Border Background="White"
                       CornerRadius="8"
                       Margin="0,0,0,20">
                        <Image Source="{Binding SelectedCampaign.Image, Converter={StaticResource ImageConverter}}"
                           Height="350"
                            Stretch="UniformToFill"/>
                    </Border>

                    <StackPanel Orientation="Horizontal" 
                           Margin="0,0,0,20">
                        <Ellipse Width="30" 
                            Height="30" 
                            Fill="#CCCCCC"/>
                        <TextBlock 
                                    FontSize="14"
                                    Foreground="#666666"
                                    VerticalAlignment="Center"
                                    Margin="10,0,0,0">
                                <Run Text="{Binding SelectedCampaign.User.Username}" />
                                <Run Text="is organizing this campaign." />
                        </TextBlock>
                    </StackPanel>

                    <Border Background="#E8F5E8"
                       CornerRadius="15"
                       HorizontalAlignment="Left"
                       Padding="12,6"
                       Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="12" 
                                Height="12" 
                                Fill="#00A651"
                                VerticalAlignment="Center"/>
                            <TextBlock Text="Donation protected"
                                  FontSize="12"
                                  FontWeight="SemiBold"
                                  Foreground="#00A651"
                                  Margin="8,0,0,0"
                                  VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <TextBlock TextWrapping="Wrap"
                           FontSize="15"
                           LineHeight="24"
                           Foreground="#555555"
                           Margin="0,0,0,20"
                               Text="{Binding SelectedCampaign.Description}"/>
                </StackPanel>

                <!-- Right Column: Donations and Updates -->
                <StackPanel Grid.Column="2">
                    <!-- Donations Container -->
                    <Border Background="White"
                       CornerRadius="12"
                       Padding="24"
                       Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="{Binding SelectedCampaign.TotalAmountRaised}"
                                  FontSize="24"
                                  FontWeight="Bold"
                                  Foreground="#333333"
                                  Margin="0,0,0,8"/>

                            <StackPanel Orientation="Horizontal" 
                                   Margin="0,0,0,12">
                                <TextBlock Text="{Binding SelectedCampaign.Percentage}"
                                      FontSize="14"
                                      Foreground="#888888"/>
                            </StackPanel>

                            <ProgressBar
                                    Value="20.7"
                                    Maximum="100"
                                    Margin="0,0,0,20"/>

                            <Button Content="Donate now"
                               Style="{StaticResource SecondaryButton}"
                               Width="111"
                               Command="{Binding NavigateToDonationPage}"
                               CommandParameter="{Binding SelectedCampaign.Id}"
                               HorizontalAlignment="Stretch"
                               Margin="0,0,0,20"/>

                            <StackPanel Orientation="Horizontal" 
                                   Margin="0,0,0,16">
                                <Ellipse Width="16" 
                                    Height="16" 
                                    Fill="#E8B4FF"
                                    VerticalAlignment="Top"
                                    Margin="0,2,0,0"/>
                                <TextBlock Text="{Binding SelectedCampaign.DonationsCount}"
                                      FontSize="14"
                                      Foreground="#8B5FBF"
                                      Margin="8,0,0,0"/>
                            </StackPanel>

                            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                          MaxHeight="250"
                                          Margin="0,15,0,0">
                                <ItemsControl ItemsSource="{Binding SelectedCampaign.DonationRecord}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="White" 
                                                    BorderBrush="#E0E0E0" 
                                                    Margin="0,0,10,0"
                                                    BorderThickness="0,0,0,1" 
                                                    Padding="0,12">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="40"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <Ellipse Grid.Column="0" 
                                                             Fill="#9C27B0" 
                                                             Width="40" 
                                                             Height="40"/>
                                                    <TextBlock Grid.Column="0"
                                                               Text="TS" 
                                                               FontWeight="SemiBold" 
                                                               FontSize="14"
                                                               Foreground="White"
                                                               HorizontalAlignment="Center" 
                                                               VerticalAlignment="Center"/>

                                                    <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                                        <TextBlock Text="{Binding DisplayName}" 
                                                                    FontWeight="SemiBold" 
                                                                    FontSize="13"
                                                                    Foreground="#333333"/>
                                                        <TextBlock Text="5 hours ago" 
                                                                    FontSize="11" 
                                                                    Foreground="#999999"/>
                                                    </StackPanel>

                                                    <TextBlock Grid.Column="2" 
                                                               Text="{Binding RealAmount}" 
                                                               FontWeight="SemiBold" 
                                                               FontSize="14"
                                                               Foreground="#4CAF50"
                                                               VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>

                    <!-- Campaign Updates Container -->
                    <Border Background="White"
                       CornerRadius="12"
                       Padding="24"
                       MaxHeight="400">
                        <StackPanel>
                            <TextBlock Text="Campaign Updates"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Foreground="#333333"
                                  Margin="0,0,0,16"/>

                            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                          MaxHeight="350">
                                <ItemsControl ItemsSource="{Binding SelectedCampaign.CampaignUpdate}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#F9F9F9" 
                                                    CornerRadius="8"
                                                    BorderBrush="#EFEFEF" 
                                                    BorderThickness="1" 
                                                    Padding="12"
                                                    Margin="0,0,0,10">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Title}" 
                                                                FontWeight="SemiBold" 
                                                                FontSize="12"
                                                                Foreground="#333333"
                                                                TextWrapping="Wrap"
                                                                Margin="0,0,0,6"/>
                                                    <TextBlock Text="{Binding Description}" 
                                                                FontSize="11" 
                                                                Foreground="#666666"
                                                                TextWrapping="Wrap"
                                                                Margin="0,0,0,8"
                                                                LineHeight="16"/>
                                                    <TextBlock Text="{Binding CreatedAt}" 
                                                                FontSize="10" 
                                                                Foreground="#999999"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>