<UserControl x:Class="GreenBill.MVVM.View.FundraisingSteps.FirstStep"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GreenBill.MVVM.View.FundraisingSteps"
             xmlns:converter="clr-namespace:GreenBill.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1400"
             Background="#F5F5F5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" CornerRadius="0, 20, 20, 0"/>

        <!-- Left Side - Welcome Content -->
        <StackPanel Grid.Column="0" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Margin="50">

            <!-- Logo/Icon placeholder -->
            <Image Source="/Assets/Images/logo.png"
                Height="100"
            />

            <TextBlock Text="Let's begin your fundraising journey"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#333333"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>

            <TextBlock Text="We're here to guide you every step of the way."
                       FontSize="16"
                       Foreground="#666666"
                       TextAlignment="Center"
                       Margin="0,0,0,40"/>
        </StackPanel>

        <!-- Right Side - Form Content -->
        <StackPanel Grid.Column="1" 
                    VerticalAlignment="Center" 
                    Margin="50,50,100,50">

            <!-- Location Section -->
            <TextBlock Text="Where are you located?"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="#333333"
                       Margin="0,0,0,8"/>

            <TextBlock Text="We use your location to determine your currency."
                       FontSize="14"
                       Foreground="#666666"
                       Margin="0,0,0,15"/>

            <Grid Margin="0,0,0,40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <!-- Country ComboBox -->

                <!-- Country ComboBox -->
                <ComboBox Grid.Column="0"
                          Height="40"
                          Margin="0,0,15,0"
                          ItemsSource="{Binding Countries}"
                          SelectedItem="{Binding SelectedCountry, Mode=TwoWay}"
                          Style="{StaticResource ComboBox}"
                          ItemContainerStyle="{StaticResource ComboBoxItem}"/>

                <!-- Zip Code TextBox -->
               <!-- Country ComboBox -->
<ComboBox Grid.Column="0"
         Height="40"
         Margin="0,0,15,0"
         ItemsSource="{Binding Countries}"
         SelectedItem="{Binding SelectedCountry, Mode=TwoWay}"
         Style="{StaticResource ComboBox}"
         ItemContainerStyle="{StaticResource ComboBoxItem}"/>

<!-- Zip Code TextBox -->
                <TextBox Grid.Column="1"
        Height="40"
        Text="{Binding ZipCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
        VerticalContentAlignment="Center"
        Padding="10,0"
        BorderBrush="#CCCCCC"
        BorderThickness="1"
        Background="White">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="{TemplateBinding Background}"
                               BorderBrush="{TemplateBinding BorderBrush}"
                               BorderThickness="{TemplateBinding BorderThickness}"
                               CornerRadius="4">
                                            <Grid>
                                                <TextBlock Text="Zip code"
                                          Foreground="#999999"
                                          Margin="10,0"
                                          VerticalAlignment="Center"
                                          Visibility="{Binding Text, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource StringToVisibilityConverter}}"/>
                                                <ScrollViewer x:Name="PART_ContentHost"
                                             VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Category Buttons -->

            </Grid>

            <!-- Fundraising Purpose Section -->
            <TextBlock Text="What best describes why you're fundraising?"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="#333333"
                       Margin="0,0,0,20"/>

            <!-- Category Buttons - Row 1 -->
            <ItemsControl ItemsSource="{Binding CategoryItems}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Margin="0,0,0,15"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ToggleButton Content="{Binding Name}" 
                          IsChecked="{Binding IsSelected}"
                          Command="{Binding DataContext.SelectCategoryCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                          CommandParameter="{Binding Name}"
                          Style="{StaticResource CategoryToggleButton}"
                          Margin="0,0,10,10"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>


            <!-- Continue Button -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Back Button -->
                <Button Grid.Column="0"
             Width="50"
             Command="{Binding GoToHome}"
             Height="50"
             Background="White"
             BorderBrush="#E0E0E0"
             BorderThickness="1"
             HorizontalAlignment="Left">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="25">
                                            <Path Data="M15,12 L9,6 L10.4,4.6 L18,12 L10.4,19.4 L9,18 Z"
                                       Fill="#666666"
                                       RenderTransformOrigin="0.5,0.5"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center">
                                                <Path.RenderTransform>
                                                    <RotateTransform Angle="180"/>
                                                </Path.RenderTransform>
                                            </Path>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Continue Button -->
                <Button Grid.Column="2"
             Content="Continue"
             Style="{StaticResource PrimaryButton}"
             HorizontalAlignment="Right"
             Command="{Binding GoToStep2}"/>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>