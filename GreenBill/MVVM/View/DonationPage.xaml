<UserControl x:Class="GreenBill.MVVM.View.DonationPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GreenBill.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1400"
             Background="#F5F5F5">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="50">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header Section -->
                <Grid Grid.Row="0" Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Back Button -->
                    <Button Grid.Column="0" HorizontalAlignment="Left" 
                           Style="{StaticResource BackButtonStyle}"
                            Command="{Binding NavigateBack}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="← Back" FontSize="14"/>
                        </StackPanel>
                    </Button>

                   
               
                </Grid>

                <!-- Main Content -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Side - Donation Form -->
                    <Border Grid.Column="0" Background="White" CornerRadius="15" 
                            Padding="40" Margin="0,0,0,0">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                        </Border.Effect>

                        <StackPanel>
                            <!-- Title -->
                            <TextBlock Text="Make a Donation" FontSize="32" FontWeight="Bold" 
                                      Foreground="#2E2E2E" Margin="0,0,0,10"/>

                            <TextBlock Text="Support environmental initiatives and make a positive impact on our planet." 
                                      FontSize="16" Foreground="#666" Margin="0,0,0,30" TextWrapping="Wrap"/>

                            <!-- Donation Amount Section -->
                            <TextBlock Text="Select Amount" FontSize="18" FontWeight="SemiBold" 
                                      Foreground="#2E2E2E" Margin="0,0,0,15"/>

                            <!-- Predefined Amount Buttons -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Button Grid.Row="0" Grid.Column="0" Content="$10" Margin="0,0,10,10"
                                       Background="#E8F5E8" BorderBrush="#2E7D32" BorderThickness="2"
                                       Foreground="#2E7D32" FontWeight="SemiBold" Padding="0,15"
                                        FontSize="16"/>

                                <Button Grid.Row="0" Grid.Column="1" Content="$25" Margin="5,0,5,10"
                                       Background="White" BorderBrush="#DDD" BorderThickness="2"
                                       Foreground="#666" FontWeight="SemiBold" Padding="0,15"
                                      FontSize="16"/>

                                <Button Grid.Row="0" Grid.Column="2" Content="$50" Margin="5,0,5,10"
                                       Background="White" BorderBrush="#DDD" BorderThickness="2"
                                       Foreground="#666" FontWeight="SemiBold" Padding="0,15"
                                        FontSize="16"/>

                                <Button Grid.Row="0" Grid.Column="3" Content="$100" Margin="10,0,0,10"
                                       Background="White" BorderBrush="#DDD" BorderThickness="2"
                                       Foreground="#666" FontWeight="SemiBold" Padding="0,15"
                                       FontSize="16"/>

                                <Button Grid.Row="1" Grid.Column="0" Content="$250" Margin="0,0,10,0"
                                       Background="White" BorderBrush="#DDD" BorderThickness="2"
                                       Foreground="#666" FontWeight="SemiBold" Padding="0,15"
                                       FontSize="16"/>

                                <Button Grid.Row="1" Grid.Column="1" Content="$500" Margin="5,0,5,0"
                                       Background="White" BorderBrush="#DDD" BorderThickness="2"
                                       Foreground="#666" FontWeight="SemiBold" Padding="0,15"
                              FontSize="16"/>

                                <Button Grid.Row="1" Grid.Column="2" Content="$1000" Margin="5,0,5,0"
                                       Background="White" BorderBrush="#DDD" BorderThickness="2"
                                       Foreground="#666" FontWeight="SemiBold" Padding="0,15"
                                FontSize="16"/>

                                <Button Grid.Row="1" Grid.Column="3" Content="Other" Margin="10,0,0,0"
                                       Background="White" BorderBrush="#DDD" BorderThickness="2"
                                       Foreground="#666" FontWeight="SemiBold" Padding="0,15"
                             FontSize="16"/>
                            </Grid>

                            <!-- Custom Amount Input -->
                            <TextBlock Text="Custom Amount (USD)" FontSize="16" FontWeight="SemiBold" 
                                      Foreground="#2E2E2E" Margin="0,10,0,10"/>
                            <TextBox Background="White" BorderBrush="#DDD" BorderThickness="2"
                                    Padding="15" FontSize="16"
                                    Text="Enter custom amount..." Foreground="#999" Margin="0,0,0,25"/>

                            <!-- Donor Information -->
                            <TextBlock Text="Donor Information" FontSize="18" FontWeight="SemiBold" 
                                      Foreground="#2E2E2E" Margin="0,20,0,15"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="First Name" FontSize="14" Foreground="#666" Margin="0,0,0,5"/>
                                    <TextBox Background="White" BorderBrush="#DDD" BorderThickness="2"
                                            Padding="15" FontSize="14"  Margin="0,0,0,15"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Last Name" FontSize="14" Foreground="#666" Margin="0,0,0,5"/>
                                    <TextBox Background="White" BorderBrush="#DDD" BorderThickness="2"
                                            Padding="15" FontSize="14"  Margin="0,0,0,15"/>
                                </StackPanel>
                            </Grid>

                            <TextBlock Text="Email Address" FontSize="14" Foreground="#666" Margin="0,0,0,5"/>
                            <TextBox Background="White" BorderBrush="#DDD" BorderThickness="2"
                                    Padding="15" FontSize="14"  Margin="0,0,0,20"/>

                            <!-- Anonymous Donation Option -->
                            <CheckBox Content="Make this donation anonymous" FontSize="14" 
                                     Foreground="#666" Margin="0,0,0,25"/>

                            <!-- Donate Button -->
                            <Button Style="{StaticResource PrimaryButton}">
                                <Button.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.3" Color="#2E7D32"/>
                                </Button.Effect>
                                <TextBlock Text="Complete Donation" HorizontalAlignment="Center"/>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- Right Side - Campaign Stats -->
                    <Border Grid.Column="2" Background="White" CornerRadius="15" 
                            Padding="25" Height="600" VerticalAlignment="Top">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                        </Border.Effect>

                        <StackPanel>
                            <!-- Campaign Title -->
                            <TextBlock Text="Environmental Impact Campaign" FontSize="20" FontWeight="Bold" 
                                      Foreground="#2E2E2E" Margin="0,0,0,20" TextWrapping="Wrap"/>

                            <!-- Progress Stats -->
                            <Border Background="#E8F5E8" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="$45,665 USD raised" FontSize="24" FontWeight="Bold" 
                                              Foreground="#2E7D32" HorizontalAlignment="Center"/>
                                    <TextBlock Text="4234 • 980 donations" FontSize="14" 
                                              Foreground="#666" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Progress Bar -->
                            <ProgressBar Value="65" Maximum="100" Height="8" 
                                        Background="#E0E0E0" Foreground="#2E7D32" 
                                        BorderThickness="0" Margin="0,0,0,20"/>

                            <TextBlock Text="65% of $70,000 goal" FontSize="14" 
                                      Foreground="#666" HorizontalAlignment="Center" Margin="0,0,0,25"/>

                            <!-- Recent Donors -->
                            <TextBlock Text="Recent Supporters" FontSize="16" FontWeight="SemiBold" 
                                      Foreground="#2E2E2E" Margin="0,0,0,15"/>

                            <!-- Donor List -->
                            <StackPanel>
                                <!-- Recent Donation -->
                                <Border Background="#F9F9F9" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Ellipse Grid.Column="0" Width="35" Height="35" Fill="#2E7D32" 
                                                Margin="0,0,10,0"/>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Eric Welmiar" FontWeight="SemiBold" FontSize="14"/>
                                            <TextBlock Text="Recent donation" FontSize="12" Foreground="#666"/>
                                        </StackPanel>

                                        <TextBlock Grid.Column="2" Text="$50" FontWeight="SemiBold" 
                                                  FontSize="14" Foreground="#2E7D32" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>

                                <!-- Top Donation -->
                                <Border Background="#F9F9F9" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Ellipse Grid.Column="0" Width="35" Height="35" Fill="#666" 
                                                Margin="0,0,10,0"/>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Anonymous" FontWeight="SemiBold" FontSize="14"/>
                                            <TextBlock Text="Top donation" FontSize="12" Foreground="#666"/>
                                        </StackPanel>

                                        <TextBlock Grid.Column="2" Text="$1,800" FontWeight="SemiBold" 
                                                  FontSize="14" Foreground="#2E7D32" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>

                                <!-- First Donation -->
                                <Border Background="#F9F9F9" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Ellipse Grid.Column="0" Width="35" Height="35" Fill="#666" 
                                                Margin="0,0,10,0"/>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Anonymous" FontWeight="SemiBold" FontSize="14"/>
                                            <TextBlock Text="First donation" FontSize="12" Foreground="#666"/>
                                        </StackPanel>

                                        <TextBlock Grid.Column="2" Text="$80" FontWeight="SemiBold" 
                                                  FontSize="14" Foreground="#2E7D32" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </StackPanel>

                            <!-- Links -->
                            <Grid Margin="0,20,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="See all" FontSize="14" 
                                          Foreground="#2E7D32" TextDecorations="Underline" 
                                          HorizontalAlignment="Left" Cursor="Hand"/>

                                <TextBlock Grid.Column="1" Text="See top" FontSize="14" 
                                          Foreground="#2E7D32" TextDecorations="Underline" 
                                          HorizontalAlignment="Right" Cursor="Hand"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>