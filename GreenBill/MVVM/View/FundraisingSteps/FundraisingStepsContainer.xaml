<UserControl x:Class="GreenBill.MVVM.View.FundraisingSteps.FundraisingStepsContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GreenBill.MVVM.View.FundraisingSteps"
                xmlns:stepsView="clr-namespace:GreenBill.MVVM.View.FundraisingSteps"
             mc:Ignorable="d" 
              xmlns:converters="clr-namespace:GreenBill.Converters"
             d:DesignHeight="900" d:DesignWidth="1400"
             Background="#f5f5f5">
    <Grid>
        <stepsView:FirstStep Visibility="{Binding CurrentStep, Converter={StaticResource StepVisibilityConverter}, ConverterParameter=1}"/>
        <stepsView:SecondStep Visibility="{Binding CurrentStep, Converter={StaticResource StepVisibilityConverter}, ConverterParameter=2}"/>
        <stepsView:ThirdStep Visibility="{Binding CurrentStep, Converter={StaticResource StepVisibilityConverter}, ConverterParameter=3}"/>
        <stepsView:FourthStep Visibility="{Binding CurrentStep, Converter={StaticResource StepVisibilityConverter}, ConverterParameter=4}"/>
        <stepsView:FifthPage Visibility="{Binding CurrentStep, Converter={StaticResource StepVisibilityConverter}, ConverterParameter=5}"/>
    </Grid>
</UserControl>
