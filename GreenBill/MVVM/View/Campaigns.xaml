<UserControl x:Class="GreenBill.MVVM.View.Campaigns"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GreenBill.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1400"
             Background="#F5F5F5">

    <UserControl.Resources>
        <!-- Card Style -->
        <Style x:Key="CampaignCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.3" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="FilterButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="20" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Active Filter Button Style -->
        <Style x:Key="ActiveFilterButtonStyle" TargetType="Button" BasedOn="{StaticResource FilterButtonStyle}">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Progress Bar Style -->
        <Style x:Key="CampaignProgressStyle" TargetType="ProgressBar">
            <Setter Property="Height" Value="4"/>
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#4CAF50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="{TemplateBinding Background}" CornerRadius="2">
                            <Rectangle Fill="{TemplateBinding Foreground}" 
                                     Width="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Value, Converter={x:Static local:PercentageToWidthConverter.Instance}}"
                                     HorizontalAlignment="Left"
                                     RadiusX="2" RadiusY="2"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Grid.Row="0" Margin="100,40,100,20">
            <TextBlock Text="Find fundraisers and nonprofits" 
                       FontSize="28" 
                       FontWeight="SemiBold" 
                       Foreground="#333333" 
                       Margin="0,0,0,8"/>
            <TextBlock Text="Find fundraisers by person's name, location, title, or keyword" 
                       FontSize="14" 
                       Foreground="#666666"/>
        </StackPanel>

        <!-- Search Section -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="25" 
                Margin="100,0,100,20" 
                Height="50">
            <Border.Effect>
                <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="1" Opacity="0.2" BlurRadius="4"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="🔍" 
                           FontSize="16" 
                           VerticalAlignment="Center" 
                           Margin="20,0,10,0" 
                           Foreground="#999999"/>

                <TextBox Grid.Column="1" 
                         Name="SearchTextBox"
                         Text="Search" 
                         FontSize="14" 
                         Foreground="#999999" 
                         Background="Transparent" 
                         BorderThickness="0" 
                         VerticalAlignment="Center" 
                         Margin="0,0,20,0"
                         GotFocus="SearchTextBox_GotFocus"
                         LostFocus="SearchTextBox_LostFocus"/>
            </Grid>
        </Border>

        <!-- Filter Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    Margin="100,0,100,20" 
                    HorizontalAlignment="Left">
            <Button Name="TrendingButton" 
                    Content="Trending" 
                    Style="{StaticResource ActiveFilterButtonStyle}"
                    Click="FilterButton_Click"/>
            <Button Name="NearYouButton" 
                    Content="Near you" 
                    Style="{StaticResource FilterButtonStyle}"
                    Click="FilterButton_Click"/>
            <Button Name="NonprofitsButton" 
                    Content="Nonprofits" 
                    Style="{StaticResource FilterButtonStyle}"
                    Click="FilterButton_Click"/>
        </StackPanel>

        <!-- Campaign Cards -->
        <ScrollViewer Grid.Row="3" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="100,0,100,20">
            <UniformGrid Name="CampaignsGrid" 
                         Columns="2" 
                         Margin="10">

                <!-- Campaign Card 1 -->
                <Border Style="{StaticResource CampaignCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="200"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Image Placeholder -->
                        <Border Grid.Row="0" 
                                Background="#E0E0E0" 
                                CornerRadius="8,8,0,0">
                            <Grid>
                                <Rectangle Fill="#CCCCCC" Opacity="0.5"/>
                                <TextBlock Text="📸" 
                                           FontSize="48" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center" 
                                           Foreground="#999999"/>
                                <!-- Overlay images simulation -->
                                <StackPanel Orientation="Horizontal" 
                                           HorizontalAlignment="Left" 
                                           VerticalAlignment="Top" 
                                           Margin="10">
                                    <Border Width="40" Height="40" 
                                           Background="#FF6B6B" 
                                           CornerRadius="20" 
                                           Margin="2"/>
                                    <Border Width="40" Height="40" 
                                           Background="#4ECDC4" 
                                           CornerRadius="20" 
                                           Margin="2"/>
                                    <Border Width="40" Height="40" 
                                           Background="#45B7D1" 
                                           CornerRadius="20" 
                                           Margin="2"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Content -->
                        <StackPanel Grid.Row="1" Margin="20">
                            <TextBlock Text="18 shqipëtarë janë të këput 14 muajsh me tumor në kokë" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="#333333" 
                                       TextWrapping="Wrap" 
                                       Margin="0,0,0,10"/>

                            <TextBlock Text="$43,901 raised" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="#333333" 
                                       Margin="0,0,0,5"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Campaign Card 2 -->
                <Border Style="{StaticResource CampaignCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="200"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" 
                                Background="#E0E0E0" 
                                CornerRadius="8,8,0,0">
                            <Grid>
                                <Rectangle Fill="#CCCCCC" Opacity="0.5"/>
                                <TextBlock Text="👩" 
                                           FontSize="48" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center" 
                                           Foreground="#999999"/>
                            </Grid>
                        </Border>

                        <StackPanel Grid.Row="1" Margin="20">
                            <TextBlock Text="Support Sophie, and the Forchas Family recover" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="#333333" 
                                       TextWrapping="Wrap" 
                                       Margin="0,0,0,10"/>

                            <TextBlock Text="$102,249 raised" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="#333333" 
                                       Margin="0,0,0,5"/>

                            <ProgressBar Style="{StaticResource CampaignProgressStyle}" 
                                        Value="75" 
                                        Maximum="100" 
                                        Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Campaign Card 3 -->
                <Border Style="{StaticResource CampaignCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="200"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" 
                                Background="#E0E0E0" 
                                CornerRadius="8,8,0,0">
                            <Grid>
                                <Rectangle Fill="#4CAF50" Opacity="0.7"/>
                                <TextBlock Text="🏠" 
                                           FontSize="48" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center" 
                                           Foreground="White"/>
                            </Grid>
                        </Border>

                        <StackPanel Grid.Row="1" Margin="20">
                            <TextBlock Text="Support Dikeshi's family After Tragic Drowning Accident" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="#333333" 
                                       TextWrapping="Wrap" 
                                       Margin="0,0,0,10"/>

                            <TextBlock Text="$341,902 raised" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="#333333" 
                                       Margin="0,0,0,5"/>

                            <ProgressBar Style="{StaticResource CampaignProgressStyle}" 
                                        Value="85" 
                                        Maximum="100" 
                                        Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Campaign Card 4 -->
                <Border Style="{StaticResource CampaignCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="200"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" 
                                Background="#E0E0E0" 
                                CornerRadius="8,8,0,0">
                            <Grid>
                                <Rectangle Fill="#2196F3" Opacity="0.7"/>
                                <TextBlock Text="🌍" 
                                           FontSize="48" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center" 
                                           Foreground="White"/>
                            </Grid>
                        </Border>

                        <StackPanel Grid.Row="1" Margin="20">
                            <TextBlock Text="Hot meals 4 Starved Palestinian Kids in north Gaza" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="#333333" 
                                       TextWrapping="Wrap" 
                                       Margin="0,0,0,10"/>

                            <TextBlock Text="$1,347,170 raised" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="#333333" 
                                       Margin="0,0,0,5"/>

                            <ProgressBar Style="{StaticResource CampaignProgressStyle}" 
                                        Value="90" 
                                        Maximum="100" 
                                        Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Campaign Card 5 -->
                <Border Style="{StaticResource CampaignCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="200"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" 
                                Background="#E0E0E0" 
                                CornerRadius="8,8,0,0">
                            <Grid>
                                <Rectangle Fill="#FF9800" Opacity="0.7"/>
                                <TextBlock Text="👨‍👩‍👧‍👦" 
                                           FontSize="36" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center" 
                                           Foreground="White"/>
                            </Grid>
                        </Border>

                        <StackPanel Grid.Row="1" Margin="20">
                            <TextBlock Text="Hope and Faith 4 Armani and Family" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="#333333" 
                                       TextWrapping="Wrap" 
                                       Margin="0,0,0,10"/>

                            <TextBlock Text="$1,077,502 raised" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="#333333" 
                                       Margin="0,0,0,5"/>

                            <ProgressBar Style="{StaticResource CampaignProgressStyle}" 
                                        Value="95" 
                                        Maximum="100" 
                                        Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

            </UniformGrid>
        </ScrollViewer>
    </Grid>
</UserControl>