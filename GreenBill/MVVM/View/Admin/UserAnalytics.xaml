<UserControl
    x:Class="GreenBill.MVVM.View.Admin.UserAnalytics"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GreenBill.MVVM.View.Admin"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="900"
    d:DesignWidth="1400"
    Background="White"
    mc:Ignorable="d">
    <Grid>
        <ScrollViewer Padding="30,0,30,0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock
                    Margin="0,20,0,0"
                    FontSize="24"
                    FontWeight="SemiBold"
                    Text="Users" />

                <!--  TABLE  -->
                <StackPanel Margin="0,40,0,40">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,20,10"
                            FontSize="24"
                            FontWeight="Bold"
                            Text="Users" />
                    </StackPanel>

                    <DataGrid
                        Grid.Row="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        AlternatingRowBackground="#f7f9fa"
                        AutoGenerateColumns="False"
                        Background="White"
                        BorderThickness="0"
                        CanUserAddRows="False"
                        ColumnWidth="*"
                        GridLinesVisibility="None"
                        HeadersVisibility="Column"
                        ItemsSource="{Binding Campaigns}"
                        RowHeight="40">

                        <!--  Header Style  -->
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#e1e7e9" />
                                <Setter Property="Foreground" Value="#333" />
                                <Setter Property="FontWeight" Value="SemiBold" />
                                <Setter Property="FontSize" Value="14" />
                                <Setter Property="Padding" Value="4,6" />
                                <Setter Property="BorderThickness" Value="0" />
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <!--  Row Style  -->
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="FontSize" Value="13" />
                                <Setter Property="Padding" Value="299" />
                                <Setter Property="BorderThickness" Value="0" />
                                <!--  Hover effect  -->
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#eef2f3" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>

                        <!--  Define the columns  -->
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding CampaignID}" Header="ID" />
                            <DataGridTextColumn Binding="{Binding Title}" Header="Username" />
                            <!--  last column stretches  -->
                            <DataGridTextColumn Binding="{Binding Organizer}" Header="Email" />
                            <DataGridTextColumn Binding="{Binding DateSubmitted}" Header="Password" />
                            <DataGridTextColumn Binding="{Binding DateSubmitted}" Header="Profile Picture" />
                            <DataGridTextColumn Binding="{Binding DateSubmitted}" Header="Role" />
                            <DataGridTextColumn Binding="{Binding DateSubmitted}" Header="IsBanned" />
                            <DataGridTextColumn Binding="{Binding DateSubmitted}" Header="IsDeactivated" />
                            <DataGridTextColumn Binding="{Binding DateSubmitted}" Header="Created At" />
                        </DataGrid.Columns>
                    </DataGrid>

                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
