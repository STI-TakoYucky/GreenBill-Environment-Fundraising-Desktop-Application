<UserControl
    x:Class="GreenBill.MVVM.View.Admin.AdminDashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="900"
    d:DesignWidth="1400"
    Background="#f4f4f4"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/DropdownButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer
            Grid.Row="0"
            Padding="30,0,30,0"
            VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <StackPanel
                    Margin="0,20,0,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontFamily="./Assets/Fonts/#Poppins"
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="#2D2D2D"
                        Text="Dashboard" />
                    <ComboBox
                        Width="150"
                        Height="35"
                        Margin="10,0,0,0"
                        VerticalContentAlignment="Center"
                        FontSize="14"
                        SelectedIndex="2">
                        <ComboBoxItem Content="Last 7 days" />
                        <ComboBoxItem Content="Last 30 days" />
                        <ComboBoxItem Content="Last 3 months" />
                        <ComboBoxItem Content="Last 6 months" />
                        <ComboBoxItem Content="Last year" />
                    </ComboBox>
                </StackPanel>

                <Grid Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*" />
                        <ColumnDefinition Width="25*" />
                        <ColumnDefinition Width="25*" />
                        <ColumnDefinition Width="25*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  TOTAL USERS  -->
                    <Border
                        Grid.Column="0"
                        Margin="0,0,15,0"
                        Background="White"
                        CornerRadius="12">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="8"
                                Opacity="0.08"
                                ShadowDepth="2"
                                Color="#000000" />
                        </Border.Effect>
                        <StackPanel Margin="25,20">
                            <TextBlock
                                Margin="0,0,0,8"
                                FontSize="14"
                                Foreground="#666666"
                                Text="Total Users" />
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="#00A86B"
                                Text="2,665" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,5,0"
                                    FontSize="16"
                                    Foreground="#00A86B"
                                    Text="↗" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="#00A86B"
                                    Text="12.5% from last month" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!--  Total Campaigns Card  -->
                    <Border
                        Grid.Column="1"
                        Margin="0,0,15,0"
                        Background="White"
                        CornerRadius="12">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="8"
                                Opacity="0.08"
                                ShadowDepth="2"
                                Color="#000000" />
                        </Border.Effect>
                        <StackPanel Margin="25,20">
                            <TextBlock
                                Margin="0,0,0,8"
                                FontSize="14"
                                Foreground="#666666"
                                Text="Total Campaigns" />
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="#3498DB"
                                Text="32" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,5,0"
                                    FontSize="16"
                                    Foreground="#00A86B"
                                    Text="↗" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="#00A86B"
                                    Text="8.2% from last month" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!--  Pending Campaigns Card  -->
                    <Border
                        Grid.Column="3"
                        Margin="0,0,15,0"
                        Background="White"
                        CornerRadius="12">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="8"
                                Opacity="0.08"
                                ShadowDepth="2"
                                Color="#000000" />
                        </Border.Effect>
                        <StackPanel Margin="25,20">
                            <TextBlock
                                Margin="0,0,0,8"
                                FontSize="14"
                                Foreground="#666666"
                                Text="Pending Campaigns" />
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="#E67E22"
                                Text="2" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,5,0"
                                    FontSize="16"
                                    Foreground="#00A86B"
                                    Text="↗" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="#00A86B"
                                    Text="3.8% from last month" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!--  Active Campaigns Card  -->
                    <Border
                        Grid.Column="2"
                        Margin="0,0,15,0"
                        Background="White"
                        CornerRadius="12">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="8"
                                Opacity="0.08"
                                ShadowDepth="2"
                                Color="#000000" />
                        </Border.Effect>
                        <StackPanel Margin="25,20">
                            <TextBlock
                                Margin="0,0,0,8"
                                FontSize="14"
                                Foreground="#666666"
                                Text="Active Campaigns" />
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="#9B59B6"
                                Text="6" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,5,0"
                                    FontSize="16"
                                    Foreground="#666666"
                                    Text="→" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="#666666"
                                    Text="No change" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                </Grid>


                <StackPanel Margin="0,40,0,0">



                    <TextBlock
                        Margin="0,0,15,0"
                        VerticalAlignment="Center"
                        FontFamily="./Assets/Fonts/#Poppins"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="#2D2D2D"
                        Text="Analytics" />

                    <Grid Grid.Column="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="70*" />
                            <ColumnDefinition Width="30*" />
                        </Grid.ColumnDefinitions>

                        <Border
                            Grid.Column="0"
                            Margin="0,0,20,0"
                            Padding="20"
                            Background="White"
                            CornerRadius="12">
                            <Border.Effect>
                                <DropShadowEffect
                                    BlurRadius="8"
                                    Opacity="0.08"
                                    ShadowDepth="2"
                                    Color="#000000" />
                            </Border.Effect>
                            <lvc:CartesianChart Height="300" AnimationsSpeed="0:0:0.5">
                                <lvc:CartesianChart.Series>
                                    <lvc:LineSeries
                                        Title="New Users"
                                        Fill="Transparent"
                                        PointGeometrySize="8"
                                        Stroke="#00A86B"
                                        StrokeThickness="3"
                                        Values="15,25,30,22,35,42,38,45,52,48,55,60" />
                                </lvc:CartesianChart.Series>
                            </lvc:CartesianChart>
                        </Border>

                        <Border
                            Grid.Column="1"
                            Margin="0,0,0,0"
                            Padding="20"
                            Background="White"
                            CornerRadius="12">
                            <Border.Effect>
                                <DropShadowEffect
                                    BlurRadius="8"
                                    Opacity="0.08"
                                    ShadowDepth="2"
                                    Color="#000000" />
                            </Border.Effect>
                            <lvc:PieChart Grid.Column="1" Series="{Binding Series}" />
                        </Border>
                    </Grid>
                </StackPanel>

                <!--  TABLE  -->
                <StackPanel Margin="0,40,0,0">
                    <DockPanel LastChildFill="False">
                        <TextBlock
                            Margin="0,0,20,10"
                            DockPanel.Dock="Left"
                            FontFamily="./Assets/Fonts/#Poppins"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="#2D2D2D"
                            Text="Pending Campaigns" />
                        <Button
                            Background="Transparent"
                            BorderThickness="0"
                            Content="See More"
                            Cursor="Hand"
                            DockPanel.Dock="Right">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </DockPanel>

                    <Border
                        Name="Border"
                        Grid.Row="1"
                        Background="White"
                        CornerRadius="8"
                        SnapsToDevicePixels="True">


                        <DataGrid
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            AlternatingRowBackground="#f7f9fa"
                            AutoGenerateColumns="False"
                            BorderThickness="0"
                            CanUserAddRows="False"
                            CanUserDeleteRows="False"
                            CanUserReorderColumns="False"
                            CanUserSortColumns="False"
                            ColumnWidth="*"
                            GridLinesVisibility="None"
                            HeadersVisibility="Column"
                            ItemsSource="{Binding Campaigns}"
                            RowHeight="50">

                            <DataGrid.Resources>
                                <!--  Remove selection style  -->
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent" />
                                <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent" />
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black" />
                                <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="Transparent" />
                                <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" Color="Black" />
                            </DataGrid.Resources>

                            <!--  Header Style: Ensures text is NOT bold  -->
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#e1e7e9" />
                                    <Setter Property="Foreground" Value="#333" />
                                    <Setter Property="FontWeight" Value="Normal" />
                                    <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                    <Setter Property="FontSize" Value="14" />
                                    <Setter Property="Padding" Value="15,20" />
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                                    <!--  Override default template to prevent implicit bold  -->
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridColumnHeader">
                                                <Border
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="5">
                                                    <ContentPresenter
                                                        Margin="{TemplateBinding Padding}"
                                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                        VerticalAlignment="Center"
                                                        RecognizesAccessKey="True" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <!--  Row Style  -->
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="FontSize" Value="14" />
                                    <Setter Property="BorderThickness" Value="0" />
                                </Style>
                            </DataGrid.RowStyle>

                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Padding" Value="9,6" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridCell">
                                                <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                                    <ContentPresenter VerticalAlignment="Center" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DataGrid.CellStyle>

                            <!--  Define the columns  -->
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="50"
                                    Binding="{Binding CampaignID}"
                                    Header="ID" />
                                <DataGridTextColumn
                                    Width="80"
                                    Binding="{Binding Title}"
                                    Header="UserID" />
                                <DataGridTextColumn Binding="{Binding Title}" Header="Title" />
                                <DataGridTextColumn Binding="{Binding Description}" Header="Description" />
                                <DataGridTextColumn
                                    Width="90"
                                    Binding="{Binding Status}"
                                    Header="Status" />
                                <DataGridTextColumn
                                    Width="90"
                                    Binding="{Binding Verified}"
                                    Header="Verified" />
                                <DataGridTextColumn
                                    Width="90"
                                    Binding="{Binding DateSubmitted}"
                                    Header="Created At" />

                                <DataGridTemplateColumn Width="50">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>

                                            <Menu Background="Transparent">
                                                <MenuItem Style="{DynamicResource Services_MenuItem_With_Dropdown}">
                                                    <MenuItem.Header>
                                                        <Grid>
                                                            <Viewbox
                                                                Width="20"
                                                                Height="20"
                                                                HorizontalAlignment="Center">
                                                                <Path
                                                                    Width="20"
                                                                    Height="20"
                                                                    HorizontalAlignment="Center"
                                                                    Data="M240-400q-33 0-56.5-23.5T160-480q0-33 23.5-56.5T240-560q33 0 56.5 23.5T320-480q0 33-23.5 56.5T240-400Zm240 0q-33 0-56.5-23.5T400-480q0-33 23.5-56.5T480-560q33 0 56.5 23.5T560-480q0 33-23.5 56.5T480-400Zm240 0q-33 0-56.5-23.5T640-480q0-33 23.5-56.5T720-560q33 0 56.5 23.5T800-480q0 33-23.5 56.5T720-400Z"
                                                                    Fill="Black"
                                                                    Stretch="Uniform" />
                                                            </Viewbox>
                                                        </Grid>
                                                    </MenuItem.Header>

                                                    <MenuItem Cursor="Hand" Header="Reject" />
                                                    <MenuItem Cursor="Hand" Header="Approve" />
                                                </MenuItem>
                                            </Menu>

                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>


                            </DataGrid.Columns>
                        </DataGrid>

                    </Border>
                </StackPanel>

                <!--  TABLE  -->
                <StackPanel Margin="0,40,0,0">
                    <DockPanel LastChildFill="False">
                        <TextBlock
                            Margin="0,0,20,10"
                            DockPanel.Dock="Left"
                            FontFamily="./Assets/Fonts/#Poppins"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="#2D2D2D"
                            Text="User Verification Requests" />
                        <Button
                            Background="Transparent"
                            BorderThickness="0"
                            Content="See More"
                            Cursor="Hand"
                            DockPanel.Dock="Right">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </DockPanel>

                    <Border
                        Grid.Row="1"
                        Margin="0,0,0,40"
                        Background="White"
                        CornerRadius="8"
                        SnapsToDevicePixels="True">


                        <DataGrid
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            AlternatingRowBackground="#f7f9fa"
                            AutoGenerateColumns="False"
                            BorderThickness="0"
                            CanUserAddRows="False"
                            CanUserDeleteRows="False"
                            CanUserReorderColumns="False"
                            CanUserSortColumns="False"
                            ColumnWidth="*"
                            GridLinesVisibility="None"
                            HeadersVisibility="Column"
                            ItemsSource="{Binding Campaigns}"
                            RowHeight="50">

                            <DataGrid.Resources>
                                <!--  Remove selection style  -->
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent" />
                                <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent" />
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black" />
                                <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="Transparent" />
                                <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" Color="Black" />
                            </DataGrid.Resources>

                            <!--  Header Style: Ensures text is NOT bold  -->
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#e1e7e9" />
                                    <Setter Property="Foreground" Value="#333" />
                                    <Setter Property="FontWeight" Value="Normal" />
                                    <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                    <Setter Property="FontSize" Value="14" />
                                    <Setter Property="Padding" Value="15,20" />
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                                    <!--  Override default template to prevent implicit bold  -->
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridColumnHeader">
                                                <Border
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="5">
                                                    <ContentPresenter
                                                        Margin="{TemplateBinding Padding}"
                                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                        VerticalAlignment="Center"
                                                        RecognizesAccessKey="True" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <!--  Row Style  -->
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="FontSize" Value="14" />
                                    <Setter Property="BorderThickness" Value="0" />
                                </Style>
                            </DataGrid.RowStyle>

                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Padding" Value="9,6" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridCell">
                                                <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                                    <ContentPresenter VerticalAlignment="Center" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DataGrid.CellStyle>

                            <!--  Define the columns  -->
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="50"
                                    Binding="{Binding CampaignID}"
                                    Header="ID" />
                                <DataGridTextColumn
                                    Width="80"
                                    Binding="{Binding Title}"
                                    Header="UserID" />
                                <DataGridTextColumn Binding="{Binding Title}" Header="Title" />
                                <DataGridTextColumn Binding="{Binding Description}" Header="Description" />
                                <DataGridTextColumn
                                    Width="90"
                                    Binding="{Binding Status}"
                                    Header="Status" />
                                <DataGridTextColumn
                                    Width="90"
                                    Binding="{Binding Verified}"
                                    Header="Verified" />
                                <DataGridTextColumn
                                    Width="90"
                                    Binding="{Binding DateSubmitted}"
                                    Header="Created At" />

                                <DataGridTemplateColumn Width="50">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>

                                            <Menu Background="Transparent">
                                                <MenuItem Style="{DynamicResource Services_MenuItem_With_Dropdown}">
                                                    <MenuItem.Header>
                                                        <Grid>
                                                            <Viewbox
                                                                Width="20"
                                                                Height="20"
                                                                HorizontalAlignment="Center">
                                                                <Path
                                                                    Width="20"
                                                                    Height="20"
                                                                    HorizontalAlignment="Center"
                                                                    Data="M240-400q-33 0-56.5-23.5T160-480q0-33 23.5-56.5T240-560q33 0 56.5 23.5T320-480q0 33-23.5 56.5T240-400Zm240 0q-33 0-56.5-23.5T400-480q0-33 23.5-56.5T480-560q33 0 56.5 23.5T560-480q0 33-23.5 56.5T480-400Zm240 0q-33 0-56.5-23.5T640-480q0-33 23.5-56.5T720-560q33 0 56.5 23.5T800-480q0 33-23.5 56.5T720-400Z"
                                                                    Fill="Black"
                                                                    Stretch="Uniform" />
                                                            </Viewbox>
                                                        </Grid>
                                                    </MenuItem.Header>

                                                    <MenuItem Cursor="Hand" Header="Reject" />
                                                    <MenuItem Cursor="Hand" Header="Approve" />
                                                </MenuItem>
                                            </Menu>

                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>


                            </DataGrid.Columns>
                        </DataGrid>

                    </Border>
                </StackPanel>


            </StackPanel>


        </ScrollViewer>
    </Grid>
</UserControl>
