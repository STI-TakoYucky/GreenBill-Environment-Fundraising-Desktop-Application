<UserControl
    x:Class="GreenBill.MVVM.View.Admin.AdminDashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:GreenBill.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="900"
    d:DesignWidth="1400"
    Background="#f4f4f4"
    mc:Ignorable="d">

    <UserControl.Resources>


        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/DropdownButton.xaml" />
                <ResourceDictionary Source="/Styles/Buttons.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!--  Tab Button Style  -->
            <Style x:Key="TabButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="Foreground" Value="#666666" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Padding" Value="20,15" />
                <Setter Property="FontWeight" Value="Medium" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Cursor" Value="Hand" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border
                                Padding="{TemplateBinding Padding}"
                                Background="{TemplateBinding Background}"
                                BorderBrush="#E0E0E0"
                                BorderThickness="0,0,0,2">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#4CAF50" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!--  Active Tab Style  -->
            <Style x:Key="ActiveTabButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="Foreground" Value="#4CAF50" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Padding" Value="20,15" />
                <Setter Property="FontWeight" Value="Medium" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Cursor" Value="Hand" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border
                                Padding="{TemplateBinding Padding}"
                                Background="{TemplateBinding Background}"
                                BorderBrush="#4CAF50"
                                BorderThickness="0,0,0,2">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <conv:BoolToTabStyleConverter
                x:Key="TabStyleConverter"
                ActiveStyle="{StaticResource ActiveTabButtonStyle}"
                InactiveStyle="{StaticResource TabButtonStyle}" />

            <conv:EmptyCollectionToVisibilityConverter x:Key="EmptyToVis" />
        </ResourceDictionary>
    </UserControl.Resources>




    <Grid>
        <ScrollViewer
            Grid.Row="0"
            Padding="30,0,30,0"
            VerticalScrollBarVisibility="Auto">
            <StackPanel Height="1500">
                <StackPanel
                    Margin="0,20,0,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontFamily="./Assets/Fonts/#Poppins"
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="#00695C"
                        Text="Dashboard" />
                    <ComboBox
                        Margin="10,0,0,0"
                        SelectedIndex="0"
                        SelectedItem="{Binding SelectedPeriod, Mode=TwoWay}"
                        Style="{DynamicResource ComboBox}">
                        <ComboBoxItem Content="All Time" />
                        <ComboBoxItem Content="Last 7 days" />
                        <ComboBoxItem Content="Last 30 days" />
                        <ComboBoxItem Content="Last 3 months" />
                        <ComboBoxItem Content="Last 6 months" />
                        <ComboBoxItem Content="Last year" />
                    </ComboBox>
                </StackPanel>

                <Grid Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*" />
                        <ColumnDefinition Width="25*" />
                        <ColumnDefinition Width="25*" />
                        <ColumnDefinition Width="25*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  TOTAL USERS  -->
                    <Border
                        Grid.Column="0"
                        Margin="0,0,15,0"
                        Background="White"
                        CornerRadius="12">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="8"
                                Opacity="0.08"
                                ShadowDepth="2"
                                Color="#000000" />
                        </Border.Effect>
                        <StackPanel Margin="25,20">
                            <TextBlock
                                Margin="0,0,0,8"
                                FontSize="14"
                                Foreground="#666666"
                                Text="Total Users" />
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="#00A86B"
                                Text="{Binding UserCount}" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,5,0"
                                    FontSize="16"
                                    Foreground="#00A86B"
                                    Text="↗" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="#00A86B"
                                    Text="12.5% from last month" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!--  Total Campaigns Card  -->
                    <Border
                        Grid.Column="1"
                        Margin="0,0,15,0"
                        Background="White"
                        CornerRadius="12">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="8"
                                Opacity="0.08"
                                ShadowDepth="2"
                                Color="#000000" />
                        </Border.Effect>
                        <StackPanel Margin="25,20">
                            <TextBlock
                                Margin="0,0,0,8"
                                FontSize="14"
                                Foreground="#666666"
                                Text="Total Campaigns" />
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="#3498DB"
                                Text="{Binding TotalCampaigns}" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,5,0"
                                    FontSize="16"
                                    Foreground="#00A86B"
                                    Text="↗" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="#00A86B"
                                    Text="8.2% from last month" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!--  Pending Campaigns Card  -->
                    <Border
                        Grid.Column="3"
                        Margin="0,0,15,0"
                        Background="White"
                        CornerRadius="12">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="8"
                                Opacity="0.08"
                                ShadowDepth="2"
                                Color="#000000" />
                        </Border.Effect>
                        <StackPanel Margin="25,20">
                            <TextBlock
                                Margin="0,0,0,8"
                                FontSize="14"
                                Foreground="#666666"
                                Text="Pending Campaigns" />
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="#E67E22"
                                Text="{Binding PendingCampaigns}" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,5,0"
                                    FontSize="16"
                                    Foreground="#00A86B"
                                    Text="↗" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="#00A86B"
                                    Text="3.8% from last month" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!--  Active Campaigns Card  -->
                    <Border
                        Grid.Column="2"
                        Margin="0,0,15,0"
                        Background="White"
                        CornerRadius="12">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="8"
                                Opacity="0.08"
                                ShadowDepth="2"
                                Color="#000000" />
                        </Border.Effect>
                        <StackPanel Margin="25,20">
                            <TextBlock
                                Margin="0,0,0,8"
                                FontSize="14"
                                Foreground="#666666"
                                Text="Verified Campaigns" />
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="#9B59B6"
                                Text="{Binding ActiveCampaigns}" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,5,0"
                                    FontSize="16"
                                    Foreground="#666666"
                                    Text="→" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="#666666"
                                    Text="No change" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                </Grid>


                <StackPanel Margin="0,40,0,0">
                    <StackPanel Margin="0,0,0,20">
                        <Grid>
                            <!--  Bottom line under all tabs  -->
                            <Border
                                Height="2"
                                VerticalAlignment="Bottom"
                                Background="Transparent"
                                BorderBrush="#E0E0E0"
                                BorderThickness="0,0,0,2" />

                            <!--  Tabs  -->
                            <StackPanel Orientation="Horizontal">
                                <Button
                                    Command="{Binding SelectCampaignsTab}"
                                    Content="Campaigns"
                                    Style="{Binding isCampaignsTabActive, Converter={StaticResource TabStyleConverter}}" />

                                <Button
                                    Command="{Binding SelectUsersTab}"
                                    Content="Users"
                                    Style="{Binding isUsersTabActive, Converter={StaticResource TabStyleConverter}}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <Grid Grid.Column="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="70*" />
                            <ColumnDefinition Width="30*" />
                        </Grid.ColumnDefinitions>

                        <Border
                            Grid.Column="0"
                            Margin="0,0,20,0"
                            Padding="20"
                            Background="White"
                            CornerRadius="12">
                            <Border.Effect>
                                <DropShadowEffect
                                    BlurRadius="8"
                                    Opacity="0.08"
                                    ShadowDepth="2"
                                    Color="#000000" />
                            </Border.Effect>
                            <lvc:CartesianChart
                                Height="300"
                                AnimationsSpeed="0:0:0.5"
                                LegendLocation="Bottom"
                                Series="{Binding CartesianSeries}">
                                <lvc:CartesianChart.ChartLegend>
                                    <lvc:DefaultLegend Margin="30,30,30,0" />
                                </lvc:CartesianChart.ChartLegend>
                                <lvc:CartesianChart.AxisX>
                                    <lvc:Axis LabelFormatter="{Binding DateFormatter}" />
                                </lvc:CartesianChart.AxisX>

                                <lvc:CartesianChart.AxisY>
                                    <lvc:Axis MinValue="0">
                                        <lvc:Axis.Separator>
                                            <lvc:Separator Step="1" />
                                        </lvc:Axis.Separator>
                                    </lvc:Axis>
                                </lvc:CartesianChart.AxisY>

                            </lvc:CartesianChart>


                        </Border>

                        <Border
                            Grid.Column="1"
                            Margin="0,0,0,0"
                            Padding="20"
                            Background="White"
                            CornerRadius="12">
                            <Border.Effect>
                                <DropShadowEffect
                                    BlurRadius="8"
                                    Opacity="0.08"
                                    ShadowDepth="2"
                                    Color="#000000" />
                            </Border.Effect>
                            <lvc:PieChart
                                Grid.Column="1"
                                AnimationsSpeed="0:0:0.5"
                                LegendLocation="Bottom"
                                Series="{Binding PieSeries}" />
                        </Border>
                    </Grid>
                </StackPanel>

                <!--  TABLE  -->
                <StackPanel Margin="0,40,0,150">
                    <DockPanel LastChildFill="False">
                        <TextBlock
                            Margin="0,0,20,15"
                            DockPanel.Dock="Left"
                            FontFamily="./Assets/Fonts/#Poppins"
                            FontSize="24"
                            FontWeight="Bold"
                            Foreground="#00695C"
                            Text="Pending Campaigns" />
                        <Button
                            Background="Transparent"
                            BorderThickness="0"
                            Command="{Binding NavigateToCampaignAnalytics}"
                            Content="See More"
                            Cursor="Hand"
                            DockPanel.Dock="Right">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </DockPanel>

                    <Border
                        Name="Border"
                        Grid.Row="1"
                        Margin="0,0,0,50"
                        Background="White"
                        CornerRadius="8"
                        SnapsToDevicePixels="True">
                        <DataGrid
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            AlternatingRowBackground="#FBFBFC"
                            AlternationCount="2"
                            AutoGenerateColumns="False"
                            BorderThickness="0"
                            CanUserAddRows="False"
                            CanUserDeleteRows="False"
                            CanUserReorderColumns="False"
                            CanUserResizeColumns="True"
                            CanUserSortColumns="False"
                            GridLinesVisibility="None"
                            HeadersVisibility="Column"
                            IsReadOnly="True"
                            ItemsSource="{Binding Campaigns}"
                            PreviewMouseWheel="MyDataGrid_PreviewMouseWheel"
                            RowBackground="White"
                            RowHeight="50"
                            ScrollViewer.HorizontalScrollBarVisibility="Auto"
                            ScrollViewer.VerticalScrollBarVisibility="Auto">

                            <DataGrid.Resources>
                                <!--  Keep selection transparent so row fill doesn't look heavy  -->
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent" />
                                <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent" />
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black" />
                                <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="Transparent" />
                                <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" Color="Black" />

                                <!--  Modern palettes used by row style  -->
                                <SolidColorBrush x:Key="RowHoverBrush" Color="#F6F8F9" />
                                <SolidColorBrush x:Key="RowDividerBrush" Color="#e1e7e9" />
                                <SolidColorBrush x:Key="RowSelectedAccent" Color="#4CAF50" />
                            </DataGrid.Resources>

                            <!--  Header Style (preserve gray shade #e1e7e9)  -->
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#e1e7e9" />
                                    <Setter Property="Foreground" Value="#333" />
                                    <Setter Property="FontWeight" Value="SemiBold" />
                                    <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                    <Setter Property="FontSize" Value="14" />
                                    <Setter Property="Padding" Value="10,18" />
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                                    <!--  Keep flat header but slightly more rounded corners for modern look  -->
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridColumnHeader">
                                                <Border
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ContentPresenter
                                                        Margin="{TemplateBinding Padding}"
                                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                        VerticalAlignment="Center"
                                                        RecognizesAccessKey="True" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <!--  Row Style: subtle hover, alternating rows, left accent for selection (no blurry shadow)  -->
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="SnapsToDevicePixels" Value="True" />
                                    <Setter Property="FontSize" Value="14" />
                                    <Setter Property="Margin" Value="0" />
                                    <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                    <Setter Property="BorderThickness" Value="0,0,0,1" />
                                    <Setter Property="BorderBrush" Value="{StaticResource RowDividerBrush}" />
                                    <Setter Property="Background" Value="{Binding RelativeSource={RelativeSource AncestorType=DataGrid}, Path=RowBackground}" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridRow">
                                                <Border
                                                    x:Name="RowBorder"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                    <Grid>
                                                        <!--  left accent bar shown when selected  -->
                                                        <Rectangle
                                                            x:Name="Accent"
                                                            Width="4"
                                                            HorizontalAlignment="Left"
                                                            Fill="{StaticResource RowSelectedAccent}"
                                                            Visibility="Collapsed" />
                                                        <DataGridCellsPresenter Margin="8,0,0,0" />
                                                    </Grid>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="RowBorder" Property="Background" Value="{StaticResource RowHoverBrush}" />
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <!--  keep overall row fill subtle; show left accent instead of full fill  -->
                                                        <Setter TargetName="Accent" Property="Visibility" Value="Visible" />
                                                        <Setter TargetName="RowBorder" Property="Background" Value="White" />
                                                    </Trigger>
                                                    <Trigger Property="AlternationIndex" Value="1">
                                                        <Setter TargetName="RowBorder" Property="Background" Value="{Binding RelativeSource={RelativeSource AncestorType=DataGrid}, Path=AlternatingRowBackground}" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DataGrid.RowStyle>

                            <!--  Cell Style: flat, no focus rectangle, consistent padding  -->
                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Padding" Value="12,0" />
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridCell">
                                                <Border Background="{TemplateBinding Background}">
                                                    <TextBlock
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        FontSize="24"
                                                        TextTrimming="CharacterEllipsis">
                                                        <ContentPresenter />
                                                    </TextBlock>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DataGrid.CellStyle>

                            <!--  Define the columns (unchanged structure, badges and ellipses preserved)  -->
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="*"
                                    MinWidth="100"
                                    Binding="{Binding Title}"
                                    Header="Title" />
                                <DataGridTextColumn
                                    Width="*"
                                    MinWidth="150"
                                    Binding="{Binding Category}"
                                    Header="Category" />
                                <DataGridTextColumn
                                    Width="*"
                                    MinWidth="120"
                                    Binding="{Binding Country}"
                                    Header="Country" />
                                <DataGridTextColumn
                                    Width="*"
                                    MinWidth="150"
                                    Binding="{Binding DonationGoal}"
                                    Header="Donation Goal" />
                                <DataGridTextColumn
                                    Width="*"
                                    MinWidth="100"
                                    Binding="{Binding DonationRaised}"
                                    Header="Donation Raised" />

                                <DataGridTemplateColumn
                                    Width="*"
                                    MinWidth="100"
                                    Header="Status">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                Grid.Row="1"
                                                Grid.Column="4"
                                                TextWrapping="Wrap">

                                                <InlineUIContainer>
                                                    <Border Padding="6,2" CornerRadius="10">
                                                        <TextBlock
                                                            MinWidth="70"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            FontSize="14"
                                                            Text="{Binding Status}"
                                                            TextAlignment="Center">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Status}" Value="in review">
                                                                            <Setter Property="Foreground" Value="#856404" />
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Verified">
                                                                            <Setter Property="Foreground" Value="#1B5E20" />
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Rejected">
                                                                            <Setter Property="Foreground" Value="#721C24" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>

                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Status}" Value="in review">
                                                                        <Setter Property="Background" Value="#FFF3CD" />
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Verified">
                                                                        <Setter Property="Background" Value="#C8E6C9" />
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Rejected">
                                                                        <Setter Property="Background" Value="#F8D7DA" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                    </Border>
                                                </InlineUIContainer>
                                            </TextBlock>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTextColumn
                                    Width="*"
                                    MinWidth="90"
                                    Binding="{Binding CreatedAt}"
                                    Header="Created At" />

                                <DataGridTemplateColumn Width="50">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>

                                            <Menu Background="Transparent" BorderBrush="Transparent">
                                                <MenuItem Style="{DynamicResource Services_MenuItem_With_Dropdown}">
                                                    <MenuItem.Header>
                                                        <Grid>
                                                            <Viewbox
                                                                Width="20"
                                                                Height="20"
                                                                HorizontalAlignment="Center">
                                                                <Path
                                                                    Width="20"
                                                                    Height="20"
                                                                    HorizontalAlignment="Center"
                                                                    Data="M240-400q-33 0-56.5-23.5T160-480q0-33 23.5-56.5T240-560q33 0 56.5 23.5T320-480q0 33-23.5 56.5T240-400Zm240 0q-33 0-56.5-23.5T400-480q0-33 23.5-56.5T480-560q33 0 56.5 23.5T560-480q0 33-23.5 56.5T480-400Zm240 0q-33 0-56.5-23.5T640-480q0-33 23.5-56.5T720-560q33 0 56.5 23.5T800-480q0 33-23.5 56.5T720-400Z"
                                                                    Fill="Black"
                                                                    Stretch="Uniform" />
                                                            </Viewbox>
                                                        </Grid>
                                                    </MenuItem.Header>

                                                    <MenuItem
                                                        Command="{Binding DataContext.NavigateToCampaignDetails, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding Id}"
                                                        Cursor="Hand"
                                                        Header="Review" />
                                                </MenuItem>
                                            </Menu>

                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                    <StackPanel Margin="0,100,0,0" HorizontalAlignment="Center">
                        <Image
                            Width="250"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Source="/Assets/Images/emptyTable.png">
                            <Image.Visibility>
                                <Binding Converter="{StaticResource EmptyToVis}" Path="PendingCampaigns" />
                            </Image.Visibility>
                        </Image>
                        <TextBlock
                            Margin="0,20,0,0"
                            FontSize="25"
                            FontWeight="Bold"
                            Foreground="#00695C"
                            Text="No Campaigns As Of Now">
                            <TextBlock.Visibility>
                                <Binding Converter="{StaticResource EmptyToVis}" Path="PendingCampaigns" />
                            </TextBlock.Visibility>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>


            </StackPanel>


        </ScrollViewer>
    </Grid>
</UserControl>
