<UserControl x:Class="GreenBill.MVVM.View.WithdrawPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GreenBill.MVVM.View"
             mc:Ignorable="d" 
             xmlns:components="clr-namespace:GreenBill.Components"
             d:DesignHeight="900" d:DesignWidth="1400"
             Background="#F5F5F5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <components:SuccessToast Grid.ColumnSpan="2"
                                 Panel.ZIndex="999"
                  IsVisible="{Binding ShowSuccessMessage, Converter={StaticResource BooleanToVisibilityConverter}}"
                  Title="Success!"
                  Message="Withdrawn successfully."/>

        <components:LoadingOverlay Grid.ColumnSpan="2"
                                      Panel.ZIndex="999"
                            IsVisible="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                            LoadingText="Please wait..."/>

        <!-- LEFT SECTION - Withdraw Form -->
        <StackPanel Grid.Column="0" Margin="40,40,20,40" VerticalAlignment="Top">
            <Button Content="Back"
                    Margin="0,0,0,0"
                    Style="{StaticResource BackButtonStyle}"
                    HorizontalAlignment="Left"
                    Command="{Binding BackCommand}"/>

            <TextBlock Text="Withdraw Funds" FontSize="28" FontWeight="Bold" Foreground="#00695C" Margin="0,0,0,30"/>

            <!-- Balance Cards -->
            <Grid Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Available Balance Card -->
                <Border Grid.Column="0" Background="#00A651" CornerRadius="12" Padding="20" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="Available to Withdraw" FontSize="12" Foreground="#FFFFFF" Opacity="0.9" Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding WithdrawableAmount, StringFormat='₱ {0:N2}'}" FontSize="24" FontWeight="Bold" Foreground="#FFFFFF"/>
                    </StackPanel>
                </Border>

                <!-- Already Withdrawn Card -->
                <Border Grid.Column="1" Background="#00695C" CornerRadius="12" Padding="20" Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Already Withdrawn" FontSize="12" Foreground="#FFFFFF" Opacity="0.9" Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding WithdrawedAmount, StringFormat='₱ {0:N2}'}" FontSize="24" FontWeight="Bold" Foreground="#FFFFFF"/>
                    </StackPanel>
                </Border>

            </Grid>

            <!-- Withdraw Form Card -->
            <Border Background="#FFFFFF" CornerRadius="12" Padding="25">
                <StackPanel>
                    <TextBlock Text="Withdraw Amount" FontSize="16" FontWeight="SemiBold" Foreground="#00695C" Margin="0,0,0,15"/>

                    <!-- Amount Input -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Amount (₱)" FontSize="12" Foreground="#666666" Margin="0,0,0,8"/>
                        <Border Background="#F9F9F9" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="12">
                            <TextBox Text="{Binding Amount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="14" Foreground="#333333" Background="Transparent" BorderThickness="0" TextAlignment="Right"/>
                        </Border>
                    </StackPanel>

                    <!-- Bank Account Type Selection -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Bank Account Type" FontSize="12" Foreground="#666666" Margin="0,0,0,8"/>
                        <Border Background="#F9F9F9" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="0">
                            <ComboBox 
                                Height="40"
                                ItemsSource="{Binding BankAccounts}"
                                SelectedItem="{Binding SelectedBankAccount, Mode=TwoWay}"
                                Style="{StaticResource ComboBox}"
                                ItemContainerStyle="{StaticResource ComboBoxItem}">
                            </ComboBox>
                        </Border>
                    </StackPanel>

                    <!-- Account Number Input -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Account Number" FontSize="12" Foreground="#666666" Margin="0,0,0,8"/>
                        <Border Background="#F9F9F9" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="12">
                            <TextBox Text="{Binding AccountNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                     FontSize="14" 
                                     Foreground="#333333" 
                                     Background="Transparent" 
                                     BorderThickness="0"/>
                        </Border>
                    </StackPanel>



                    <!-- Withdraw Button -->
                    <Button Cursor="Hand" Command="{Binding Withdraw}" Background="#00A651" Foreground="#FFFFFF" FontSize="14" FontWeight="SemiBold" Padding="15" Margin="0,0,0,10">
                        Request Withdrawal
                    </Button>

                    <!-- Cancel Button -->
                    <Button Background="#E8E8E8" Foreground="#666666" FontSize="14" FontWeight="SemiBold" Padding="15" Command="{Binding BackCommand}">
                        Cancel
                    </Button>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- RIGHT SECTION - Withdrawal History -->
        <StackPanel Grid.Column="1" Margin="20,40,40,40">
            <TextBlock Text="Withdrawal History" FontSize="28" FontWeight="Bold" Foreground="#00695C" Margin="0,0,0,20"/>

            <!-- History List -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,0,0,0">
                <StackPanel>

                    <ItemsControl x:Name="UpdatesItemsControl" ItemsSource="{Binding WithdrawalRocords}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>

                                <Border Background="#FFFFFF" CornerRadius="12" Padding="20" Margin="0,0,0,12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="{Binding AccountNumber}" FontSize="14" FontWeight="SemiBold" Foreground="#333333"/>
                                        <TextBlock Grid.Row="1" Text="{Binding BankAccount}" FontSize="11" Foreground="#999999" Margin="0,4,0,0"/>
                                        <TextBlock Grid.Row="2" Text="{Binding CreatedAt, StringFormat='MMM dd, yyyy hh:mm tt'}" FontSize="10" Foreground="#CCCCCC" Margin="0,6,0,0"/>

                                        <StackPanel Grid.Column="1" Grid.RowSpan="3" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Amount, StringFormat='₱ {0:N2}'}" FontSize="16" FontWeight="Bold" Foreground="#00A651" TextAlignment="Right"/>
                                            <Border Background="#A8E6A3" CornerRadius="4" Padding="6,4" Margin="0,6,0,0">
                                                <TextBlock Text="Completed" FontSize="10" Foreground="#00695C" FontWeight="SemiBold"/>
                                            </Border>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>



                </StackPanel>
            </ScrollViewer>
        </StackPanel>
    </Grid>

</UserControl>