<UserControl x:Class="GreenBill.MVVM.View.FundraisingSteps.FirstStep"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GreenBill.MVVM.View.FundraisingSteps"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1400"
             Background="#F5F5F5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Side - Welcome Content -->
        <StackPanel Grid.Column="0" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Margin="50">

            <!-- Logo/Icon placeholder -->
            <Image Source="/Assets/Images/logo.png"
                Height="60"
            />

            <TextBlock Text="Let's begin your fundraising journey"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#333333"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>

            <TextBlock Text="We're here to guide you every step of the way."
                       FontSize="16"
                       Foreground="#666666"
                       TextAlignment="Center"
                       Margin="0,0,0,40"/>
        </StackPanel>

        <!-- Right Side - Form Content -->
        <StackPanel Grid.Column="1" 
                    VerticalAlignment="Center" 
                    Margin="50,50,100,50">

            <!-- Location Section -->
            <TextBlock Text="Where are you located?"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="#333333"
                       Margin="0,0,0,8"/>

            <TextBlock Text="We use your location to determine your currency."
                       FontSize="14"
                       Foreground="#666666"
                       Margin="0,0,0,15"/>

            <Grid Margin="0,0,0,40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <!-- Country ComboBox -->
                <ComboBox Grid.Column="0"
                         Height="40"
                         Margin="0,0,15,0"
                         Style="{StaticResource ComboBox}"
                         ItemContainerStyle="{StaticResource ComboBoxItem}">
                    <ComboBoxItem Content="United States" IsSelected="True"/>
                    <ComboBoxItem Content="Canada"/>
                    <ComboBoxItem Content="United Kingdom"/>
                    <ComboBoxItem Content="Australia"/>
                    <ComboBoxItem Content="Germany"/>
                    <ComboBoxItem Content="France"/>
                    <ComboBoxItem Content="Other"/>
                </ComboBox>

                <!-- Zip Code TextBox -->
                <TextBox Grid.Column="1"
                        Height="40"
                        VerticalContentAlignment="Center"
                        Padding="10,0"
                        BorderBrush="#CCCCCC"
                        BorderThickness="1"
                        Background="White">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="{TemplateBinding Background}"
                                               BorderBrush="{TemplateBinding BorderBrush}"
                                               BorderThickness="{TemplateBinding BorderThickness}"
                                               CornerRadius="4">
                                            <Grid>
                                                <TextBlock Text="Zip code"
                                                          Foreground="#999999"
                                                          Margin="10,0"
                                                          VerticalAlignment="Center"/>
                                                <ScrollViewer x:Name="PART_ContentHost"
                                                             VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </Grid>

            <!-- Fundraising Purpose Section -->
            <TextBlock Text="What best describes why you're fundraising?"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="#333333"
                       Margin="0,0,0,20"/>

            <!-- Category Buttons - Row 1 -->
            <WrapPanel Margin="0,0,0,15">
                <Button Content="Happening worldwide" 
                        Style="{StaticResource CategoryButton}"
                        Margin="0,0,10,10"/>
                <Button Content="Local projects" 
                        Style="{StaticResource CategoryButton}"
                        Margin="0,0,10,10"/>
                <Button Content="Emergency relief" 
                        Style="{StaticResource CategoryButton}"
                        Margin="0,0,10,10"/>
                <Button Content="Medical fundraisers" 
                        Style="{StaticResource CategoryButton}"
                        Margin="0,0,10,10"/>
                <Button Content="Environmental causes" 
                        Style="{StaticResource CategoryButton}"
                        Margin="0,0,10,10"/>
            </WrapPanel>

        

            <!-- Continue Button -->
            <Button Content="Continue"
                    Style="{StaticResource PrimaryButton}"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>