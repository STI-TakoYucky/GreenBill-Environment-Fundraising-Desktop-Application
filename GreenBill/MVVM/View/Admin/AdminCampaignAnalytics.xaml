<UserControl
    x:Class="GreenBill.MVVM.View.Admin.AdminCampaignAnalytics"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:admin="clr-namespace:GreenBill.MVVM.ViewModel.Admin"
    xmlns:conv="clr-namespace:GreenBill.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GreenBill.MVVM.View.Admin"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="900"
    d:DesignWidth="1400"
    Background="#f4f4f4"
    mc:Ignorable="d">

    <UserControl.Resources>

        <!--  Tab Button Style  -->
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#666666" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="20,15" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="#E0E0E0"
                            BorderThickness="0,0,0,2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#4CAF50" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Active Tab Style  -->
        <Style x:Key="ActiveTabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#4CAF50" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="20,15" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="#4CAF50"
                            BorderThickness="0,0,0,2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ResourceDictionary x:Key="Dropdownstyles">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/DropdownButton.xaml" />
                <ResourceDictionary Source="/Styles/Buttons.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

        <conv:BoolToTabStyleConverter
            x:Key="TabStyleConverter"
            ActiveStyle="{StaticResource ActiveTabButtonStyle}"
            InactiveStyle="{StaticResource TabButtonStyle}" />
    </UserControl.Resources>

    <Grid>
        <ScrollViewer Padding="30,0,30,0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock
                    Margin="0,20,0,0"
                    FontSize="24"
                    FontWeight="SemiBold"
                    Text="Campaigns" />

                <Grid Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*" />
                        <ColumnDefinition Width="25*" />
                        <ColumnDefinition Width="25*" />
                        <ColumnDefinition Width="25*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  TOTAL USERS  -->
                    <Border
                        Grid.Column="0"
                        Margin="0,0,15,0"
                        Background="White"
                        CornerRadius="12">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="8"
                                Opacity="0.08"
                                ShadowDepth="2"
                                Color="#000000" />
                        </Border.Effect>
                        <StackPanel Margin="25,20">
                            <TextBlock
                                Margin="0,0,0,8"
                                FontSize="14"
                                Foreground="#666666"
                                Text="Total Campaigns" />
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="#00A86B"
                                Text="{Binding CampaignCount}" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,5,0"
                                    FontSize="16"
                                    Foreground="#00A86B"
                                    Text="↗" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="#00A86B"
                                    Text="12.5% from last month" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!--  Total Campaigns Card  -->
                    <Border
                        Grid.Column="1"
                        Margin="0,0,15,0"
                        Background="White"
                        CornerRadius="12">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="8"
                                Opacity="0.08"
                                ShadowDepth="2"
                                Color="#000000" />
                        </Border.Effect>
                        <StackPanel Margin="25,20">
                            <TextBlock
                                Margin="0,0,0,8"
                                FontSize="14"
                                Foreground="#666666"
                                Text="Active Campaigns" />
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="#3498DB"
                                Text="{Binding ApprovedCampaignsCount}" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,5,0"
                                    FontSize="16"
                                    Foreground="#00A86B"
                                    Text="↗" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="#00A86B"
                                    Text="8.2% from last month" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!--  Active Campaigns Card  -->
                    <Border
                        Grid.Column="2"
                        Margin="0,0,15,0"
                        Background="White"
                        CornerRadius="12">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="8"
                                Opacity="0.08"
                                ShadowDepth="2"
                                Color="#000000" />
                        </Border.Effect>
                        <StackPanel Margin="25,20">
                            <TextBlock
                                Margin="0,0,0,8"
                                FontSize="14"
                                Foreground="#666666"
                                Text="Pending Campaigns" />
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="#9B59B6"
                                Text="{Binding PendingCampaignsCount}" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,5,0"
                                    FontSize="16"
                                    Foreground="#666666"
                                    Text="→" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="#666666"
                                    Text="No change" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!--  Pending Campaigns Card  -->
                    <Border
                        Grid.Column="3"
                        Margin="0,0,15,0"
                        Background="White"
                        CornerRadius="12">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="8"
                                Opacity="0.08"
                                ShadowDepth="2"
                                Color="#000000" />
                        </Border.Effect>
                        <StackPanel Margin="25,20">
                            <TextBlock
                                Margin="0,0,0,8"
                                FontSize="14"
                                Foreground="#666666"
                                Text="Reported Campaigns" />
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="#E67E22"
                                Text="2" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,5,0"
                                    FontSize="16"
                                    Foreground="#00A86B"
                                    Text="↗" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="#00A86B"
                                    Text="3.8% from last month" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                </Grid>

                <StackPanel Margin="0,40,0,40">
                    <StackPanel Margin="0,0,0,20">
                        <Grid>
                            <!--  Bottom line under all tabs  -->
                            <Border
                                Height="2"
                                VerticalAlignment="Bottom"
                                Background="Transparent"
                                BorderBrush="#E0E0E0"
                                BorderThickness="0,0,0,2" />

                            <!--  Tabs  -->
                            <StackPanel Orientation="Horizontal">
                                <Button
                                    Command="{Binding SelectAllCampaigns}"
                                    Content="All"
                                    Style="{Binding IsAllCampaignsActive, Converter={StaticResource TabStyleConverter}}" />

                                <Button
                                    Command="{Binding SelectVerifiedCampaigns}"
                                    Content="Verified"
                                    Style="{Binding IsVerifiedCampaignsActive, Converter={StaticResource TabStyleConverter}}" />
                                <Button
                                    Command="{Binding SelectPendingCampaigns}"
                                    Content="Pending Verification"
                                    Style="{Binding IsPendingCampaignsActive, Converter={StaticResource TabStyleConverter}}" />
                                <Button
                                    Command="{Binding SelectRejectedCampaigns}"
                                    Content="Rejected"
                                    Style="{Binding IsRejectedCampaignsActive, Converter={StaticResource TabStyleConverter}}" />
                                <Button Content="Reported" Style="{StaticResource TabButtonStyle}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <DataGrid
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        AutoGenerateColumns="False"
                        BorderThickness="0"
                        CanUserAddRows="False"
                        CanUserDeleteRows="False"
                        CanUserReorderColumns="False"
                        CanUserResizeColumns="True"
                        CanUserSortColumns="False"
                        GridLinesVisibility="None"
                        HeadersVisibility="Column"
                        ItemsSource="{Binding Campaigns}"
                        RowHeight="50"
                        ScrollViewer.HorizontalScrollBarVisibility="Auto"
                        ScrollViewer.VerticalScrollBarVisibility="Auto">

                        <DataGrid.Resources>
                            <!--  Remove selection style  -->
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent" />
                            <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent" />
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black" />
                            <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="Transparent" />
                            <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" Color="Black" />
                        </DataGrid.Resources>


                        <!--  Header Style  -->
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#e1e7e9" />
                                <Setter Property="Foreground" Value="#333" />
                                <Setter Property="FontWeight" Value="SemiBold" />
                                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                <Setter Property="FontSize" Value="14" />
                                <Setter Property="Padding" Value="10,20" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="HorizontalContentAlignment" Value="Left" />
                                <!--  Override default template to prevent implicit bold  -->
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridColumnHeader">
                                            <Border
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="5">
                                                <ContentPresenter
                                                    Margin="{TemplateBinding Padding}"
                                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                    VerticalAlignment="Center"
                                                    RecognizesAccessKey="True" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <!--  Row Style  -->
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="FontSize" Value="14" />
                                <Setter Property="BorderThickness" Value="0,0,0,1" />
                                <Setter Property="BorderBrush" Value="#e1e7e9" />
                            </Style>
                        </DataGrid.RowStyle>

                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="10,0" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.CellStyle>

                        <!--  Define the columns  -->
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                MinWidth="50"
                                Binding="{Binding Id}"
                                Header="ID" />
                            <DataGridTextColumn
                                MinWidth="50"
                                Binding="{Binding UserId}"
                                Header="UserID" />
                            <DataGridTextColumn
                                MinWidth="120"
                                Binding="{Binding Country}"
                                Header="Country" />
                            <DataGridTextColumn
                                MinWidth="150"
                                Binding="{Binding ZipCode}"
                                Header="ZipCode" />
                            <DataGridTextColumn
                                MinWidth="150"
                                Binding="{Binding Category}"
                                Header="Category" />
                            <DataGridTextColumn
                                MinWidth="150"
                                Binding="{Binding DonationGoal}"
                                Header="Donation Goal" />
                            <DataGridTextColumn
                                MinWidth="200"
                                Binding="{Binding DonationRaised}"
                                Header="Donation Raised" />
                            <DataGridTextColumn
                                MinWidth="150"
                                Binding="{Binding Image}"
                                Header="Image" />
                            <DataGridTextColumn
                                MinWidth="100"
                                Binding="{Binding Title}"
                                Header="Title" />
                            <DataGridTextColumn
                                MinWidth="100"
                                Binding="{Binding Description}"
                                Header="Description" />
                            <DataGridTextColumn
                                MinWidth="150"
                                Binding="{Binding CreatedAt}"
                                Header="Created At" />
                            <DataGridTemplateColumn MinWidth="100" Header="Status">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="4"
                                            TextWrapping="Wrap">

                                            <InlineUIContainer>
                                                <Border Padding="6,2" CornerRadius="10">
                                                    <TextBlock
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        FontSize="14"
                                                        Text="{Binding Status}">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Status}" Value="in review">
                                                                        <Setter Property="Foreground" Value="#856404" />
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Verified">
                                                                        <Setter Property="Foreground" Value="#1B5E20" />
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Rejected">
                                                                        <Setter Property="Foreground" Value="#721C24" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>

                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}" Value="in review">
                                                                    <Setter Property="Background" Value="#FFF3CD" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Verified">
                                                                    <Setter Property="Background" Value="#C8E6C9" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Rejected">
                                                                    <Setter Property="Background" Value="#F8D7DA" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                </Border>
                                            </InlineUIContainer>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Width="50">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>

                                        <Menu Background="Transparent" BorderBrush="Transparent">
                                            <MenuItem Style="{DynamicResource Services_MenuItem_With_Dropdown}">
                                                <MenuItem.Header>
                                                    <Grid>
                                                        <Viewbox
                                                            Width="20"
                                                            Height="20"
                                                            HorizontalAlignment="Center">
                                                            <Button Style="{StaticResource circleBtn}">
                                                                <Path
                                                                    Width="20"
                                                                    Height="20"
                                                                    HorizontalAlignment="Center"
                                                                    Data="M240-400q-33 0-56.5-23.5T160-480q0-33 23.5-56.5T240-560q33 0 56.5 23.5T320-480q0 33-23.5 56.5T240-400Zm240 0q-33 0-56.5-23.5T400-480q0-33 23.5-56.5T480-560q33 0 56.5 23.5T560-480q0 33-23.5 56.5T480-400Zm240 0q-33 0-56.5-23.5T640-480q0-33 23.5-56.5T720-560q33 0 56.5 23.5T800-480q0 33-23.5 56.5T720-400Z"
                                                                    Fill="Black"
                                                                    Stretch="Uniform" />
                                                            </Button>
                                                        </Viewbox>
                                                    </Grid>
                                                </MenuItem.Header>

                                                <MenuItem
                                                    Command="{Binding DataContext.NavigateToCampaignDetails, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding Id}"
                                                    Cursor="Hand"
                                                    Header="Review" />
                                            </MenuItem>
                                        </Menu>

                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>



            </StackPanel>

        </ScrollViewer>
    </Grid>
</UserControl>

