<UserControl x:Class="GreenBill.MVVM.View.SupportingDocumentsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GreenBill.MVVM.View"
             mc:Ignorable="d" 
             Background="#FFFFFF"
             d:DesignHeight="900" d:DesignWidth="1400">

    <UserControl.Resources>
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black"
                                BlurRadius="20"
                                Opacity="0.08"
                                ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="UploadZone" TargetType="Border">
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="BorderBrush" Value="#00BCD4"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F8FF"/>
                    <Setter Property="BorderBrush" Value="#0097A7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#00BCD4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0097A7"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                    <Setter Property="BorderBrush" Value="#CCCCCC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DocumentItem" TargetType="Border">
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="BorderBrush" Value="#E5E5E5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                    <Setter Property="BorderBrush" Value="#D0D0D0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="StatusBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12,4"/>
        </Style>

        <Style x:Key="StatusText" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="12"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}" Value="Verified">
                    <Setter Property="Foreground" Value="#27AE60"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Approved">
                    <Setter Property="Foreground" Value="#27AE60"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Pending">
                    <Setter Property="Foreground" Value="#F39C12"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Under Review">
                    <Setter Property="Foreground" Value="#F39C12"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Rejected">
                    <Setter Property="Foreground" Value="#E74C3C"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Requires Attention">
                    <Setter Property="Foreground" Value="#E74C3C"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid Grid.Row="0" Margin="72,40,0,0">
                <Button Content="Back"
                        Style="{StaticResource BackButtonStyle}"
                        HorizontalAlignment="Left"
                        Command="{Binding GoBackCommand}"/>
            </Grid>
        </Grid>

        <Grid Grid.Row="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="32" Margin="0">
                <StackPanel MaxWidth="1200">

                    <StackPanel Margin="0,0,0,40">
                        <TextBlock Text="Supporting Documents"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="#2C3E50"
                                   Margin="0,0,0,12"/>

                        <TextBlock Text="Upload and manage documents to verify your campaign. All documents are reviewed by our team to ensure authenticity and build trust with donors."
                                   FontSize="16"
                                   Foreground="#7F8C8D"
                                   TextWrapping="Wrap"
                                   LineHeight="24"
                                   MaxWidth="800"
                                   HorizontalAlignment="Left"/>
                    </StackPanel>

                    <Border Style="{StaticResource ModernCard}"
                            Margin="0,0,0,32"
                            Padding="32">
                        <StackPanel>
                            <TextBlock Text="Upload New Document"
                                      FontWeight="SemiBold"
                                      FontSize="20"
                                      Foreground="#2C3E50"
                                      Margin="0,0,0,20"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Style="{StaticResource UploadZone}"
                                        Height="160"
                                        Name="UploadZone">
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="📄"
                                                   FontSize="48"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,16"/>

                                        <TextBlock FontWeight="SemiBold"
                                                   FontSize="16"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,8">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="Drop files here or click to browse"/>
                                                    <Setter Property="Foreground" Value="#00BCD4"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding HasSelectedFile}" Value="True">
                                                            <Setter Property="Text" Value="{Binding SelectedFileName}"/>
                                                            <Setter Property="Foreground" Value="#2C3E50"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <TextBlock Text="Supported formats: PDF, JPG, PNG, DOC, DOCX"
                                                   FontSize="12"
                                                   Foreground="#999999"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,4"/>
                                        <TextBlock Text="Maximum file size: 25MB"
                                                   FontSize="12"
                                                   Foreground="#999999"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <StackPanel Grid.Column="2" VerticalAlignment="Top">
                                    <TextBlock Text="Document Type"
                                              FontWeight="Medium"
                                              FontSize="14"
                                              Foreground="#2C3E50"
                                              Margin="0,0,0,8"/>

                                    <ComboBox Width="370"
                                              HorizontalAlignment="Left"
                                              Margin="0,0,0,30"
                                              Height="40"
                                              Style="{StaticResource ComboBox}"
                                              ItemContainerStyle="{StaticResource ComboBoxItem}"
                                              ItemsSource="{Binding DocumentTypes}"
                                              SelectedItem="{Binding SelectedDocumentType}"/>

                                    <TextBlock Text="Document Name"
                                              FontWeight="Medium"
                                              FontSize="14"
                                              Foreground="#2C3E50"
                                              Margin="0,0,0,8"/>

                                    <TextBox Name="DocumentNameTextBox"
                                            Padding="12,10"
                                            FontSize="14"
                                            BorderBrush="#DDDDDD"
                                            BorderThickness="1"
                                            Background="White"
                                            Margin="0,0,0,20"
                                            Text="{Binding DocumentName, UpdateSourceTrigger=PropertyChanged}">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="TextBox">
                                                            <Border Background="{TemplateBinding Background}"
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                                    CornerRadius="8">
                                                                <ScrollViewer x:Name="PART_ContentHost"
                                                                            Margin="{TemplateBinding Padding}"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>

                                    <Button Content="Upload Document"
                                           Style="{StaticResource PrimaryButton}"
                                           Name="UploadButton"
                                           Command="{Binding UploadDocumentCommand}"
                                           IsEnabled="{Binding CanUpload}"
                                           Click="UploadButton_Click"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <Border Style="{StaticResource ModernCard}"
                            Margin="0,0,0,32"
                            Padding="24"
                            Name="ProgressSection"
                            Visibility="{Binding IsUploadingVisibility}">
                        <StackPanel>
                            <Grid Margin="0,0,0,12">
                                <TextBlock Text="Uploading..."
                                          FontWeight="SemiBold"
                                          FontSize="16"
                                          Foreground="#2C3E50"
                                          HorizontalAlignment="Left"/>
                                <TextBlock Text="{Binding UploadProgress}"
                                          FontSize="14"
                                          Foreground="#7F8C8D"
                                          HorizontalAlignment="Right"/>
                            </Grid>

                            <Border Background="#F0F0F0"
                                   CornerRadius="8"
                                   Height="8">
                                <Border Background="#00BCD4"
                                       CornerRadius="8"
                                       HorizontalAlignment="Left">
                                    <Border.Width>
                                        <Binding Path="UploadProgress" Converter="{StaticResource ProgressToWidthConverter}"/>
                                    </Border.Width>
                                </Border>
                            </Border>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource ModernCard}"
                            Margin="0,0,0,32"
                            Padding="32">
                        <StackPanel>
                            <Grid Margin="0,0,0,24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel>
                                    <TextBlock Text="Your Documents"
                                              FontWeight="SemiBold"
                                              FontSize="20"
                                              Foreground="#2C3E50"
                                              Margin="0,0,0,4"/>
                                    <TextBlock Text="{Binding DocumentsOverviewText}"
                                              FontSize="14"
                                              Foreground="#7F8C8D"/>
                                </StackPanel>

                                <Button Content="🔄 Refresh"
                                       Style="{StaticResource SecondaryButton}"
                                       Command="{Binding RefreshDocumentsCommand}"
                                       Grid.Column="1"
                                       VerticalAlignment="Center"/>
                            </Grid>

                            <ItemsControl ItemsSource="{Binding Documents}" Name="DocumentsList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource DocumentItem}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Border Grid.Column="0"
                                                       Background="#E8F4FD"
                                                       CornerRadius="8"
                                                       Width="48"
                                                       Height="48"
                                                       Margin="0,0,16,0">
                                                    <TextBlock Text="📄"
                                                              FontSize="20"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                                </Border>

                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding DocumentName}"
                                                              FontWeight="SemiBold"
                                                              FontSize="16"
                                                              Foreground="#2C3E50"
                                                              Margin="0,0,0,4"/>

                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding DocumentType}"
                                                                  FontSize="14"
                                                                  Foreground="#7F8C8D"
                                                                  Margin="0,0,12,0"/>
                                                        <TextBlock Text="•"
                                                                  FontSize="14"
                                                                  Foreground="#BDC3C7"
                                                                  Margin="0,0,12,0"/>
                                                        <TextBlock FontSize="14"
                                                                  Foreground="#7F8C8D"
                                                                  Margin="0,0,12,0">
                                                            <TextBlock.Text>
                                                                <MultiBinding StringFormat="{}{0:F1} MB">
                                                                    <Binding Path="FileSize" Converter="{StaticResource BytesToMBConverter}"/>
                                                                </MultiBinding>
                                                            </TextBlock.Text>
                                                        </TextBlock>
                                                        <TextBlock Text="•"
                                                                  FontSize="14"
                                                                  Foreground="#BDC3C7"
                                                                  Margin="0,0,12,0"/>
                                                        <TextBlock Text="{Binding UploadDate, StringFormat='MMM dd, yyyy'}"
                                                                  FontSize="14"
                                                                  Foreground="#7F8C8D"/>
                                                    </StackPanel>

                                                    <TextBlock Text="{Binding ReviewComments}"
                                                              FontSize="12"
                                                              Foreground="#E74C3C"
                                                              FontStyle="Italic"
                                                              Margin="0,4,0,0"
                                                              TextWrapping="Wrap"
                                                              Visibility="{Binding ReviewComments, Converter={StaticResource StringToVisibilityConverter}}"/>
                                                </StackPanel>

                                                <Border Grid.Column="2"
                                                       Style="{StaticResource StatusBadge}"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,16,0">

                                                    <TextBlock Text="{Binding Status}"
                                                              Style="{StaticResource StatusText}"/>
                                                </Border>

                                                <Button Grid.Column="3"
                                                       Content="🗑️"
                                                       FontSize="16"
                                                       Width="32"
                                                       Height="32"
                                                       Background="Transparent"
                                                       BorderThickness="0"
                                                       Cursor="Hand"
                                                       VerticalAlignment="Center"
                                                       Command="{Binding DataContext.DeleteDocumentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                       CommandParameter="{Binding}"
                                                       ToolTip="Delete Document">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border Background="{TemplateBinding Background}"
                                                                               CornerRadius="16">
                                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                                            VerticalAlignment="Center"/>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#FFE5E5"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                      
                        </StackPanel>
                    </Border>

                    <Border Background="#F8F9FA"
                            CornerRadius="16"
                            Padding="32"
                            BorderBrush="#E9ECEF"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Document Guidelines and Support"
                                      FontWeight="SemiBold"
                                      FontSize="18"
                                      Foreground="#2C3E50"
                                      Margin="0,0,0,16"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="📋 Document Requirements"
                                              FontWeight="Medium"
                                              FontSize="14"
                                              Foreground="#2C3E50"
                                              Margin="0,0,0,8"/>
                                    <TextBlock FontSize="13"
                                              Foreground="#7F8C8D"
                                              TextWrapping="Wrap"
                                              Margin="0,0,0,16">
                                        • Files must be clear and readable<LineBreak/>
                                        • Maximum file size: 25MB<LineBreak/>
                                        • Supported formats: PDF, JPG, PNG, DOC, DOCX<LineBreak/>
                                        • Personal information should be visible
                                    </TextBlock>

                                    <TextBlock Text="⏱️ Review Process"
                                              FontWeight="Medium"
                                              FontSize="14"
                                              Foreground="#2C3E50"
                                              Margin="0,0,0,8"/>
                                    <TextBlock FontSize="13"
                                              Foreground="#7F8C8D"
                                              TextWrapping="Wrap">
                                        Documents are typically reviewed within 2-3 business days. You'll receive notifications about status changes.
                                    </TextBlock>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="🎯 Need Help?"
                                              FontWeight="Medium"
                                              FontSize="14"
                                              Foreground="#2C3E50"
                                              Margin="0,0,0,8"/>
                                    <TextBlock FontSize="13"
                                              Foreground="#7F8C8D"
                                              TextWrapping="Wrap"
                                              Margin="0,0,0,20">
                                        Our support team is available 24/7 to help with document uploads, verification questions, and technical issues.
                                    </TextBlock>

                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Contact Support"
                                               Style="{StaticResource SecondaryButton}"
                                               Margin="0,0,12,0"/>
                                        <Button Content="View FAQ"
                                               Style="{StaticResource SecondaryButton}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>