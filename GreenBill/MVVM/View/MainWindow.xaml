<Window x:Class="GreenBill.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GreenBill"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="900" Width="1400"
        Background="#F5F5F5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0"
            Visibility="{Binding ShowNavigation, Converter={StaticResource BooleanToVisibilityConverter}}"
            VerticalAlignment="Top"
            Background="White">
            <Image Source="/Assets/Images/logo.png"
            Height="60"
            DockPanel.Dock="Left"
            Margin="100,0,0,0"
            VerticalAlignment="Center"/>
            <StackPanel DockPanel.Dock="Right" 
                Orientation="Horizontal"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Margin="0,0,100,0">

                <Button Content="Start a Change"
             Height="30"
            Command="{Binding GoToStep1}"
             Style="{StaticResource PrimaryButton}"/>

                <Image Source="/Assets/Images/defaultProfile.jpg"
       Width="40"
       Height="40"
       HorizontalAlignment="Center"
       Stretch="UniformToFill"
       Margin="15,0,0,0"
       Visibility="{Binding IsUserLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Image.Clip>
                        <EllipseGeometry Center="20,20" RadiusX="20" RadiusY="20"/>
                    </Image.Clip>
                </Image>

                <Button Content="Sign In"
        FontFamily="./Assets/Fonts/#Poppins"
        FontSize="15"
        Command="{Binding NavigateToSignin}"
        Background="Transparent"
        Foreground="#6E6A6A"
        VerticalAlignment="Center"
        BorderThickness="0"
        FontWeight="Bold"
        Margin="15,0,0,0"
        Visibility="{Binding IsUserLoggedIn, 
                     Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>

            </StackPanel>
        </DockPanel>
        <ContentControl Grid.Row="1" Content="{Binding Navigation.CurrentView}"/>
    </Grid>
</Window>
