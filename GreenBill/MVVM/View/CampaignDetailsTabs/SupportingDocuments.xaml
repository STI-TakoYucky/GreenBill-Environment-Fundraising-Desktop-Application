<UserControl x:Class="GreenBill.MVVM.View.CampaignDetailsTabs.SupportingDocuments"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GreenBill.MVVM.View.CampaignDetailsTabs"
             mc:Ignorable="d" 
             Background="#FFFFFF"
             d:DesignHeight="900" d:DesignWidth="1400">

    <UserControl.Resources>
        <!-- Modern Card Style -->
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" 
                                    BlurRadius="20" 
                                    Opacity="0.08" 
                                    ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Upload Zone Style -->
        <Style x:Key="UploadZone" TargetType="Border">
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="BorderBrush" Value="#00BCD4"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F8FF"/>
                    <Setter Property="BorderBrush" Value="#0097A7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#00BCD4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0097A7"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#00BCD4"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,20"/>
            <Setter Property="BorderBrush" Value="#00BCD4"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F8FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Document Item Style -->
        <Style x:Key="DocumentItem" TargetType="Border">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Status Badge Styles -->
        <Style x:Key="StatusBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>

        <Style x:Key="RequiredBadge" TargetType="Border" BasedOn="{StaticResource StatusBadge}">
            <Setter Property="Background" Value="#FFE5E5"/>
        </Style>

        <Style x:Key="OptionalBadge" TargetType="Border" BasedOn="{StaticResource StatusBadge}">
            <Setter Property="Background" Value="#E8F4F8"/>
        </Style>

        <Style x:Key="UploadedBadge" TargetType="Border" BasedOn="{StaticResource StatusBadge}">
            <Setter Property="Background" Value="#E8F5E8"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0" Margin="0,0,0,0">
        <StackPanel>

            <!-- Page Header -->
            <StackPanel Margin="0,0,0,40">
                <TextBlock Text="Supporting Documents"
                          FontWeight="Bold"
                          FontSize="32"
                          FontFamily="./Assets/Fonts/#Poppins"
                          Foreground="#333333"
                          Margin="0,0,0,12"/>

                <TextBlock Text="Upload documents that validate your campaign and build trust with potential donors. All documents are reviewed by our team to ensure campaign legitimacy."
                          FontSize="16"
                          FontFamily="./Assets/Fonts/#Poppins"
                          Foreground="#666666"
                          TextWrapping="Wrap"
                          LineHeight="24"/>
            </StackPanel>

            <!-- Upload Progress -->
            <Border Style="{StaticResource ModernCard}" 
                    Margin="0,0,0,32" 
                    Padding="24">
                <StackPanel>
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="369*"/>
                            <ColumnDefinition Width="52*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Upload Progress"
                                  FontWeight="SemiBold"
                                  FontSize="18"
                                  Foreground="#333333" Grid.ColumnSpan="2"/>

                        <TextBlock Grid.Column="1"
                                  Text="1 of 3 uploaded"
                                  FontSize="14"
                                  Foreground="#666666"
                                  VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="104,0,0,0"/>
                    </Grid>

                    <!-- Progress Bar -->
                    <Border Background="#F0F0F0"
                           CornerRadius="8"
                           Height="8">
                        <Border Background="#4CAF50"
                               CornerRadius="8"
                               HorizontalAlignment="Left"
                               Width="200"/>
                    </Border>

                    <TextBlock Text="Upload all required documents to submit your campaign for review"
                              FontSize="12"
                              Foreground="#666666"
                              Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- Required Documents Section -->
            <Border Style="{StaticResource ModernCard}" 
                    Margin="0,0,0,24" 
                    Padding="24">
                <StackPanel>
                    <Grid Margin="0,0,0,24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="Required Documents"
                                      FontWeight="SemiBold"
                                      FontSize="20"
                                      Foreground="#333333"
                                      Margin="0,0,0,4"/>
                            <TextBlock Text="These documents are mandatory for campaign approval"
                                      FontSize="14"
                                      Foreground="#666666"/>
                        </StackPanel>

                    </Grid>

                    <!-- Government ID -->
                    <Border Style="{StaticResource DocumentItem}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                   Background="#00BCD4"
                                   CornerRadius="8"
                                   Width="48"
                                   Height="48"
                                   VerticalAlignment="Top"
                                   Margin="0,0,16,0">
                                <TextBlock Text="📄"
                                          FontSize="20"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Government-issued ID"
                                          FontWeight="SemiBold"
                                          FontSize="16"
                                          Foreground="#333333"
                                          Margin="0,0,0,4"/>
                                <TextBlock Text="Upload a clear photo of your driver's license, passport, or national ID card"
                                          FontSize="14"
                                          Foreground="#666666"
                                          TextWrapping="Wrap"
                                          Margin="0,0,0,8"/>
                                <TextBlock Text="Accepted formats: JPG, PNG, PDF • Max size: 10MB"
                                          FontSize="12"
                                          Foreground="#999999"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <Border Style="{StaticResource UploadedBadge}" Margin="0,0,0,8">
                                    <TextBlock Text="✓ Uploaded"
                                              FontWeight="Medium"
                                              FontSize="12"
                                              Foreground="#2E7D2E"/>
                                </Border>
                                <Button Content="Replace"
                                       Style="{StaticResource SecondaryButton}"
                                       Padding="16,8"
                                       FontSize="12"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Campaign Validation -->
                    <Border Style="{StaticResource DocumentItem}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                   Background="#FF9800"
                                   CornerRadius="8"
                                   Width="48"
                                   Height="48"
                                   VerticalAlignment="Top"
                                   Margin="0,0,16,0">
                                <TextBlock Text="📋"
                                          FontSize="20"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Campaign Validation Documents"
                                          FontWeight="SemiBold"
                                          FontSize="16"
                                          Foreground="#333333"
                                          Margin="0,0,0,4"/>
                                <TextBlock Text="Medical reports, receipts, official letters, or any documentation that supports your campaign story"
                                          FontSize="14"
                                          Foreground="#666666"
                                          TextWrapping="Wrap"
                                          Margin="0,0,0,8"/>
                                <TextBlock Text="Accepted formats: JPG, PNG, PDF, DOC • Max size: 20MB per file"
                                          FontSize="12"
                                          Foreground="#999999"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <Border Style="{StaticResource UploadedBadge}" Margin="0,0,0,8">
                                    <TextBlock Text="✓ 2 files uploaded"
                                              FontWeight="Medium"
                                              FontSize="12"
                                              Foreground="#2E7D2E"/>
                                </Border>
                                <Button Content="Add More"
                                       Style="{StaticResource SecondaryButton}"
                                       Padding="16,8"
                                       FontSize="12"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Reference Letters -->
                    <Border Style="{StaticResource DocumentItem}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                Background="#E91E63"
                CornerRadius="8"
                Width="48"
                Height="48"
                VerticalAlignment="Top"
                Margin="0,0,16,0">
                                <TextBlock Text="✉️"
                       FontSize="20"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Reference Letters"
                       FontWeight="SemiBold"
                       FontSize="16"
                       Foreground="#333333"
                       Margin="0,0,0,4"/>
                                <TextBlock Text="Letters from family, friends, or professionals who can vouch for your campaign"
                       FontSize="14"
                       Foreground="#666666"
                       TextWrapping="Wrap"
                       Margin="0,0,0,8"/>
                                <TextBlock Text="Accepted formats: PDF, DOC • Max size: 10MB per file"
                       FontSize="12"
                       Foreground="#999999"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <!-- Drag and Drop Zone -->
                                <Border Style="{StaticResource UploadZone}"
                    Width="160"
                    Height="100">
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="📎"
                               FontSize="32"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>
                                        <TextBlock Text="Drag files here or"
                               FontSize="11"
                               Foreground="#666666"
                               HorizontalAlignment="Center"/>
                                        <TextBlock Text="click to browse"
                               FontSize="11"
                               Foreground="#00BCD4"
                               FontWeight="Medium"
                               HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>

                </StackPanel>
            </Border>

            <!-- Action Buttons -->
            <Grid Margin="0,0,0,40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Info Message -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <Border Background="#FFF3CD" 
                           CornerRadius="8" 
                           Padding="12" 
                            Margin="0,0,10,0"
                           BorderBrush="#FFEAA7" 
                           BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                      Text="⚠️" 
                                      FontSize="16" 
                                      Margin="0,0,8,0" 
                                      VerticalAlignment="Top"/>
                            <TextBlock Grid.Column="1" 
                                      Text="Upload all required documents to proceed with campaign submission"
                                      FontSize="12"
                                      Foreground="#8A6D00"
                                      TextWrapping="Wrap"/>
                        </Grid>
                    </Border>
                </StackPanel>


               <!--
                <Button Grid.Column="2"
                       Content="Submit for Review"
                       Style="{StaticResource PrimaryButton}"
                       IsEnabled="False"/>
                --> 
            </Grid>

            <!-- Help Section -->
            <Border Background="#F8F9FA" 
                    CornerRadius="12" 
                    Padding="24"
                    BorderBrush="#E9ECEF"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Need Help?"
                              FontWeight="SemiBold"
                              FontSize="18"
                              Foreground="#333333"
                              Margin="0,0,0,12"/>

                    <TextBlock FontSize="14" 
                              Foreground="#666666" 
                              TextWrapping="Wrap"
                              Margin="0,0,0,16">
                        <Run Text="Our team reviews all documents within 2-3 business days. "/>
                        <Run Text="For questions about document requirements or the review process, "/>
                        <Hyperlink Foreground="#00BCD4" TextDecorations="None">
                            <Run Text="contact our support team"/>
                        </Hyperlink>
                        <Run Text=" or visit our "/>
                        <Hyperlink Foreground="#00BCD4" TextDecorations="None">
                            <Run Text="help center"/>
                        </Hyperlink>
                        <Run Text="."/>
                    </TextBlock>

                    <Button Content="Contact Support"
                           Style="{StaticResource SecondaryButton}"
                           HorizontalAlignment="Left"
                           Padding="20,10"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>