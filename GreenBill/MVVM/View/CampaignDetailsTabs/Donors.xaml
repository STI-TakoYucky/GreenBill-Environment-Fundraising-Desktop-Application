<UserControl x:Class="GreenBill.MVVM.View.CampaignDetailsTabs.Donors"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GreenBill.MVVM.View.CampaignDetailsTabs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Recent Donors" 
                       FontSize="22" 
                       FontWeight="SemiBold" 
                       Foreground="#333333"
                       Margin="0,0,0,10"/>
            <TextBlock Text="980 people have donated to this campaign" 
                       FontSize="14" 
                       Foreground="#666666"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="UpdatesItemsControl" ItemsSource="{Binding SelectedCampaign.DonationRecord}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- Donor Item 2 -->
                        <Border Background="White" 
             BorderBrush="#E0E0E0" 
             BorderThickness="0,0,0,1" 
             Padding="0,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Avatar -->
                                <Ellipse Grid.Column="0" 
                      Fill="#9C27B0" 
                      Width="40" 
                      Height="40"/>
                                <TextBlock Grid.Column="0"
                        Text="AS" 
                        FontWeight="SemiBold" 
                        FontSize="14"
                        Foreground="White"
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"/>

                                <!-- Donor Info -->
                                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                    <TextBlock Text="{Binding DisplayName}" 
                            FontWeight="SemiBold" 
                            FontSize="14"
                            Foreground="#333333"/>
                                    <TextBlock Text="{Binding CreatedAt}" 
                            FontSize="12" 
                            Foreground="#999999"/>
                                </StackPanel>

                                <!-- Donation Amount -->
                                <TextBlock Grid.Column="2" 
                        Text="{Binding Amount}" 
                        FontWeight="SemiBold" 
                        FontSize="16"
                        Foreground="#4CAF50"
                        VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>