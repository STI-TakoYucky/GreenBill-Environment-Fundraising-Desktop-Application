<UserControl x:Class="GreenBill.MVVM.View.CampaignDetailsTabs.Updates"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GreenBill.MVVM.View.CampaignDetailsTabs"
             mc:Ignorable="d" 
             Background="#FFFFFF"
             d:DesignHeight="900" d:DesignWidth="1400">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <TextBlock Text="Recent Updates" 
                       FontSize="22" 
                       FontWeight="SemiBold" 
                       Foreground="#333333"
                       Margin="0,0,0,20"/>

                <!-- Update Item 1 -->
                <Border Background="#F8F9FA" 
                    CornerRadius="8" 
                    Padding="20"
                    Margin="0,0,0,15">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Update #3" 
                                   FontWeight="SemiBold" 
                                   FontSize="16"
                                   Foreground="#333333"/>
                            <TextBlock Text=" • 2 days ago" 
                                   FontSize="14" 
                                   Foreground="#999999"
                                   VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="Thank you for all the support! We've reached 75% of our goal and are making great progress."
                               FontSize="14"
                               TextWrapping="Wrap"
                               Foreground="#555555"/>
                    </StackPanel>
                </Border>

                <!-- Update Item 2 -->
                <Border Background="#F8F9FA" 
                    CornerRadius="8" 
                    Padding="20"
                    Margin="0,0,0,15">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Update #2" 
                                   FontWeight="SemiBold" 
                                   FontSize="16"
                                   Foreground="#333333"/>
                            <TextBlock Text=" • 1 week ago" 
                                   FontSize="14" 
                                   Foreground="#999999"
                                   VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="We've hit our first milestone! The response has been overwhelming and we're grateful for everyone's generosity."
                               FontSize="14"
                               TextWrapping="Wrap"
                               Foreground="#555555"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
