<UserControl x:Class="GreenBill.MVVM.View.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GreenBill.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1400"
             Background="White">

    <UserControl.Resources>
        <!-- Modern Card Style -->
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" 
                                    BlurRadius="20" 
                                    Opacity="0.08" 
                                    ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="Black" 
                                            BlurRadius="30" 
                                            Opacity="0.15" 
                                            ShadowDepth="5"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Gradient Button Style -->
        <Style x:Key="GradientButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#00BCD4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="25">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0097A7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Navigation Frame for Page Content -->
        <Frame x:Name="MainFrame" 
               Margin="0,0,0,-62"
               NavigationUIVisibility="Hidden"/>

        <!-- Main Content -->
        <ScrollViewer x:Name="MainContent"
                     Margin="0"
                     VerticalAlignment="Stretch"
                     VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Hero Section -->
                <Grid Background="#FAFAFA" Margin="0,0,0,60">
                    <StackPanel Margin="80,30,80,30">
                        <!-- Hero Title -->
                        <TextBlock FontWeight="Bold"
                                  FontSize="42"
                                  FontFamily="./Assets/Fonts/#Poppins"
                                  Margin="0,0,0,20"
                                  TextWrapping="Wrap"
                                  Foreground="#333333">
                            <Run Text="Discover impactful projects"/>
                            <LineBreak/>
                            <Run Text="inspired by your passion for protecting our planet"/>
                        </TextBlock>

                        <!-- Subtitle -->
                        <TextBlock Text="Join thousands of changemakers making a real difference in environmental conservation and sustainability"
                                  FontSize="18"
                                  FontFamily="./Assets/Fonts/#Poppins"
                                  Foreground="#666666"
                                  Margin="0,0,0,30"
                                  TextWrapping="Wrap"/>

                     
              
                    </StackPanel>
                </Grid>

             

                <!-- Featured Projects Section -->
                <StackPanel Margin="80,0,80,60">
                    <Grid Margin="0,0,0,40">
                        <TextBlock Text="Trending Projects"
                                  FontWeight="Bold"
                                  FontSize="28"
                                  FontFamily="./Assets/Fonts/#Poppins"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Center"/>
                        <Button Content="View All"
                                Command="{Binding ViewMore}"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Background="Transparent"
                               BorderThickness="0"
                               Foreground="#00BCD4"
                               FontSize="16"
                               FontWeight="Medium"
                               Cursor="Hand"/>
                    </Grid>

                    <!-- Modern Cards Grid -->
                    <ItemsControl ItemsSource="{Binding Campaigns}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="3"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource ModernCard}"
                                       Height="320"
                                       Margin="15">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="180"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <!-- Image Area -->
                                        <Button Grid.Row="0"
                                               Background="#F5F5F5"
                                               Command="{Binding DataContext.NavigateToFundraisingDetails, 
                                                        RelativeSource={RelativeSource AncestorType=UserControl}}"
                                               CommandParameter="{Binding Id}"
                                               BorderThickness="0"
                                               Cursor="Hand">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border CornerRadius="16,16,0,0"
                                                           Background="{TemplateBinding Background}">
                                                        <Grid>
                                                            <Image Source="{Binding Image, Converter={StaticResource ImageConverter}}"
                                                                  Stretch="UniformToFill"/>

                                                            <!-- Donation Badge -->
                                                            <Border Background="#00BCD4"
                                                                   CornerRadius="15"
                                                                   Padding="12,6"
                                                                   HorizontalAlignment="Left"
                                                                   VerticalAlignment="Bottom"
                                                                   Margin="16">
                                                                <TextBlock Text="975 donations"
                                                                          Foreground="White"
                                                                          FontWeight="SemiBold"
                                                                          FontSize="11"/>
                                                            </Border>

                                                            <!-- Category Tag -->
                                                            <Border Background="White"
                                                                   CornerRadius="12"
                                                                   Padding="8,4"
                                                                   HorizontalAlignment="Right"
                                                                   VerticalAlignment="Top"
                                                                   Margin="16">
                                                                <TextBlock Text="{Binding Category}"
                                                                          Foreground="#333333"
                                                                          FontWeight="Medium"
                                                                          FontSize="10"/>
                                                            </Border>
                                                        </Grid>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>

                                        <!-- Content Area -->
                                        <StackPanel Grid.Row="1" 
                                                   Margin="20,16,20,20">
                                            <TextBlock Text="{Binding Title}"
                                                      FontWeight="SemiBold"
                                                      FontSize="16"
                                                      FontFamily="./Assets/Fonts/#Poppins"
                                                      TextWrapping="Wrap"
                                                      Foreground="#333333"
                                                      Margin="0,0,0,12"/>

                                            <!-- Progress Section -->
                                            <Grid Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0"
                                                          Text="$45,555 raised"
                                                          FontWeight="Bold"
                                                          FontSize="14"
                                                          Foreground="#333333"
                                                          VerticalAlignment="Center"/>

                                                <TextBlock Grid.Column="1"
                                                          Text="75% funded"
                                                          FontSize="12"
                                                          Foreground="#4CAF50"
                                                          FontWeight="Medium"
                                                          VerticalAlignment="Center"/>
                                            </Grid>

                                            <!-- Progress Bar -->
                                            <Border Background="#F0F0F0"
                                                   CornerRadius="10"
                                                   Height="8">
                                                <Border Background="#4CAF50"
                                                       CornerRadius="10"
                                                       HorizontalAlignment="Left"
                                                       Width="200"/>
                                            </Border>

                                            <!-- Time Remaining -->
                                            <TextBlock Text="12 days left"
                                                      FontSize="12"
                                                      Foreground="#666666"
                                                      Margin="0,8,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- Stats Section -->
                <Grid Margin="80,0,80,60">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock Text="2.5M+"
                     FontSize="32"
                     FontWeight="Bold"
                     Foreground="#00BCD4"
                     HorizontalAlignment="Center"/>
                        <TextBlock Text="Projects Funded"
                     FontSize="14"
                     Foreground="#666666"
                     HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock Text="$15B+"
                     FontSize="32"
                     FontWeight="Bold"
                     Foreground="#4CAF50"
                     HorizontalAlignment="Center"/>
                        <TextBlock Text="Raised"
                     FontSize="14"
                     Foreground="#666666"
                     HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <TextBlock Text="100M+"
                     FontSize="32"
                     FontWeight="Bold"
                     Foreground="#FF9800"
                     HorizontalAlignment="Center"/>
                        <TextBlock Text="Donors"
                     FontSize="14"
                     Foreground="#666666"
                     HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                        <TextBlock Text="190+"
                     FontSize="32"
                     FontWeight="Bold"
                     Foreground="#E91E63"
                     HorizontalAlignment="Center"/>
                        <TextBlock Text="Countries"
                     FontSize="14"
                     Foreground="#666666"
                     HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- Trust Section -->
                <Grid Margin="0,40,0,0" Background="#00695C">
                    <Grid Margin="80,60,80,60">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Content -->
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="We've got you covered."
                                      FontWeight="Bold"
                                      FontSize="32"
                                      Foreground="White"
                                      FontFamily="./Assets/Fonts/#Poppins"
                                      Margin="0,0,0,20"/>

                            <Button Style="{StaticResource GradientButton}"
                                   Content="Learn More About Trust and Safety"
                                   Background="White"
                                   Foreground="#00695C"
                                   Margin="0,0,0,0"/>
                        </StackPanel>

                        <!-- Right Content -->
                        <StackPanel Grid.Column="1" 
                                   Margin="40,0,0,0"
                                   VerticalAlignment="Center">
                            <TextBlock Text="GreenBill is a trusted leader in online fundraising. With transparent pricing and a dedicated team of Trust and Safety experts in your corner, you can raise money or make a donation with complete peace of mind."
                                      FontSize="18"
                                      FontWeight="Normal"
                                      Foreground="White"
                                      FontFamily="./Assets/Fonts/#Poppins"
                                      TextWrapping="Wrap"
                                      Opacity="0.95"/>

                            <!-- Trust Features -->
                            <StackPanel Margin="0,30,0,0">
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="✓" 
                                              FontSize="18" 
                                              Foreground="#4CAF50" 
                                              FontWeight="Bold"
                                              Margin="0,0,12,0"/>
                                    <TextBlock Grid.Column="1" 
                                              Text="24/7 expert support team"
                                              FontSize="14" 
                                              Foreground="White" 
                                              VerticalAlignment="Center"/>
                                </Grid>
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="✓" 
                                              FontSize="18" 
                                              Foreground="#4CAF50" 
                                              FontWeight="Bold"
                                              Margin="0,0,12,0"/>
                                    <TextBlock Grid.Column="1" 
                                              Text="Simple, transparent pricing"
                                              FontSize="14" 
                                              Foreground="White" 
                                              VerticalAlignment="Center"/>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="✓" 
                                              FontSize="18" 
                                              Foreground="#4CAF50" 
                                              FontWeight="Bold"
                                              Margin="0,0,12,0"/>
                                    <TextBlock Grid.Column="1" 
                                              Text="Secure payment processing"
                                              FontSize="14" 
                                              Foreground="White" 
                                              VerticalAlignment="Center"/>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>