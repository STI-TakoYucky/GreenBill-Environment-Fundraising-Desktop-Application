                <!-- Campaign Card 1 -->
                <Border Background="White" 
                       CornerRadius="12" 
                       Margin="0,0,10,20"
                       Cursor="Hand">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="160"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Campaign Image -->
                        <Border Grid.Row="0" CornerRadius="12,12,0,0" Background="#E8F5E8">
                            <TextBlock Text="🌊" FontSize="48" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>

                        <!-- Campaign Details -->
                        <StackPanel Grid.Row="1" Margin="20,15">
                            <TextBlock Text="Clean Ocean Initiative" 
                                      FontSize="18" 
                                      FontWeight="SemiBold" 
                                      Foreground="#2D2D2D"
                                      Margin="0,0,0,8"/>

                            <TextBlock FontSize="24" 
                                      FontWeight="Bold" 
                                      Foreground="#00A86B"
                                      Margin="0,0,0,5">
                                <Run Text="$45,665"/>
                                <Run Text=" USD raised" FontSize="16" FontWeight="Normal" Foreground="#666666"/>
                            </TextBlock>

                            <TextBlock Text="42,342 • 980 donations" 
                                      FontSize="14" 
                                      Foreground="#999999"
                                      Margin="0,0,0,10"/>

                            <!-- Progress Bar -->
                            <Border Background="#F0F0F0" Height="6" CornerRadius="3" Margin="0,0,0,10">
                                <Border Background="#00A86B" 
                                       Width="180" 
                                       HorizontalAlignment="Left" 
                                       CornerRadius="3"/>
                            </Border>

                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="8" Height="8" Fill="#9B59B6" Margin="0,0,8,0"/>
                                <TextBlock Text="715 people just donated" 
                                          FontSize="12" 
                                          Foreground="#666666"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Action Button -->
                        <Button Grid.Row="2" 
                               Content="View Analytics" 
                               Background="Transparent" 
                               Foreground="#00A86B"
                               BorderBrush="#E0E0E0"
                               BorderThickness="0,1,0,0"
                               FontWeight="SemiBold"
                               Padding="20,15"
                               Margin="0"
                               Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                       BorderBrush="{TemplateBinding BorderBrush}"
                                                       BorderThickness="{TemplateBinding BorderThickness}"
                                                       CornerRadius="0,0,12,12"
                                                       Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#F0F8F5"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
