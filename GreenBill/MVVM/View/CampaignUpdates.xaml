<UserControl x:Class="GreenBill.MVVM.View.CampaignUpdates"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GreenBill.MVVM.View"
             mc:Ignorable="d" 
             Background="#FFFFFF"
             d:DesignHeight="900" d:DesignWidth="1400">


    <Grid Margin="100, 40, 100, 40" MaxWidth="1200">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid Grid.Row="0">
                <Button Content="Back"
                        Margin="0,0,0,30"
                        Style="{StaticResource BackButtonStyle}"
                        HorizontalAlignment="Left"
                        Command="{Binding GoBackCommand}"/>
            </Grid>
        </Grid>

        <Border Grid.Row="1" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Campaign Updates" FontSize="24" FontWeight="Bold" Foreground="#333" Margin="0,0,0,10"/>
                <TextBlock Text="Manage your campaign updates to keep your supporters informed about your progress." 
                          FontSize="14" Foreground="#666"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="2" Style="{StaticResource UpdateCardStyle}" Margin="0,0,0,20" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="FormTitle" Grid.Row="0" Grid.ColumnSpan="3" 
                          Text="{Binding FormTitle}" FontSize="18" FontWeight="SemiBold" 
                          Foreground="#333" Margin="0,0,0,15"/>

                <StackPanel Grid.Row="1" Grid.Column="0">
                    <TextBlock Text="Update Title *" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#333"/>
                    <TextBox x:Name="TitleTextBox" Style="{StaticResource ModernTextBoxStyle}" 
                            Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="2">
                    <TextBlock Text="Category" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#333"/>
                    <ComboBox x:Name="CategoryComboBox" Padding="10" FontSize="14" Height="40"
                             ItemsSource="{Binding Categories}"
                             SelectedItem="{Binding SelectedCategory}"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.ColumnSpan="3" Margin="0,15,0,0">
                    <TextBlock Text="Description *" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#333"/>
                    <TextBox x:Name="DescriptionTextBox" Style="{StaticResource ModernTextBoxStyle}" 
                            Height="100" AcceptsReturn="True" TextWrapping="Wrap" 
                            VerticalScrollBarVisibility="Auto"
                            Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <StackPanel Grid.Row="4" Grid.ColumnSpan="3" Orientation="Horizontal" 
                           Margin="0,20,0,0" HorizontalAlignment="Right">
                    <Button x:Name="CancelButton" Content="Cancel" 
                           Background="#666" Foreground="White" Margin="0,0,10,0" 
                           Padding="15,8" FontWeight="SemiBold" Cursor="Hand" 
                           Click="CancelButton_Click" 
                           Visibility="{Binding ShowCancelButton, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <Button x:Name="SaveButton" Content="{Binding SaveButtonText}" 
                           Style="{StaticResource PrimaryButtonStyle}" 
                           Padding="20,8"
                           Command="{Binding SaveCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="3" Style="{StaticResource CardStyle}" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <TextBlock Text="Recent Updates" FontSize="18" FontWeight="SemiBold" 
                              Foreground="#333" VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBox x:Name="SearchTextBox" Style="{StaticResource ModernTextBoxStyle}"
                                Width="250" 
                                Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                                TextChanged="SearchTextBox_TextChanged"/>
                    </StackPanel>
                </Grid>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="UpdatesItemsControl" ItemsSource="{Binding FilteredUpdates}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,15" Padding="20">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="SemiBold" 
                                                          Foreground="#333" VerticalAlignment="Center"/>
                                                <Border Background="#4CAF50" CornerRadius="12" 
                                                       Padding="8,4" Margin="10,0,0,0">
                                                    <TextBlock Text="{Binding Category}" FontSize="12" 
                                                              Foreground="White" FontWeight="SemiBold"/>
                                                </Border>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                <Button Content="Edit" Style="{StaticResource EditButtonStyle}" 
                                                       Margin="0,0,10,0" Tag="{Binding Id}" 
                                                       Click="EditButton_Click"/>
                                                <Button Content="Delete" Style="{StaticResource SecondaryButtonStyle}" 
                                                       Padding="8,6" FontSize="12" Tag="{Binding Id}"
                                                         Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                       CommandParameter="{Binding Id}"/>
                                            </StackPanel>
                                        </Grid>

                                        <TextBlock Grid.Row="1" Text="{Binding CreatedAt, StringFormat='Posted on {0:MMMM dd, yyyy} at {0:HH:mm}'}" 
                                                  FontSize="12" Foreground="#666" Margin="0,5,0,10"/>

                                        <TextBlock Grid.Row="2" Text="{Binding Description}" 
                                                  FontSize="14" Foreground="#444" 
                                                  TextWrapping="Wrap" Margin="0,0,0,10"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>


            </Grid>
        </Border>
    </Grid>
</UserControl>