<UserControl x:Class="GreenBill.MVVM.View.Admin.AdminDashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="900" d:DesignWidth="1400">
    <Grid>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Padding="30 0 30 0">
            <StackPanel>
                <TextBlock  Margin="0 20 0 0" Text="Dashboard" FontSize="24" FontWeight="SemiBold"/>

                <Grid Margin="0 20 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="33*"></ColumnDefinition>
                        <ColumnDefinition Width="33*"></ColumnDefinition>
                        <ColumnDefinition Width="33*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Border 
                BorderThickness="1"
                Background="White"
                CornerRadius="8"
                BorderBrush="#e1e7e9"
                Grid.Column="0" Margin="0,0,5,0">
                        <StackPanel Margin="15,15,15,15" VerticalAlignment="Center">
                            <TextBlock Text="Total Users"></TextBlock>
                            <TextBlock Text="20" FontSize="24"></TextBlock>
                        </StackPanel>
                    </Border>

                    <Border 
                BorderThickness="1"
                Background="White"
                CornerRadius="8"
                BorderBrush="#e1e7e9"
                Grid.Column="1" Margin="0,0,5,0">
                        <StackPanel Margin="15,15,15,15" VerticalAlignment="Center">
                            <TextBlock Text="Total Campaigns"></TextBlock>
                            <TextBlock Text="13" FontSize="24"></TextBlock>
                        </StackPanel>
                    </Border>
                    <Border 
                BorderThickness="1"
                Background="White"
                CornerRadius="8"
                BorderBrush="#e1e7e9"
                Grid.Column="2">
                        <StackPanel Margin="15,15,15,15" VerticalAlignment="Center">
                            <TextBlock Text="Pending Campaigns"></TextBlock>
                            <TextBlock Text="5" FontSize="24"></TextBlock>
                        </StackPanel>
                    </Border>

                </Grid>

                <StackPanel Margin="0, 40, 0, 0">
                    <TextBlock Text="New Users" FontSize="24"></TextBlock>
                    <lvc:CartesianChart Height="300" AnimationsSpeed="0:0:0.5">
                        <lvc:CartesianChart.Series>
                            <lvc:LineSeries Title="New Users" 
                              Values="15,25,30,22,35,42,38,45,52,48,55,60" 
                              Stroke="#00A86B" 
                              Fill="Transparent"
                              StrokeThickness="3"
                              PointGeometrySize="8"/>
                        </lvc:CartesianChart.Series>
                    </lvc:CartesianChart>
                </StackPanel>

                <Grid Margin="0,40,0,40">

                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Pending Campaigns" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="10"
                    Grid.Row="0"/>

                    <DataGrid
                        ItemsSource="{Binding Campaigns}"
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  BorderThickness="0"
                  RowHeight="40"
                  GridLinesVisibility="None"
                  AlternatingRowBackground="#f7f9fa"
                  Background="White"
                  Grid.Row="1"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch" ColumnWidth="180">

                        <!-- Header Style -->
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#e1e7e9"/>
                                <Setter Property="Foreground" Value="#333"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Padding" Value="4,6"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <!-- Row Style -->
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="Padding" Value="299"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <!-- Hover effect -->
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#eef2f3"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>

                        <!-- Define the columns -->
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Campaign ID" Binding="{Binding CampaignID}"/>
                            <DataGridTextColumn Header="Title" Binding="{Binding Title}"/>
                            <!-- last column stretches -->
                            <DataGridTextColumn Header="Organizer" Binding="{Binding Organizer}"/>
                            <DataGridTextColumn Header="Date Submitted" Binding="{Binding DateSubmitted}"/>

                            <DataGridTemplateColumn Header="Approve">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Approve" 
            Background="#4CAF50"
            Foreground="White"
            Padding="6,2"
            BorderThickness="0"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Reject">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Reject"
            Background="#E53935"
            Foreground="White"
            Padding="6,2"
            BorderThickness="0"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                </Grid>


            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
