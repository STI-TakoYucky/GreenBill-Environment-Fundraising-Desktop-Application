<UserControl x:Class="GreenBill.MVVM.View.DonationPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GreenBill.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1400"
             Background="#F5F5F5">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="50">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header Section -->
                <Grid Grid.Row="0" Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Back Button -->
                    <Button Grid.Column="0" HorizontalAlignment="Left" 
                      Style="{StaticResource BackButtonStyle}"
                       Command="{Binding NavigateBack}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="← Back" FontSize="14"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- Main Content -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Side - Donation Form -->
                    <Border Grid.Column="0" Background="White" CornerRadius="15" 
                       Padding="40" Margin="0,0,0,0">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                        </Border.Effect>

                        <StackPanel>
                            <!-- Title -->
                            <TextBlock Text="Make a Donation" FontSize="32" FontWeight="Bold" 
                                 Foreground="#2E2E2E" Margin="0,0,0,10"/>

                            <TextBlock Text="Support environmental initiatives and make a positive impact on our planet." 
                                 FontSize="16" Foreground="#666" Margin="0,0,0,30" TextWrapping="Wrap"/>

                            <!-- Donation Amount Section -->
                            <TextBlock Text="Select Amount" FontSize="18" FontWeight="SemiBold" 
                                 Foreground="#2E2E2E" Margin="0,0,0,15"/>

                            <!-- Predefined Amount Buttons -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Button Grid.Row="0" Grid.Column="0" Content="$10" Margin="0,0,10,10"
                                        Command="{Binding SelectAmountCommand}" CommandParameter="10"
                                        FontWeight="SemiBold" Padding="0,15" FontSize="16">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="White"/>
                                            <Setter Property="BorderBrush" Value="#DDD"/>
                                            <Setter Property="BorderThickness" Value="2"/>
                                            <Setter Property="Foreground" Value="#666"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedAmount}" Value="10">
                                                    <Setter Property="Background" Value="#E8F5E8"/>
                                                    <Setter Property="BorderBrush" Value="#2E7D32"/>
                                                    <Setter Property="Foreground" Value="#2E7D32"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <Button Grid.Row="0" Grid.Column="1" Content="$25" Margin="5,0,5,10"
                                        Command="{Binding SelectAmountCommand}" CommandParameter="25"
                                        FontWeight="SemiBold" Padding="0,15" FontSize="16">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="White"/>
                                            <Setter Property="BorderBrush" Value="#DDD"/>
                                            <Setter Property="BorderThickness" Value="2"/>
                                            <Setter Property="Foreground" Value="#666"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedAmount}" Value="25">
                                                    <Setter Property="Background" Value="#E8F5E8"/>
                                                    <Setter Property="BorderBrush" Value="#2E7D32"/>
                                                    <Setter Property="Foreground" Value="#2E7D32"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <Button Grid.Row="0" Grid.Column="2" Content="$50" Margin="5,0,5,10"
                                        Command="{Binding SelectAmountCommand}" CommandParameter="50"
                                        FontWeight="SemiBold" Padding="0,15" FontSize="16">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="White"/>
                                            <Setter Property="BorderBrush" Value="#DDD"/>
                                            <Setter Property="BorderThickness" Value="2"/>
                                            <Setter Property="Foreground" Value="#666"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedAmount}" Value="50">
                                                    <Setter Property="Background" Value="#E8F5E8"/>
                                                    <Setter Property="BorderBrush" Value="#2E7D32"/>
                                                    <Setter Property="Foreground" Value="#2E7D32"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <Button Grid.Row="0" Grid.Column="3" Content="$100" Margin="10,0,0,10"
                                        Command="{Binding SelectAmountCommand}" CommandParameter="100"
                                        FontWeight="SemiBold" Padding="0,15" FontSize="16">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="White"/>
                                            <Setter Property="BorderBrush" Value="#DDD"/>
                                            <Setter Property="BorderThickness" Value="2"/>
                                            <Setter Property="Foreground" Value="#666"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedAmount}" Value="100">
                                                    <Setter Property="Background" Value="#E8F5E8"/>
                                                    <Setter Property="BorderBrush" Value="#2E7D32"/>
                                                    <Setter Property="Foreground" Value="#2E7D32"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <Button Grid.Row="1" Grid.Column="0" Content="$250" Margin="0,0,10,0"
                                        Command="{Binding SelectAmountCommand}" CommandParameter="250"
                                        FontWeight="SemiBold" Padding="0,15" FontSize="16">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="White"/>
                                            <Setter Property="BorderBrush" Value="#DDD"/>
                                            <Setter Property="BorderThickness" Value="2"/>
                                            <Setter Property="Foreground" Value="#666"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedAmount}" Value="250">
                                                    <Setter Property="Background" Value="#E8F5E8"/>
                                                    <Setter Property="BorderBrush" Value="#2E7D32"/>
                                                    <Setter Property="Foreground" Value="#2E7D32"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <Button Grid.Row="1" Grid.Column="1" Content="$500" Margin="5,0,5,0"
                                        Command="{Binding SelectAmountCommand}" CommandParameter="500"
                                        FontWeight="SemiBold" Padding="0,15" FontSize="16">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="White"/>
                                            <Setter Property="BorderBrush" Value="#DDD"/>
                                            <Setter Property="BorderThickness" Value="2"/>
                                            <Setter Property="Foreground" Value="#666"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedAmount}" Value="500">
                                                    <Setter Property="Background" Value="#E8F5E8"/>
                                                    <Setter Property="BorderBrush" Value="#2E7D32"/>
                                                    <Setter Property="Foreground" Value="#2E7D32"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <Button Grid.Row="1" Grid.Column="2" Content="$1000" Margin="5,0,5,0"
                                        Command="{Binding SelectAmountCommand}" CommandParameter="1000"
                                        FontWeight="SemiBold" Padding="0,15" FontSize="16">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="White"/>
                                            <Setter Property="BorderBrush" Value="#DDD"/>
                                            <Setter Property="BorderThickness" Value="2"/>
                                            <Setter Property="Foreground" Value="#666"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedAmount}" Value="1000">
                                                    <Setter Property="Background" Value="#E8F5E8"/>
                                                    <Setter Property="BorderBrush" Value="#2E7D32"/>
                                                    <Setter Property="Foreground" Value="#2E7D32"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <Button Grid.Row="1" Grid.Column="3" Content="Other" Margin="10,0,0,0"
                                        Background="White" BorderBrush="#DDD" BorderThickness="2"
                                        Foreground="#666" FontWeight="SemiBold" Padding="0,15"
                                        FontSize="16"/>
                            </Grid>

                            <!-- Custom Amount Input -->
                            <TextBlock Text="Custom Amount (USD)" FontSize="16" FontWeight="SemiBold" 
                                 Foreground="#2E2E2E" Margin="0,10,0,10"/>
                            <TextBox Background="White" BorderBrush="#DDD" BorderThickness="2"
                                     Padding="15" FontSize="16" Margin="0,0,0,25"
                                     Text="{Binding CustomAmount, UpdateSourceTrigger=PropertyChanged}">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <VisualBrush AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                                            <VisualBrush.Visual>
                                                                <TextBlock Text="Enter custom amount..." Foreground="#999" Margin="5,0"/>
                                                            </VisualBrush.Visual>
                                                        </VisualBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>

                            <!-- Donor Information -->
                            <TextBlock Text="Donor Information" FontSize="18" FontWeight="SemiBold" 
                                 Foreground="#2E2E2E" Margin="0,20,0,15"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="First Name" FontSize="14" Foreground="#666" Margin="0,0,0,5"/>
                                    <TextBox Background="White" BorderBrush="#DDD" BorderThickness="2"
                                             Padding="15" FontSize="14" Margin="0,0,0,15"
                                             Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Last Name" FontSize="14" Foreground="#666" Margin="0,0,0,5"/>
                                    <TextBox Background="White" BorderBrush="#DDD" BorderThickness="2"
                                             Padding="15" FontSize="14" Margin="0,0,0,15"
                                             Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                            </Grid>

                            <TextBlock Text="Email Address" FontSize="14" Foreground="#666" Margin="0,0,0,5"/>
                            <TextBox Background="White" BorderBrush="#DDD" BorderThickness="2"
                                     Padding="15" FontSize="14" Margin="0,0,0,20"
                                     Text="{Binding EmailAddress, UpdateSourceTrigger=PropertyChanged}"/>

                            <!-- Anonymous Donation Option -->
                            <CheckBox Content="Make this donation anonymous" FontSize="14" 
                                      Foreground="#666" Margin="0,0,0,25"
                                      IsChecked="{Binding IsAnonymous}"/>

                            <!-- Donate Button -->
                            <Button Command="{Binding CompleteDonation}" Background="#2E7D32" BorderThickness="0" 
                                    Padding="0,18" Margin="0,10,0,0"
                                    Foreground="White" FontWeight="SemiBold" FontSize="16">
                                <Button.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.3" Color="#2E7D32"/>
                                </Button.Effect>
                                <TextBlock Text="{Binding SelectedAmount, StringFormat='Complete Donation - ${0:F0}'}" HorizontalAlignment="Center"/>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- Right Side - Campaign Stats -->
                    <Border Grid.Column="2" Background="White" CornerRadius="15" 
                       Padding="25" Height="600" VerticalAlignment="Top">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                        </Border.Effect>

                        <StackPanel>
                            <!-- Campaign Title -->
                            <TextBlock Text="{Binding SelectedCampaign.Title, FallbackValue='Environmental Impact Campaign'}" 
                                       FontSize="20" FontWeight="Bold" 
                                       Foreground="#2E2E2E" Margin="0,0,0,20" TextWrapping="Wrap"/>

                            <!-- Progress Stats -->
                            <Border Background="#E8F5E8" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="{Binding TotalDonationRaised}" FontSize="24" FontWeight="Bold" 
                                         Foreground="#2E7D32" HorizontalAlignment="Center"/>
                                  
                                </StackPanel>
                            </Border>

                            <!-- Progress Bar -->
                            <ProgressBar Value="65" Maximum="100" Height="8" 
                                   Background="#E0E0E0" Foreground="#2E7D32" 
                                   BorderThickness="0" Margin="0,0,0,20"/>

                            <TextBlock Text="{Binding Percentage}" FontSize="14" 
                                 Foreground="#666" HorizontalAlignment="Center" Margin="0,0,0,25"/>

                            <!-- Recent Donors -->
                            <TextBlock Text="Supporters" FontSize="16" FontWeight="SemiBold" 
                                 Foreground="#2E2E2E" Margin="0,0,0,15"/>

                            <!-- Donor List -->
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <ItemsControl x:Name="UpdatesItemsControl" ItemsSource="{Binding SelectedCampaign.DonationRecord}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="White" 
                         BorderBrush="#E0E0E0" 
                         BorderThickness="0,0,0,1" 
                         Padding="0,15">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="50"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Avatar -->
                                                    <Ellipse Grid.Column="0" 
                                  Fill="#9C27B0" 
                                  Width="40" 
                                  Height="40"/>
                                                    <TextBlock Grid.Column="0"
                                    Text="TS" 
                                    FontWeight="SemiBold" 
                                    FontSize="14"
                                    Foreground="White"
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>

                                                    <!-- Donor Info -->
                                                    <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                                        <TextBlock Text="{Binding FirstName}" 
                                         FontWeight="SemiBold" 
                                         FontSize="14"
                                         Foreground="#333333"/>
                                                        <TextBlock Text="5 hours ago" 
                                         FontSize="12" 
                                         Foreground="#999999"/>
                                                    </StackPanel>

                                                    <!-- Donation Amount -->
                                                    <TextBlock Grid.Column="2" 
                                    Text="{Binding Amount}" 
                                    FontWeight="SemiBold" 
                                    FontSize="16"
                                    Foreground="#4CAF50"
                                    VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                            <!-- Links -->
                            <Grid Margin="0,20,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                         
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>