<UserControl x:Class="GreenBill.MVVM.View.FundraisingSteps.SecondStep"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GreenBill.MVVM.View.FundraisingSteps"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1400"
             Background="#F5F5F5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" CornerRadius="0, 20, 20, 0"/>

        <!-- Left Side - Welcome Content -->
        <StackPanel Grid.Column="0" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Margin="50">

            <!-- Logo/Icon placeholder -->
            <Image Source="/Assets/Images/logo.png"
      Height="100"
  />

            <!-- Step indicator -->
            <TextBlock Text="2 of 5"
                       FontSize="14"
                       Foreground="#666666"
                       TextAlignment="Center"
                       Margin="0,0,0,30"/>

            <TextBlock Text="How much would you like to raise?"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#333333"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>

            <TextBlock Text="It's completely expected to need funds beyond your starting goal. You can always change your goal as you go."
                       FontSize="16"
                       Foreground="#666666"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       LineHeight="24"
                       Margin="0,0,0,40"/>
        </StackPanel>

        <!-- Right Side - Form Content -->
        <StackPanel Grid.Column="1" 
                    VerticalAlignment="Center" 
                    Margin="50,50,100,50">

            <!-- Goal Amount Input Section -->
            <Border Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,0,0,10">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Dollar Sign -->
                    <TextBlock Grid.Column="0"
                               Text="$"
                               FontSize="24"
                               FontWeight="Normal"
                               Foreground="#333333"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>

                    <!-- Amount TextBox -->

                    <TextBox Grid.Column="1"
                            FontSize="24"
                            BorderThickness="0"
                            Background="Transparent"
                            VerticalContentAlignment="Center"
                            Padding="0"
                            Text="{Binding DonationGoal, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Foreground="#CCCCCC">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="Foreground" Value="#000000"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- Currency -->
                    <TextBlock Grid.Column="2"
                               Text="USD"
                               FontSize="16"
                               FontWeight="Normal"
                               Foreground="#666666"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>
                </Grid>
            </Border>

            <TextBlock Text="{Binding DonationGoalError}" FontWeight="Light" FontStyle="Normal" Foreground="Red" Margin="0,0,0,20"/>

            <!-- Information Text -->
            <TextBlock Text="Keep in mind that transaction fees, including credit and debit charges, are deducted from each donation."
                       FontSize="14"
                       Foreground="#666666"
                       TextWrapping="Wrap"
                       LineHeight="20"
                       Margin="0,0,0,30"/>

            <!-- Requirements Section -->
            <Border Background="#E8F5E8"
                    BorderBrush="#C8E6C9"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,0,0,40">

                <StackPanel>
                    <TextBlock Text="To receive money raised, please make sure the person withdrawing has:"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#2E7D32"
                               Margin="0,0,0,15"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Ellipse Width="6" Height="6" 
                                Fill="#2E7D32" 
                                VerticalAlignment="Top"
                                Margin="0,8,10,0"/>
                        <TextBlock Text="A US social security number"
                                   FontSize="14"
                                   Foreground="#2E7D32"
                                   TextWrapping="Wrap"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="6" Height="6" 
                                Fill="#2E7D32" 
                                VerticalAlignment="Top"
                                Margin="0,8,10,0"/>
                        <TextBlock Text="A bank account and mailing address in one of the 50 states"
                                   FontSize="14"
                                   Foreground="#2E7D32"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Navigation Buttons -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Back Button -->
                <Button Grid.Column="0"
                        Width="50"
                        Command="{Binding GoToPreviousStep}"
                        Height="50"
                        Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        HorizontalAlignment="Left">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               BorderBrush="{TemplateBinding BorderBrush}"
                                               BorderThickness="{TemplateBinding BorderThickness}"
                                               CornerRadius="25">
                                            <Path Data="M15,12 L9,6 L10.4,4.6 L18,12 L10.4,19.4 L9,18 Z"
                                                  Fill="#666666"
                                                  RenderTransformOrigin="0.5,0.5"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center">
                                                <Path.RenderTransform>
                                                    <RotateTransform Angle="180"/>
                                                </Path.RenderTransform>
                                            </Path>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Continue Button -->
                <Button Grid.Column="2"
                        Content="Continue"
                        Style="{StaticResource PrimaryButton}"
                        HorizontalAlignment="Right"
                        Command="{Binding GoToStep3}"/>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>