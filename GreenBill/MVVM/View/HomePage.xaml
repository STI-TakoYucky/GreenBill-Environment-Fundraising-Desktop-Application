<UserControl x:Class="GreenBill.MVVM.View.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GreenBill.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1400"
             Background="#F5F5F5">
     <Grid>
     <!-- Header -->
     
    

     <!-- Navigation Frame for Page Content -->
     <Frame x:Name="MainFrame" 
            Margin="0,0,0,0"
            NavigationUIVisibility="Hidden"/>

     <!-- Main Content (initially visible) -->
     <ScrollViewer x:Name="MainContent"
                  Margin="100,40,100,20" 
                  VerticalAlignment="Stretch"
                  VerticalScrollBarVisibility="Auto">
         <StackPanel>
             <!-- Header Text -->
             <TextBlock Text="Discover projects inspired by your passion for protecting the planet" 
                       FontWeight="Bold"
                       FontSize="28"
                       FontFamily="./Assets/Fonts/#Poppins"
                       Margin="0,0,0,30"
                       TextWrapping="Wrap"/>

             <!-- Filter Dropdown -->
             <ComboBox Width="250"
                 HorizontalAlignment="Left"
                 Margin="0,0,0,30"
                 Height="40"
                 Style="{StaticResource ComboBox}"
                 ItemContainerStyle="{StaticResource ComboBoxItem}">
                 <ComboBoxItem Content="Happening worldwide" IsSelected="True"/>
                 <ComboBoxItem Content="Local projects"/>
                 <ComboBoxItem Content="Emergency relief"/>
                 <ComboBoxItem Content="Medical fundraisers"/>
                 <ComboBoxItem Content="Environmental causes"/>
             </ComboBox>

             <!-- Cards Grid with Asymmetric Layout -->
             <Grid>
                 <Grid.ColumnDefinitions>
                     <ColumnDefinition Width="2*"/>
                     <ColumnDefinition Width="15"/>
                     <ColumnDefinition Width="1*"/>
                     <ColumnDefinition Width="15"/>
                     <ColumnDefinition Width="1*"/>
                 </Grid.ColumnDefinitions>
                 <Grid.RowDefinitions>
                     <RowDefinition Height="Auto"/>
                     <RowDefinition Height="15"/>
                     <RowDefinition Height="Auto"/>
                 </Grid.RowDefinitions>

                 <!-- Large Card - Takes up 2 rows on the left -->
                 <Border Grid.Column="0" 
                        Grid.Row="0" 
                        Grid.RowSpan="3"
                        Background="White"
                        CornerRadius="8"
                        Height="400"
                        Cursor="Hand"
                        MouseLeftButtonUp="Card_Click">
                     <Border.Effect>
                         <DropShadowEffect Color="Gray" 
                                         BlurRadius="10" 
                                         Opacity="0.1" 
                                         ShadowDepth="2"/>
                     </Border.Effect>
                     <Grid>
                         <Grid.RowDefinitions>
                             <RowDefinition Height="2.5*"/>
                             <RowDefinition Height="1*"/>
                         </Grid.RowDefinitions>

                         <!-- Large Image Area -->
                         <Button Grid.Row="0" 
                                Background="#E0E0E0"
                                Command="{Binding NavigateToFundraisingDetails}">
                             <Grid>
                                 <Image Source="/Assets/Images/deforestation.jpg" 
                                        Stretch="UniformToFill"/>
                                 <TextBlock Text="975 donations"
                                          Foreground="White"
                                          FontWeight="Bold"
                                          FontSize="14"
                                          Margin="15"
                                          VerticalAlignment="Bottom"
                                          HorizontalAlignment="Left"/>
                             </Grid>
                         </Button>

                         <!-- Large Content Area -->
                         <StackPanel Grid.Row="1" 
                                    Margin="20">
                             <TextBlock Text="Deforestation"
                                       FontWeight="Bold"
                                       FontSize="18"
                                       FontFamily="./Assets/Fonts/#Poppins"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,15"/>

                             <!-- Progress Bar -->
                             <ProgressBar Value="75" 
                                        Height="8"
                                        Background="#E0E0E0"
                                        Foreground="#4CAF50"
                                        Margin="0,0,0,8"/>

                             <TextBlock Text="$45,555 raised"
                                       FontWeight="Bold"
                                       FontSize="16"
                                       Foreground="#333"/>
                         </StackPanel>
                     </Grid>
                 </Border>

                 <!-- Small Card 1 - Top Left -->
                 <Border Grid.Column="2" 
                        Grid.Row="0"
                        Background="White"
                        CornerRadius="8"
                        Height="192"
                        Cursor="Hand"
                        MouseLeftButtonUp="Card_Click">
                     <Border.Effect>
                         <DropShadowEffect Color="Gray" 
                                         BlurRadius="10" 
                                         Opacity="0.1" 
                                         ShadowDepth="2"/>
                     </Border.Effect>
                     <Grid>
                         <Grid.RowDefinitions>
                             <RowDefinition Height="2*"/>
                             <RowDefinition Height="1*"/>
                         </Grid.RowDefinitions>

                         <Border Grid.Row="0" 
                                Background="#E0E0E0"
                                CornerRadius="8,8,0,0">
                             <Grid>
                                 <Image Source="/Assets/Images/flooding.jpg" 
                                         Stretch="UniformToFill"/>
                                 <TextBlock Text="100% donations"
                                          Foreground="White"
                                          FontWeight="Bold"
                                          FontSize="10"
                                          Margin="10"
                                          VerticalAlignment="Bottom"
                                          HorizontalAlignment="Left"/>
                             </Grid>
                         </Border>

                         <StackPanel Grid.Row="1" 
                                    Margin="12">
                             <TextBlock Text="Flooding"
                                       FontWeight="Bold"
                                       FontSize="11"
                                       FontFamily="./Assets/Fonts/#Poppins"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,5"/>

                             <ProgressBar Value="90" 
                                        Height="4"
                                        Background="#E0E0E0"
                                        Foreground="#4CAF50"
                                        Margin="0,0,0,3"/>

                             <TextBlock Text="$709,769 raised"
                                       FontWeight="Bold"
                                       FontSize="10"
                                       Foreground="#333"/>
                         </StackPanel>
                     </Grid>
                 </Border>

                 <!-- Small Card 2 - Top Right -->
                 <Border Grid.Column="4" 
                        Grid.Row="0"
                        Background="White"
                        CornerRadius="8"
                        Height="192"
                        Cursor="Hand"
                        MouseLeftButtonUp="Card_Click">
                     <Border.Effect>
                         <DropShadowEffect Color="Gray" 
                                         BlurRadius="10" 
                                         Opacity="0.1" 
                                         ShadowDepth="2"/>
                     </Border.Effect>
                     <Grid>
                         <Grid.RowDefinitions>
                             <RowDefinition Height="2*"/>
                             <RowDefinition Height="1*"/>
                         </Grid.RowDefinitions>

                         <Border Grid.Row="0" 
                                Background="#E0E0E0"
                                CornerRadius="8,8,0,0">
                             <Grid>
                                 <Image Source="/Assets/Images/wildfire.jpg" 
     Stretch="UniformToFill"/>
                                 <TextBlock Text="1K donations"
                                          Foreground="White"
                                          FontWeight="Bold"
                                          FontSize="10"
                                          Margin="10"
                                          VerticalAlignment="Bottom"
                                          HorizontalAlignment="Left"/>
                             </Grid>
                         </Border>

                         <StackPanel Grid.Row="1" 
                                    Margin="12">
                             <TextBlock Text="Wildfire"
                                       FontWeight="Bold"
                                       FontSize="11"
                                       FontFamily="./Assets/Fonts/#Poppins"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,5"/>

                             <ProgressBar Value="60" 
                                        Height="4"
                                        Background="#E0E0E0"
                                        Foreground="#4CAF50"
                                        Margin="0,0,0,3"/>

                             <TextBlock Text="€25,791 raised"
                                       FontWeight="Bold"
                                       FontSize="10"
                                       Foreground="#333"/>
                         </StackPanel>
                     </Grid>
                 </Border>

                 <!-- Small Card 3 - Bottom Left -->
                 <Border Grid.Column="2" 
                        Grid.Row="2"
                        Background="White"
                        CornerRadius="8"
                        Height="192"
                        Cursor="Hand"
                        MouseLeftButtonUp="Card_Click">
                     <Border.Effect>
                         <DropShadowEffect Color="Gray" 
                                         BlurRadius="10" 
                                         Opacity="0.1" 
                                         ShadowDepth="2"/>
                     </Border.Effect>
                     <Grid>
                         <Grid.RowDefinitions>
                             <RowDefinition Height="2*"/>
                             <RowDefinition Height="1*"/>
                         </Grid.RowDefinitions>

                         <Border Grid.Row="0" 
                                Background="#E0E0E0"
                                CornerRadius="8,8,0,0">
                             <Grid>
                                 <Image Source="/Assets/Images/pollutedwater.jpg" 
                                         Stretch="UniformToFill"/>
                                 <TextBlock Text="8.4K donations"
                                          Foreground="White"
                                          FontWeight="Bold"
                                          FontSize="10"
                                          Margin="10"
                                          VerticalAlignment="Bottom"
                                          HorizontalAlignment="Left"/>
                             </Grid>
                         </Border>

                         <StackPanel Grid.Row="1" 
                                    Margin="12">
                             <TextBlock Text="Polluted Ocean"
                                       FontWeight="Bold"
                                       FontSize="11"
                                       FontFamily="./Assets/Fonts/#Poppins"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,5"/>

                             <ProgressBar Value="85" 
                                        Height="4"
                                        Background="#E0E0E0"
                                        Foreground="#4CAF50"
                                        Margin="0,0,0,3"/>

                             <TextBlock Text="€531,684 raised"
                                       FontWeight="Bold"
                                       FontSize="10"
                                       Foreground="#333"/>
                         </StackPanel>
                     </Grid>
                 </Border>

                 <!-- Small Card 4 - Bottom Right -->
                 <Border Grid.Column="4" 
                        Grid.Row="2"
                        Background="White"
                        CornerRadius="8"
                        Height="192"
                        Cursor="Hand"
                        MouseLeftButtonUp="Card_Click">
                     <Border.Effect>
                         <DropShadowEffect Color="Gray" 
                                         BlurRadius="10" 
                                         Opacity="0.1" 
                                         ShadowDepth="2"/>
                     </Border.Effect>
                     <Grid>
                         <Grid.RowDefinitions>
                             <RowDefinition Height="2*"/>
                             <RowDefinition Height="1*"/>
                         </Grid.RowDefinitions>

                         <Border Grid.Row="0" 
                                Background="#E0E0E0"
                                CornerRadius="8,8,0,0">
                             <Grid>
                                 <Image Source="/Assets/Images/pollution.jpg" 
     Stretch="UniformToFill"/>
                                 <TextBlock Text="10K donations"
                                          Foreground="White"
                                          FontWeight="Bold"
                                          FontSize="10"
                                          Margin="10"
                                          VerticalAlignment="Bottom"
                                          HorizontalAlignment="Left"/>
                             </Grid>
                         </Border>

                         <StackPanel Grid.Row="1" 
                                    Margin="12">
                             <TextBlock Text="Pollutioin"
                                       FontWeight="Bold"
                                       FontSize="11"
                                       FontFamily="./Assets/Fonts/#Poppins"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,5"/>

                             <ProgressBar Value="70" 
                                        Height="4"
                                        Background="#E0E0E0"
                                        Foreground="#4CAF50"
                                        Margin="0,0,0,3"/>

                             <TextBlock Text="€201,160 raised"
                                       FontWeight="Bold"
                                       FontSize="10"
                                       Foreground="#333"/>
                         </StackPanel>
                     </Grid>
                 </Border>

             </Grid>
         </StackPanel>
     </ScrollViewer>
 </Grid>
</UserControl>
