<UserControl x:Class="GreenBill.MVVM.View.CampaignDetailsTabs.Details"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GreenBill.MVVM.View.CampaignDetailsTabs"
             mc:Ignorable="d" 
             Background="#FFFFFF"
             d:DesignHeight="900" d:DesignWidth="1400">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel>
            <!-- Campaign Description Section -->
            <TextBlock Text="Campaign Description" 
                       FontSize="22" 
                       FontWeight="SemiBold" 
                       Foreground="#333333"
                       Margin="0,0,0,20"/>

            <TextBlock Text="{Binding SelectedCampaign.Description}"
                       FontSize="14" 
                       LineHeight="22" 
                       TextWrapping="Wrap" 
                       Foreground="#555555"
                       Margin="0,0,0,30"/>

        </StackPanel>
    </ScrollViewer>
</UserControl>