<UserControl x:Class="GreenBill.MVVM.View.CampaignDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GreenBill.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1400"
             Background="#F5F5F5">


    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Button Content="Back to Campaigns" 
                    Style="{StaticResource BackButtonStyle}"
                    HorizontalAlignment="Left"
                    Command="{Binding GoBackCommand}"/>
        </Grid>

        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,30">
            <Grid Margin="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="#E8E8E8" CornerRadius="12" Height="200">
                    <Image Source="{Binding SelectedCampaign.Image, Converter={StaticResource ImageConverter}}" Stretch="UniformToFill"/>
                </Border>

                <StackPanel Grid.Column="1" Margin="30,0,0,0" VerticalAlignment="Top">
                    <TextBlock Text="{Binding SelectedCampaign.Title}" 
                             FontSize="28" 
                             FontWeight="Bold" 
                             Foreground="#333333" 
                             Margin="0,0,0,10"/>

                    <Border Background="#E8F5E8" CornerRadius="15" Padding="10,5" HorizontalAlignment="Left" Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Fill="#4CAF50" Width="8" Height="8" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="Donation protected" FontSize="12" Foreground="#4CAF50" FontWeight="Medium"/>
                        </StackPanel>
                    </Border>

                    <StackPanel Margin="0,0,0,15">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="{Binding SelectedCampaign.TotalAmountRaised}" FontSize="32" FontWeight="Bold" Foreground="#4CAF50"/>
                        </StackPanel>
                        <TextBlock Text="{Binding SelectedCampaign.Percentage}" FontSize="14" Foreground="#999999"/>
                    </StackPanel>

                    <Border Background="#F0F0F0" Height="8" CornerRadius="4" Margin="0,0,0,15">
                        <Border Background="#4CAF50" Width="200" HorizontalAlignment="Left" CornerRadius="4"/>
                    </Border>

                    <StackPanel Orientation="Horizontal">
                        <Ellipse Fill="#9C27B0" Width="8" Height="8" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding SelectedCampaign.DonationsCount}" FontSize="14" Foreground="#666666"/>
                    </StackPanel>
                </StackPanel>

                <Button Grid.Column="2" 
                        Content="Withdraw" 
                        Style="{StaticResource ModernButtonStyle}"
                        Command="{Binding GoToWithdrawPage}"
                        CommandParameter="{Binding SelectedCampaign.Id}"
                        VerticalAlignment="Top"/>
            </Grid>
        </Border>

        <Border Grid.Row="2" Background="White" CornerRadius="12,12,0,0" Margin="0,0,0,0">
            <StackPanel Orientation="Horizontal" Margin="0">
                <Button Content="DETAILS" 
                        Command="{Binding SelectDetailsCommand}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsDetailsSelected}" Value="True">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="#4CAF50"
                                                        BorderThickness="0,0,0,2"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Foreground" Value="#4CAF50"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Content="DONORS" 
                        Command="{Binding SelectDonorsCommand}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsDonorsSelected}" Value="True">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="#4CAF50"
                                                        BorderThickness="0,0,0,2"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Foreground" Value="#4CAF50"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="UPDATES" 
          Command="{Binding SelectUpdatesCommand}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsUpdatesSelected}" Value="True">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                          BorderBrush="#4CAF50"
                                          BorderThickness="0,0,0,2"
                                          Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Foreground" Value="#4CAF50"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="SUPPORTING DOCUMENTS" 
                        Command="{Binding SelectSupportingDocumentsCommand}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsSupportingDocumentsSelected}" Value="True">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                BorderBrush="#4CAF50"
                                BorderThickness="0,0,0,2"
                                Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Foreground" Value="#4CAF50"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>

        <Border Grid.Row="3" 
                Background="White" 
                CornerRadius="0,0,12,12">
            <Grid Margin="40">
                <ContentPresenter Content="{Binding CurrentTabContent}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>