<UserControl x:Class="GreenBill.MVVM.View.UserCampaigns"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GreenBill.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1400"
             Background="#F5F5F5">
    <Grid Margin="100, 50, 100, 50">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="My Campaigns" 
                          FontSize="32" 
                          FontWeight="Bold" 
                          Foreground="#2D2D2D"
                          Margin="0,0,0,10"/>
                <TextBlock Text="Manage and track your fundraising campaigns" 
                          FontSize="16" 
                          Foreground="#666666"
                          Margin="0,0,0,20"/>
            </StackPanel>

         
        </Grid>

        <!-- Tab Header -->
        <Border Grid.Row="1" Background="White" CornerRadius="12,12,0,0" Margin="0,0,0,0">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.05" BlurRadius="8" ShadowDepth="1"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                <Button Name="VerifiedTab" 
                       Content="Verified" 
                       Background="#00A86B" 
                       Foreground="White"
                       BorderThickness="0"
                       FontWeight="SemiBold"
                       FontSize="14"
                       Padding="30,15"
                       Margin="0,0,10,0"
                       Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="8"
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Name="InReviewTab" 
                       Content="In Review" 
                       Background="#F8F9FA" 
                       Foreground="#666666"
                       BorderThickness="0"
                       FontWeight="SemiBold"
                       FontSize="14"
                       Padding="30,15"
                       Margin="0,0,10,0"
                       Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="8"
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E9ECEF"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Name="RejectedTab" 
                       Content="Rejected" 
                       Background="#F8F9FA" 
                       Foreground="#666666"
                       BorderThickness="0"
                       FontWeight="SemiBold"
                       FontSize="14"
                       Padding="30,15"
                       Margin="0"
                       Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="8"
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E9ECEF"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>

        <!-- Campaigns Content -->
        <Border Grid.Row="2" Background="White" CornerRadius="0,0,12,12" Margin="0">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.05" BlurRadius="8" ShadowDepth="1"/>
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" 
                         Margin="20,20,20,20">
                <UniformGrid Columns="3" Margin="0,0,0,0">

                    <!-- Campaign Card 1 -->
                    <Border Background="#FAFAFA" 
                           CornerRadius="12"
                           Margin="0,0,15,20"
                           Cursor="Hand">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" Opacity="0.08" BlurRadius="8" ShadowDepth="1"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="160"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Campaign Image -->
                            <Border Grid.Row="0" CornerRadius="12,12,0,0" Background="#E8F5E8">
                                <TextBlock Text="🌊" FontSize="48" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                            </Border>

                            <!-- Status Badge -->
                            <Border Background="#00A86B" 
                                   CornerRadius="12"
                                   Padding="8,4"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Top"
                                   Margin="0,12,12,0"
                                   Grid.Row="0"
                                   Panel.ZIndex="1">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="6" Height="6" Fill="White" Margin="0,0,4,0"/>
                                    <TextBlock Text="Verified" 
                                              FontSize="11" 
                                              FontWeight="SemiBold"
                                              Foreground="White"/>
                                </StackPanel>
                            </Border>

                            <!-- Campaign Details -->
                            <StackPanel Grid.Row="1" Margin="20,15">
                                <TextBlock Text="Clean Ocean Initiative" 
                                          FontSize="18" 
                                          FontWeight="SemiBold" 
                                          Foreground="#2D2D2D"
                                          Margin="0,0,0,8"/>

                                <TextBlock FontSize="24" 
                                          FontWeight="Bold" 
                                          Foreground="#00A86B"
                                          Margin="0,0,0,5">
                                    <Run Text="$45,665"/>
                                    <Run Text=" USD raised" FontSize="16" FontWeight="Normal" Foreground="#666666"/>
                                </TextBlock>

                                <TextBlock Text="42,342 • 980 donations" 
                                          FontSize="14" 
                                          Foreground="#999999"
                                          Margin="0,0,0,10"/>

                                <!-- Progress Bar -->
                                <Border Background="#F0F0F0" Height="6" CornerRadius="3" Margin="0,0,0,10">
                                    <Border Background="#00A86B" 
                                           Width="180" 
                                           HorizontalAlignment="Left" 
                                           CornerRadius="3"/>
                                </Border>

                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="8" Height="8" Fill="#9B59B6" Margin="0,0,8,0"/>
                                    <TextBlock Text="715 people just donated" 
                                              FontSize="12" 
                                              Foreground="#666666"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Action Button -->
                            <Button Grid.Row="2" 
                                   Content="View Details" 
                                   Background="Transparent" 
                                   Foreground="#00A86B"
                                   BorderBrush="#E0E0E0"
                                   BorderThickness="0,1,0,0"
                                   FontWeight="SemiBold"
                                   Padding="20,15"
                                   Margin="0"
                                   Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                           BorderBrush="{TemplateBinding BorderBrush}"
                                                           BorderThickness="{TemplateBinding BorderThickness}"
                                                           CornerRadius="0,0,12,12"
                                                           Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#F0F8F5"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>

                </UniformGrid>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>