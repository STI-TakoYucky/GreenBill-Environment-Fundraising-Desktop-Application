<Application
    x:Class="GreenBill.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:adminView="clr-namespace:GreenBill.MVVM.View.Admin"
    xmlns:adminViewModel="clr-namespace:GreenBill.MVVM.ViewModel.Admin"
    xmlns:converters="clr-namespace:GreenBill.Converters"
    xmlns:helpers="clr-namespace:GreenBill.Helpers"
    xmlns:local="clr-namespace:GreenBill"
    xmlns:stepsView="clr-namespace:GreenBill.MVVM.View.FundraisingSteps"
    xmlns:view="clr-namespace:GreenBill.MVVM.View"
    xmlns:viewModel="clr-namespace:GreenBill.MVVM.ViewModel">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Buttons.xaml" />
                <ResourceDictionary Source="/Styles/ComboBox.xaml" />
                <ResourceDictionary Source="/Styles/ComboBoxItem.xaml" />
                <ResourceDictionary Source="/Styles/CategoryButton.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <converters:StepVisibilityConverter x:Key="StepVisibilityConverter" />
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
            <converters:ByteArrayToImageConverter x:Key="ImageConverter" />
            <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />

            <DataTemplate DataType="{x:Type viewModel:FundraisingStepsViewModel}">
                <stepsView:FundraisingStepsContainer />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:SigninViewModel}">
                <view:Signin />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:SignupViewModel}">
                <view:Signup />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:HomePageViewModel}">
                <view:HomePage />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:FundraisingDetailsViewModel}">
                <view:FundraisingDetails />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:UserCampaignsViewModel}">
                <view:UserCampaigns />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:CampaignAnalyticsViewModel}">
                <view:CampaignAnalytics />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:CampaignDetailsViewModel}">
                <view:CampaignDetails />
            </DataTemplate>

            <DataTemplate DataType="{x:Type adminViewModel:AdminWindowViewModel}">
                <adminView:AdminWindow />
            </DataTemplate>

            <DataTemplate DataType="{x:Type adminViewModel:AdminDashboardViewModel}">
                <adminView:AdminDashboard />
            </DataTemplate>

            <DataTemplate DataType="{x:Type adminViewModel:UserAnalyticsViewModel}">
                <adminView:UserAnalytics />
            </DataTemplate>

            <DataTemplate DataType="{x:Type adminViewModel:AdminCampaignAnalyticsViewModel}">
                <adminView:AdminCampaignAnalytics />
            </DataTemplate>

            <DataTemplate DataType="{x:Type adminViewModel:SettingsViewModel}">
                <adminView:Settings />
            </DataTemplate>


            <Style x:Key="circleBtn" TargetType="Button">
                <Setter Property="Width" Value="30" />
                <Setter Property="Height" Value="30" />
                <Setter Property="Cursor" Value="Arrow" />
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border
                                x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="15"
                                Cursor="Hand"
                                SnapsToDevicePixels="True">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>

                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#e1e7e9" />
                                </Trigger>

                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="LightGray" />
                                </Trigger>
                            </ControlTemplate.Triggers>

                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>


            <Style x:Key="HeadingText" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#Poppins" />
                <Setter Property="FontWeight" Value="SemiBold" />
            </Style>

            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#Poppins-Regular" />
            </Style>

            <Style TargetType="TextBox">
                <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#Poppins-Regular" />
            </Style>

            <Style TargetType="PasswordBox">
                <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#Poppins-Regular" />
            </Style>

            <Style TargetType="Button">
                <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#Poppins-Medium" />
            </Style>

            <Style TargetType="Label">
                <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#Poppins" />
            </Style>

            <Style TargetType="ComboBox">
                <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#Poppins-Regular" />
            </Style>

            <Style TargetType="ListBox">
                <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#Poppins" />
            </Style>

            <Style TargetType="ListView">
                <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#Poppins" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
