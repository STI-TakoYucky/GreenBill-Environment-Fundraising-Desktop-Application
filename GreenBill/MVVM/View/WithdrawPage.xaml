<UserControl x:Class="GreenBill.MVVM.View.WithdrawPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GreenBill.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1400"
             Background="#F5F5F5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT SECTION - Withdraw Form -->
        <StackPanel Grid.Column="0" Margin="40,40,20,40" VerticalAlignment="Top">
            <Button Content="Back"
                    Margin="0,0,0,0"
                    Style="{StaticResource BackButtonStyle}"
                    HorizontalAlignment="Left"
                    Command="{Binding BackCommand}"/>
            
            <TextBlock Text="Withdraw Funds" FontSize="28" FontWeight="Bold" Foreground="#00695C" Margin="0,0,0,30"/>

            <!-- Balance Cards -->
            <Grid Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Available Balance Card -->
                <Border Grid.Column="0" Background="#00A651" CornerRadius="12" Padding="20" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="Available to Withdraw" FontSize="12" Foreground="#FFFFFF" Opacity="0.9" Margin="0,0,0,10"/>
                        <TextBlock Text="₱ 45,250.00" FontSize="24" FontWeight="Bold" Foreground="#FFFFFF"/>
                    </StackPanel>
                </Border>

                <!-- Already Withdrawn Card -->
                <Border Grid.Column="1" Background="#00695C" CornerRadius="12" Padding="20" Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Already Withdrawn" FontSize="12" Foreground="#FFFFFF" Opacity="0.9" Margin="0,0,0,10"/>
                        <TextBlock Text="₱ 18,500.00" FontSize="24" FontWeight="Bold" Foreground="#FFFFFF"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Withdraw Form Card -->
            <Border Background="#FFFFFF" CornerRadius="12" Padding="25">
                <StackPanel>
                    <TextBlock Text="Withdraw Amount" FontSize="16" FontWeight="SemiBold" Foreground="#00695C" Margin="0,0,0,15"/>

                    <!-- Amount Input -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Amount (₱)" FontSize="12" Foreground="#666666" Margin="0,0,0,8"/>
                        <Border Background="#F9F9F9" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="12">
                            <TextBox Text="0.00" FontSize="14" Foreground="#333333" Background="Transparent" BorderThickness="0" TextAlignment="Right"/>
                        </Border>
                    </StackPanel>

                    <!-- Bank Account Selection -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Bank Account" FontSize="12" Foreground="#666666" Margin="0,0,0,8"/>
                        <Border Background="#F9F9F9" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="0">
                            <ComboBox Background="Transparent" BorderThickness="0" Padding="12" FontSize="14" Foreground="#333333">
                                <ComboBoxItem>Metrobank - XX8502</ComboBoxItem>
                                <ComboBoxItem>BDO - XX7801</ComboBoxItem>
                                <ComboBoxItem>Add New Bank Account</ComboBoxItem>
                            </ComboBox>
                        </Border>
                    </StackPanel>

                    <!-- Processing Fee Info -->
                    <Border Background="#A8E6A3" Opacity="0.3" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Processing Details" FontSize="12" FontWeight="SemiBold" Foreground="#00695C" Margin="0,0,0,8"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Processing Fee" FontSize="11" Foreground="#666666"/>
                                <TextBlock Grid.Column="1" Text="₱ 25.00" FontSize="11" Foreground="#00695C" FontWeight="SemiBold"/>
                            </Grid>
                            <Grid Margin="0,8,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="You'll Receive" FontSize="11" Foreground="#666666"/>
                                <TextBlock Grid.Column="1" Text="₱ 0.00" FontSize="11" Foreground="#00A651" FontWeight="SemiBold"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Withdraw Button -->
                    <Button Background="#00A651" Foreground="#FFFFFF" FontSize="14" FontWeight="SemiBold" Padding="15" Margin="0,0,0,10">
                        Request Withdrawal
                    </Button>

                    <!-- Cancel Button -->
                    <Button Background="#E8E8E8" Foreground="#666666" FontSize="14" FontWeight="SemiBold" Padding="15">
                        Cancel
                    </Button>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- RIGHT SECTION - Withdrawal History -->
        <StackPanel Grid.Column="1" Margin="20,40,40,40">
            <TextBlock Text="Withdrawal History" FontSize="28" FontWeight="Bold" Foreground="#00695C" Margin="0,0,0,20"/>

            <!-- History List -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,0,0,0">
                <StackPanel>
                    <!-- History Item 1 -->
                    <Border Background="#FFFFFF" CornerRadius="12" Padding="20" Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Withdrawal Request" FontSize="14" FontWeight="SemiBold" Foreground="#333333"/>
                            <TextBlock Grid.Row="1" Text="Metrobank - XX8502" FontSize="11" Foreground="#999999" Margin="0,4,0,0"/>
                            <TextBlock Grid.Row="2" Text="October 15, 2025 • 2:30 PM" FontSize="10" Foreground="#CCCCCC" Margin="0,6,0,0"/>

                            <StackPanel Grid.Column="1" Grid.RowSpan="3" VerticalAlignment="Center">
                                <TextBlock Text="₱ 10,500.00" FontSize="16" FontWeight="Bold" Foreground="#00A651" TextAlignment="Right"/>
                                <Border Background="#A8E6A3" CornerRadius="4" Padding="6,4" Margin="0,6,0,0">
                                    <TextBlock Text="Completed" FontSize="10" Foreground="#00695C" FontWeight="SemiBold"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- History Item 2 -->
                    <Border Background="#FFFFFF" CornerRadius="12" Padding="20" Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Withdrawal Request" FontSize="14" FontWeight="SemiBold" Foreground="#333333"/>
                            <TextBlock Grid.Row="1" Text="BDO - XX7801" FontSize="11" Foreground="#999999" Margin="0,4,0,0"/>
                            <TextBlock Grid.Row="2" Text="October 10, 2025 • 10:15 AM" FontSize="10" Foreground="#CCCCCC" Margin="0,6,0,0"/>

                            <StackPanel Grid.Column="1" Grid.RowSpan="3" VerticalAlignment="Center">
                                <TextBlock Text="₱ 8,000.00" FontSize="16" FontWeight="Bold" Foreground="#00A651" TextAlignment="Right"/>
                                <Border Background="#A8E6A3" CornerRadius="4" Padding="6,4" Margin="0,6,0,0">
                                    <TextBlock Text="Completed" FontSize="10" Foreground="#00695C" FontWeight="SemiBold"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- History Item 3 -->
                    <Border Background="#FFFFFF" CornerRadius="12" Padding="20" Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Withdrawal Request" FontSize="14" FontWeight="SemiBold" Foreground="#333333"/>
                            <TextBlock Grid.Row="1" Text="Metrobank - XX8502" FontSize="11" Foreground="#999999" Margin="0,4,0,0"/>
                            <TextBlock Grid.Row="2" Text="September 28, 2025 • 4:45 PM" FontSize="10" Foreground="#CCCCCC" Margin="0,6,0,0"/>

                            <StackPanel Grid.Column="1" Grid.RowSpan="3" VerticalAlignment="Center">
                                <TextBlock Text="₱ 5,000.00" FontSize="16" FontWeight="Bold" Foreground="#F9A825" TextAlignment="Right"/>
                                <Border Background="#FFE8CC" CornerRadius="4" Padding="6,4" Margin="0,6,0,0">
                                    <TextBlock Text="Pending" FontSize="10" Foreground="#F9A825" FontWeight="SemiBold"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- History Item 4 -->
                    <Border Background="#FFFFFF" CornerRadius="12" Padding="20" Margin="0,0,0,12" >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Withdrawal Request" FontSize="14" FontWeight="SemiBold" Foreground="#333333"/>
                            <TextBlock Grid.Row="1" Text="BDO - XX7801" FontSize="11" Foreground="#999999" Margin="0,4,0,0"/>
                            <TextBlock Grid.Row="2" Text="September 15, 2025 • 11:20 AM" FontSize="10" Foreground="#CCCCCC" Margin="0,6,0,0"/>

                            <StackPanel Grid.Column="1" Grid.RowSpan="3" VerticalAlignment="Center">
                                <TextBlock Text="₱ 12,000.00" FontSize="16" FontWeight="Bold" Foreground="#00A651" TextAlignment="Right"/>
                                <Border Background="#A8E6A3" CornerRadius="4" Padding="6,4" Margin="0,6,0,0">
                                    <TextBlock Text="Completed" FontSize="10" Foreground="#00695C" FontWeight="SemiBold"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </StackPanel>
    </Grid>

</UserControl>