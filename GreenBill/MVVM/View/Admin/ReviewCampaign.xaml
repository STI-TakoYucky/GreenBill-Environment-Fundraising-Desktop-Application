<UserControl
    x:Class="GreenBill.MVVM.View.Admin.ReviewCampaign"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="900"
    d:DesignWidth="1400"
    Background="#f0f2f5"
    SnapsToDevicePixels="True"
    TextOptions.TextFormattingMode="Display"
    TextOptions.TextRenderingMode="ClearType"
    UseLayoutRounding="True"
    mc:Ignorable="d">

    <Grid>
        <ScrollViewer Padding="20" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!--  Header  -->
                <StackPanel Margin="0,0,0,20" HorizontalAlignment="Left">
                    <Button
                        Command="{Binding NavigateBack}"
                        Content="Back"
                        Style="{StaticResource BackButtonStyle}" />
                </StackPanel>

                <!--  Campaign Card  -->
                <Border
                    Margin="0,0,0,20"
                    Padding="25"
                    Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="12"
                    Effect="{DynamicResource DropShadowEffect}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="340" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  Left: Image + quick summary  -->
                        <StackPanel
                            Grid.Column="0"
                            Margin="0,0,24,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top">
                            <Border
                                Width="280"
                                Height="280"
                                Background="#FFF"
                                BorderBrush="#E6E9EB"
                                BorderThickness="1"
                                CornerRadius="8">
                                <Button
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Command="{Binding PreviewImageCommand}"
                                    CommandParameter="{Binding SelectedCampaign.Image}"
                                    Cursor="Hand"
                                    Focusable="False">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Grid>
                                                <Image
                                                    RenderOptions.BitmapScalingMode="HighQuality"
                                                    SnapsToDevicePixels="True"
                                                    Source="{Binding SelectedCampaign.Image, Converter={StaticResource ImageConverter}}"
                                                    Stretch="UniformToFill"
                                                    UseLayoutRounding="True" />
                                            </Grid>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Border>

                            <!--  Actions row  -->
                            <StackPanel
                                Grid.Row="0"
                                Margin="0,30,0,12"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">
                                <Button Margin="0,0,12,0" Command="{Binding Approve_ReviewCampaign}">
                                    <Button.Style>
                                        <Style BasedOn="{StaticResource PrimaryButton}" TargetType="Button">
                                            <Setter Property="Content" Value="Approve" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedCampaign.Status}" Value="Verified">
                                                    <Setter Property="Content" Value="Review" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding SelectedCampaign.Status}" Value="in review">
                                                    <Setter Property="Content" Value="Approve" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <Button
                                    Command="{Binding RejectCampaign}"
                                    CommandParameter="{Binding SelectedCampaign.Id}"
                                    Content="Reject"
                                    Style="{StaticResource SecondaryButton}" />
                            </StackPanel>
                        </StackPanel>

                        <!--  Right: details and actions  -->
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                                <TextBlock
                                    Margin="0,0,0,20"
                                    FontSize="24"
                                    FontWeight="Bold"
                                    Foreground="#00695C"
                                    Text="{Binding SelectedCampaign.Title}" />

                                <Border
                                    Width="100"
                                    Margin="0,0,0,20"
                                    Padding="6,2"
                                    HorizontalAlignment="Left"
                                    CornerRadius="10">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Text="{Binding SelectedCampaign.Status}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedCampaign.Status}" Value="in review">
                                                        <Setter Property="Foreground" Value="#856404" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SelectedCampaign.Status}" Value="Verified">
                                                        <Setter Property="Foreground" Value="#1B5E20" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SelectedCampaign.Status}" Value="Rejected">
                                                        <Setter Property="Foreground" Value="#721C24" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedCampaign.Status}" Value="in review">
                                                    <Setter Property="Background" Value="#FFF3CD" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding SelectedCampaign.Status}" Value="Verified">
                                                    <Setter Property="Background" Value="#C8E6C9" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding SelectedCampaign.Status}" Value="Rejected">
                                                    <Setter Property="Background" Value="#F8D7DA" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>
                                <TextBlock
                                    Margin="0,0,0,20"
                                    FontSize="14"
                                    Text="{Binding SelectedCampaign.Description}"
                                    TextWrapping="Wrap" />
                            </StackPanel>

                            <!--  Details: field cards  -->
                            <UniformGrid Grid.Row="1" Columns="1">
                                <!--  ID  -->
                                <Border
                                    Margin="0,0,12,12"
                                    Padding="12"
                                    Background="#FBFCFD"
                                    BorderBrush="#E6E9EB"
                                    BorderThickness="1"
                                    CornerRadius="8">
                                    <StackPanel>
                                        <TextBlock
                                            FontSize="12"
                                            Foreground="#8A8F95"
                                            Text="ID" />
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="#263238"
                                            Text="{Binding SelectedCampaign.IdString}"
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </Border>
                                <!--  UserID  -->
                                <Border
                                    Margin="0,0,12,12"
                                    Padding="12"
                                    Background="#FBFCFD"
                                    BorderBrush="#E6E9EB"
                                    BorderThickness="1"
                                    CornerRadius="8">
                                    <StackPanel>
                                        <TextBlock
                                            FontSize="12"
                                            Foreground="#8A8F95"
                                            Text="UserID" />
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="#263238"
                                            Text="{Binding SelectedCampaign.UserId}"
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </Border>
                                <!--  Category  -->
                                <Border
                                    Margin="0,0,12,12"
                                    Padding="12"
                                    Background="#FBFCFD"
                                    BorderBrush="#E6E9EB"
                                    BorderThickness="1"
                                    CornerRadius="8">
                                    <StackPanel>
                                        <TextBlock
                                            FontSize="12"
                                            Foreground="#8A8F95"
                                            Text="Category" />
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="#263238"
                                            Text="{Binding SelectedCampaign.Category}"
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </Border>
                                <!--  Country  -->
                                <Border
                                    Margin="0,0,12,12"
                                    Padding="12"
                                    Background="#FBFCFD"
                                    BorderBrush="#E6E9EB"
                                    BorderThickness="1"
                                    CornerRadius="8">
                                    <StackPanel>
                                        <TextBlock
                                            FontSize="12"
                                            Foreground="#8A8F95"
                                            Text="Country" />
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="#263238"
                                            Text="{Binding SelectedCampaign.Country}"
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </Border>
                                <!--  ZipCode  -->
                                <Border
                                    Margin="0,0,12,12"
                                    Padding="12"
                                    Background="#FBFCFD"
                                    BorderBrush="#E6E9EB"
                                    BorderThickness="1"
                                    CornerRadius="8">
                                    <StackPanel>
                                        <TextBlock
                                            FontSize="12"
                                            Foreground="#8A8F95"
                                            Text="ZipCode" />
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="#263238"
                                            Text="{Binding SelectedCampaign.ZipCode}"
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </Border>
                                <!--  Donation Goal  -->
                                <Border
                                    Margin="0,0,12,12"
                                    Padding="12"
                                    Background="#FBFCFD"
                                    BorderBrush="#E6E9EB"
                                    BorderThickness="1"
                                    CornerRadius="8">
                                    <StackPanel>
                                        <TextBlock
                                            FontSize="12"
                                            Foreground="#8A8F95"
                                            Text="Donation Goal" />
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="#263238"
                                            Text="{Binding SelectedCampaign.DonationGoal}"
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </Border>
                                <!--  Created At  -->
                                <Border
                                    Margin="0,0,12,12"
                                    Padding="12"
                                    Background="#FBFCFD"
                                    BorderBrush="#E6E9EB"
                                    BorderThickness="1"
                                    CornerRadius="8">
                                    <StackPanel>
                                        <TextBlock
                                            FontSize="12"
                                            Foreground="#8A8F95"
                                            Text="Created At" />
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="#263238"
                                            Text="{Binding SelectedCampaign.CreatedAt}"
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </Border>
                            </UniformGrid>
                        </Grid>
                    </Grid>
                </Border>

                <!--  Supporting Documents Section (badge below image, details as cards, buttons below details)  -->
                <TextBlock
                    Margin="0,40,0,15"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="#00695C"
                    Text="Supporting Documents" />

                <ItemsControl Margin="0,0,0,50" ItemsSource="{Binding SupportingDocument}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="2" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="0,0,15,15"
                                Padding="25"
                                Background="White"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                CornerRadius="10">

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <!--  Document Image  -->
                                    <StackPanel Grid.Column="0" VerticalAlignment="Top">
                                        <Button
                                            Width="200"
                                            Height="200"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Command="{Binding DataContext.PreviewImageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding FileData}"
                                            Cursor="Hand"
                                            Focusable="False">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Grid>
                                                        <Image
                                                            RenderOptions.BitmapScalingMode="HighQuality"
                                                            SnapsToDevicePixels="True"
                                                            Source="{Binding FileData, Converter={StaticResource ImageConverter}}"
                                                            Stretch="UniformToFill"
                                                            UseLayoutRounding="True" />
                                                        <Rectangle
                                                            x:Name="Overlay"
                                                            Fill="Black"
                                                            IsHitTestVisible="False"
                                                            Opacity="0" />
                                                    </Grid>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="Overlay" Property="Opacity" Value="0.2" />
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                        <!--  Status badge below image  -->
                                        <Border
                                            MinWidth="100"
                                            Margin="0,16,0,0"
                                            Padding="8,4"
                                            HorizontalAlignment="Left"
                                            CornerRadius="16">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontSize="14"
                                                Text="{Binding Status}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="in review">
                                                                <Setter Property="Foreground" Value="#856404" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Verified">
                                                                <Setter Property="Foreground" Value="#1B5E20" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Rejected">
                                                                <Setter Property="Foreground" Value="#721C24" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#FFF3CD" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Verified">
                                                            <Setter Property="Background" Value="#C8E6C9" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Rejected">
                                                            <Setter Property="Background" Value="#F8D7DA" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                        </Border>
                                    </StackPanel>

                                    <!--  Document Details: field cards  -->
                                    <StackPanel Grid.Column="1" Margin="30,0,0,0">
                                        <UniformGrid Columns="1">
                                            <!--  File Name  -->
                                            <Border
                                                Margin="0,0,12,12"
                                                Padding="12"
                                                Background="#FBFCFD"
                                                BorderBrush="#E6E9EB"
                                                BorderThickness="1"
                                                CornerRadius="8">
                                                <StackPanel>
                                                    <TextBlock
                                                        FontSize="12"
                                                        Foreground="#8A8F95"
                                                        Text="File Name" />
                                                    <TextBlock
                                                        FontSize="14"
                                                        FontWeight="SemiBold"
                                                        Foreground="#263238"
                                                        Text="{Binding FileName}"
                                                        TextWrapping="Wrap" />
                                                </StackPanel>
                                            </Border>
                                            <!--  Content Type  -->
                                            <Border
                                                Margin="0,0,12,12"
                                                Padding="12"
                                                Background="#FBFCFD"
                                                BorderBrush="#E6E9EB"
                                                BorderThickness="1"
                                                CornerRadius="8">
                                                <StackPanel>
                                                    <TextBlock
                                                        FontSize="12"
                                                        Foreground="#8A8F95"
                                                        Text="Content Type" />
                                                    <TextBlock
                                                        FontSize="14"
                                                        FontWeight="SemiBold"
                                                        Foreground="#263238"
                                                        Text="{Binding ContentType}"
                                                        TextWrapping="Wrap" />
                                                </StackPanel>
                                            </Border>
                                            <!--  File Size  -->
                                            <Border
                                                Margin="0,0,12,12"
                                                Padding="12"
                                                Background="#FBFCFD"
                                                BorderBrush="#E6E9EB"
                                                BorderThickness="1"
                                                CornerRadius="8">
                                                <StackPanel>
                                                    <TextBlock
                                                        FontSize="12"
                                                        Foreground="#8A8F95"
                                                        Text="File Size" />
                                                    <TextBlock
                                                        FontSize="14"
                                                        FontWeight="SemiBold"
                                                        Foreground="#263238"
                                                        Text="{Binding FileSize}"
                                                        TextWrapping="Wrap" />
                                                </StackPanel>
                                            </Border>
                                            <!--  Upload Date  -->
                                            <Border
                                                Margin="0,0,12,12"
                                                Padding="12"
                                                Background="#FBFCFD"
                                                BorderBrush="#E6E9EB"
                                                BorderThickness="1"
                                                CornerRadius="8">
                                                <StackPanel>
                                                    <TextBlock
                                                        FontSize="12"
                                                        Foreground="#8A8F95"
                                                        Text="Upload Date" />
                                                    <TextBlock
                                                        FontSize="14"
                                                        FontWeight="SemiBold"
                                                        Foreground="#263238"
                                                        Text="{Binding UploadDate}"
                                                        TextWrapping="Wrap" />
                                                </StackPanel>
                                            </Border>
                                            <!--  ID  -->
                                            <Border
                                                Margin="0,0,12,12"
                                                Padding="12"
                                                Background="#FBFCFD"
                                                BorderBrush="#E6E9EB"
                                                BorderThickness="1"
                                                CornerRadius="8">
                                                <StackPanel>
                                                    <TextBlock
                                                        FontSize="12"
                                                        Foreground="#8A8F95"
                                                        Text="ID" />
                                                    <TextBlock
                                                        FontSize="14"
                                                        FontWeight="SemiBold"
                                                        Foreground="#263238"
                                                        Text="{Binding Id}"
                                                        TextWrapping="Wrap" />
                                                </StackPanel>
                                            </Border>
                                        </UniformGrid>
                                        <!--  Buttons below details  -->
                                        <StackPanel
                                            Margin="0,10,0,0"
                                            HorizontalAlignment="Right"
                                            Orientation="Horizontal">
                                            <Button
                                                Width="100"
                                                Height="30"
                                                Margin="0,0,10,0"
                                                Command="{Binding DataContext.Approve_ReviewSupportingDocument, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding Id}">
                                                <Button.Style>
                                                    <Style BasedOn="{StaticResource PrimaryButton}" TargetType="Button">
                                                        <Setter Property="Content" Value="Approve" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Verified">
                                                                <Setter Property="Content" Value="Review" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="in review">
                                                                <Setter Property="Content" Value="Approve" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                            <Button
                                                Width="100"
                                                Height="30"
                                                Command="{Binding DataContext.RejectDocument, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding Id}"
                                                Content="Reject"
                                                Style="{DynamicResource SecondaryButton}" />
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>