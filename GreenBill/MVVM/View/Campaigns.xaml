<UserControl x:Class="GreenBill.MVVM.View.Campaigns"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GreenBill.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1400"
             Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="100,40,100,20">
            <TextBlock Text="Find fundraisers and nonprofits" 
                       FontSize="28" 
                       FontWeight="SemiBold" 
                       Foreground="#333333" 
                       Margin="0,0,0,8"/>
            <TextBlock Text="Find fundraisers by person's name, location, title, or keyword" 
                       FontSize="14" 
                       Foreground="#666666"/>
        </StackPanel>

        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="25" 
                Margin="100,0,100,20" 
                Height="50">
            <Border.Effect>
                <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="1" Opacity="0.2" BlurRadius="4"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="🔍" 
                           FontSize="16" 
                           VerticalAlignment="Center" 
                           Margin="20,0,10,0" 
                           Foreground="#999999"/>

                <TextBox Grid.Column="1" 
                         Name="SearchTextBox"
                         Text="Search" 
                         FontSize="14" 
                         Foreground="#999999" 
                         Background="Transparent" 
                         BorderThickness="0" 
                         VerticalAlignment="Center" 
                         Margin="0,0,20,0"
                         GotFocus="SearchTextBox_GotFocus"
                         LostFocus="SearchTextBox_LostFocus"
                         TextChanged="SearchTextBox_TextChanged"/>
            </Grid>
        </Border>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    Margin="100,0,100,20" 
                    HorizontalAlignment="Left">
            <Button Name="TrendingButton" 
                    Content="Trending" 
                    Style="{StaticResource ActiveFilterButtonStyle}"
                    Click="FilterButton_Click"/>
            <Button Name="NearYouButton" 
                    Content="Near you" 
                    Style="{StaticResource FilterButtonStyle}"
                    Click="FilterButton_Click"/>
            <Button Name="NonprofitsButton" 
                    Content="Nonprofits" 
                    Style="{StaticResource FilterButtonStyle}"
                    Click="FilterButton_Click"/>
        </StackPanel>

        <ScrollViewer Grid.Row="3" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="100,0,100,20">

            <ItemsControl ItemsSource="{Binding Campaigns}" 
                          Margin="10"
                          VerticalAlignment="Top">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="3" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CampaignContainer}"
                                Height="320"
                                Margin="15"
                                VerticalAlignment="Top">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="180"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Button Grid.Row="0"
                                        Background="#F5F5F5"
                                        Command="{Binding DataContext.NavigateToCampaignDetails, 
                                                 RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding Id}"
                                        BorderThickness="0"
                                        Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border CornerRadius="16,16,0,0"
                                                    Background="{TemplateBinding Background}">
                                                <Grid>
                                                    <Image Source="{Binding Image, Converter={StaticResource ImageConverter}}"
                                                           Stretch="UniformToFill"/>

                                                    <Border Background="#00BCD4"
                                                            CornerRadius="15"
                                                            Padding="12,6"
                                                            HorizontalAlignment="Left"
                                                            VerticalAlignment="Bottom"
                                                            Margin="16">
                                                        <TextBlock Text="975 donations"
                                                                   Foreground="White"
                                                                   FontWeight="SemiBold"
                                                                   FontSize="11"/>
                                                    </Border>

                                                    <Border Background="White"
                                                            CornerRadius="12"
                                                            Padding="8,4"
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Top"
                                                            Margin="16">
                                                        <TextBlock Text="{Binding Category}"
                                                                   Foreground="#333333"
                                                                   FontWeight="Medium"
                                                                   FontSize="10"/>
                                                    </Border>
                                                </Grid>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                                <StackPanel Grid.Row="1" 
                                            Margin="20,16,20,20">
                                    <TextBlock Text="{Binding Title}"
                                               FontWeight="SemiBold"
                                               FontSize="16"
                                               
                                               TextWrapping="Wrap"
                                               Foreground="#333333"
                                               Margin="0,0,0,12"/>

                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding TotalAmountRaised}"
                                                   FontWeight="Bold"
                                                   FontSize="14"
                                                   Foreground="#333333"
                                                   VerticalAlignment="Center"/>

                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Percentage}"
                                                   FontSize="12"
                                                   Foreground="#4CAF50"
                                                   FontWeight="Medium"
                                                   VerticalAlignment="Center"/>
                                    </Grid>

                                    <Border Background="#F0F0F0"
                                            CornerRadius="10"
                                            Height="8">
                                        <Border Background="#4CAF50"
                                                CornerRadius="10"
                                                HorizontalAlignment="Left"
                                                Width="200"/>
                                    </Border>

                                    <TextBlock Text="{Binding DaySpan}"
                                               FontSize="12"
                                               Foreground="#666666"
                                               Margin="0,8,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </ScrollViewer>
    </Grid>
</UserControl>