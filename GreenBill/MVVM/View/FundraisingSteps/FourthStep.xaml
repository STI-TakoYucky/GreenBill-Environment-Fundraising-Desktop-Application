<UserControl x:Class="GreenBill.MVVM.View.FundraisingSteps.FourthStep"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GreenBill.MVVM.View.FundraisingSteps"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1400"
             Background="#F5F5F5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Side - Welcome Content -->
        <StackPanel Grid.Column="0" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Margin="50">

            <!-- Logo/Icon placeholder -->
            <Image Source="/Assets/Images/logo.png"
                   Height="100"
                   Margin="0,0,0,30"/>

            <!-- Step indicator -->
            <TextBlock Text="4 of 5"
                       FontSize="14"
                       Foreground="#666666"
                       TextAlignment="Center"
                       Margin="0,0,0,30"/>

            <TextBlock Text="Tell donors why you're fundraising"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#333333"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>

            <TextBlock Text="Some ideas to help you start writing:"
                       FontSize="16"
                       Foreground="#666666"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       LineHeight="24"
                       Margin="0,0,0,20"/>

            <!-- Bullet Points -->
            <StackPanel HorizontalAlignment="Left" MaxWidth="300">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <Ellipse Width="6" Height="6" 
                            Fill="#666666" 
                            VerticalAlignment="Top"
                            Margin="0,8,10,0"/>
                    <TextBlock Text="Introduce yourself and what you're raising funds for"
                               FontSize="14"
                               Foreground="#666666"
                               TextWrapping="Wrap"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <Ellipse Width="6" Height="6" 
                            Fill="#666666" 
                            VerticalAlignment="Top"
                            Margin="0,8,10,0"/>
                    <TextBlock Text="Describe why it's important to you"
                               FontSize="14"
                               Foreground="#666666"
                               TextWrapping="Wrap"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="6" Height="6" 
                            Fill="#666666" 
                            VerticalAlignment="Top"
                            Margin="0,8,10,0"/>
                    <TextBlock Text="Explain how the funds will be used"
                               FontSize="14"
                               Foreground="#666666"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!-- Right Side - Form Content -->
        <StackPanel Grid.Column="1" 
                    VerticalAlignment="Center" 
                    Margin="50,50,100,50">

            <!-- Title Input Section -->
            <StackPanel Margin="0,0,0,30">
                <TextBlock Text="Give your fundraiser a title"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="#333333"
                           Margin="0,0,0,15"/>

                <Border Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20">
                    <Grid>
                        <TextBox Name="TitleTextBox"
                                FontSize="16"
                                BorderThickness="0"
                                Background="Transparent"
                                VerticalContentAlignment="Center"
                                Padding="0"/>
                        <TextBlock Text="Donate to help..."
                                  FontSize="16"
                                  Foreground="#CCCCCC"
                                  IsHitTestVisible="False"
                                  VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=TitleTextBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBlock Text="50"
                                  FontSize="14"
                                  Foreground="#999999"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Right"/>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- Story Input Section -->
            <StackPanel Margin="0,0,0,30">
                <TextBlock Text="Tell your story"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="#333333"
                           Margin="0,0,0,15"/>

                <Border Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Height="200">
                    <Grid>
                        <TextBox Name="StoryTextBox"
                                FontSize="16"
                                BorderThickness="0"
                                Background="Transparent"
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                VerticalScrollBarVisibility="Auto"
                                VerticalContentAlignment="Top"
                                Padding="0"/>
                        <TextBlock Text="Hi, my name is Jane and I'm fundraising for..."
                                  FontSize="16"
                                  Foreground="#CCCCCC"
                                  IsHitTestVisible="False"
                                  VerticalAlignment="Top">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=StoryTextBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- Information Text -->
            <TextBlock Text="Your story helps donors understand why your cause is important to you and encourages them to support your fundraiser."
                       FontSize="14"
                       Foreground="#666666"
                       TextWrapping="Wrap"
                       LineHeight="20"
                       Margin="0,0,0,40"/>

            <!-- Navigation Buttons -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Back Button -->
                <Button Grid.Column="0"
                        Width="50"
                        Height="50"
                        Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        HorizontalAlignment="Left">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               BorderBrush="{TemplateBinding BorderBrush}"
                                               BorderThickness="{TemplateBinding BorderThickness}"
                                               CornerRadius="25">
                                            <Path Data="M15,12 L9,6 L10.4,4.6 L18,12 L10.4,19.4 L9,18 Z"
                                                  Fill="#666666"
                                                  RenderTransformOrigin="0.5,0.5"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center">
                                                <Path.RenderTransform>
                                                    <RotateTransform Angle="180"/>
                                                </Path.RenderTransform>
                                            </Path>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Continue Button -->
                <Button Grid.Column="2"
                        Content="Review"
                        Style="{StaticResource PrimaryButton}"
                        HorizontalAlignment="Right"/>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>