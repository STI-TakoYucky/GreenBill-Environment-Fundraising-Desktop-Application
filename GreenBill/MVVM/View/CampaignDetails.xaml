<UserControl x:Class="GreenBill.MVVM.View.CampaignDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GreenBill.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1400"
             Background="#F5F5F5">

    <UserControl.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45A049"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3D8B40"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Tab Button Style -->
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="#E0E0E0"
                                BorderThickness="0,0,0,2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#4CAF50"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Active Tab Style -->
        <Style x:Key="ActiveTabButtonStyle" TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
            <Setter Property="Foreground" Value="#4CAF50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="#4CAF50"
                                BorderThickness="0,0,0,2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#E0E0E0" BlurRadius="15" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,30">
            <Grid Margin="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Campaign Image -->
                <Border Grid.Column="0" Background="#E8E8E8" CornerRadius="12" Height="200">
                    <TextBlock Text="IMAGE" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             Foreground="#999999"
                             HorizontalAlignment="Center" 
                             VerticalAlignment="Center"/>
                </Border>

                <!-- Campaign Info -->
                <StackPanel Grid.Column="1" Margin="30,0,0,0" VerticalAlignment="Top">
                    <TextBlock Text="Campaign Title" 
                             FontSize="28" 
                             FontWeight="Bold" 
                             Foreground="#333333" 
                             Margin="0,0,0,10"/>

                    <!-- Donation Protected Badge -->
                    <Border Background="#E8F5E8" CornerRadius="15" Padding="10,5" HorizontalAlignment="Left" Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Fill="#4CAF50" Width="8" Height="8" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="Donation protected" FontSize="12" Foreground="#4CAF50" FontWeight="Medium"/>
                        </StackPanel>
                    </Border>

                    <!-- Amount Raised -->
                    <StackPanel Margin="0,0,0,15">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="$45,665" FontSize="32" FontWeight="Bold" Foreground="#4CAF50"/>
                            <TextBlock Text=" USD raised" FontSize="16" Foreground="#666666" VerticalAlignment="Bottom" Margin="5,0,0,5"/>
                        </StackPanel>
                        <TextBlock Text="42,342 • 980 donations" FontSize="14" Foreground="#999999"/>
                    </StackPanel>

                    <!-- Progress Bar -->
                    <Border Background="#F0F0F0" Height="8" CornerRadius="4" Margin="0,0,0,15">
                        <Border Background="#4CAF50" Width="200" HorizontalAlignment="Left" CornerRadius="4"/>
                    </Border>

                    <!-- Recent Donation -->
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Fill="#9C27B0" Width="8" Height="8" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="715 people just donated" FontSize="14" Foreground="#666666"/>
                    </StackPanel>
                </StackPanel>

                <!-- Withdraw Button -->
                <Button Grid.Column="2" 
                        Content="Withdraw" 
                        Style="{StaticResource ModernButtonStyle}"
                        VerticalAlignment="Top"/>
            </Grid>
        </Border>

        <!-- Navigation Tabs -->
        <Border Grid.Row="1" Background="White" CornerRadius="12,12,0,0" Margin="0,0,0,0">
            <StackPanel Orientation="Horizontal" Margin="0">
                <Button Content="DETAILS" Style="{StaticResource ActiveTabButtonStyle}"/>
                <Button Content="DONORS" Style="{StaticResource TabButtonStyle}"/>
                <Button Content="COMMENTS" Style="{StaticResource TabButtonStyle}"/>
                <Button Content="UPDATES" Style="{StaticResource TabButtonStyle}"/>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <Border Grid.Row="2" 
                Background="White" 
                CornerRadius="0,0,12,12">
            <Grid Margin="40">
                <!-- Content Control Placeholder -->
                <Border Background="#FAFAFA" 
                        CornerRadius="8" 
                        MinHeight="400">
                    <TextBlock Text="CONTENT CONTROL" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             Foreground="#CCCCCC"
                             HorizontalAlignment="Center" 
                             VerticalAlignment="Center"/>
                </Border>

                <!-- You can replace the above Border with actual content based on selected tab -->
                <!-- For example: -->
                <!--
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Campaign Description" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                        <TextBlock Text="Your campaign description content goes here..." 
                                 FontSize="14" 
                                 LineHeight="22" 
                                 TextWrapping="Wrap" 
                                 Foreground="#555555"/>
                    </StackPanel>
                </ScrollViewer>
                -->
            </Grid>
        </Border>
    </Grid>
</UserControl>