<UserControl
    x:Class="GreenBill.MVVM.View.Admin.ReviewCampaign"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="900"
    d:DesignWidth="1400"
    Background="#f0f2f5"
    mc:Ignorable="d">

    <Grid>
        <ScrollViewer Padding="20" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!--  Header  -->
                <StackPanel Margin="0,0,0,20" HorizontalAlignment="Left">
                    <Button
                        Command="{Binding NavigateBack}"
                        Content="Back"
                        Style="{StaticResource BackButtonStyle}" />
                </StackPanel>

                <!--  Campaign Card  -->
                <Border
                    Margin="0,0,0,20"
                    Padding="25"
                    Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="12"
                    Effect="{DynamicResource DropShadowEffect}">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Vertical">

                            <DockPanel VerticalAlignment="Top">
                                <StackPanel Orientation="Horizontal">
                                    <!--  Image  -->
                                    <Border
                                        Width="200"
                                        Height="200"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        CornerRadius="8">
                                        <Button
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Command="{Binding PreviewImageCommand}"
                                            CommandParameter="{Binding SelectedCampaign.Image}"
                                            Cursor="Hand"
                                            Focusable="False">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Grid>
                                                        <!--  Image  -->
                                                        <Image
                                                            Height="350"
                                                            Source="{Binding SelectedCampaign.Image, Converter={StaticResource ImageConverter}}"
                                                            Stretch="UniformToFill" />

                                                        <!--  Dark overlay  -->
                                                        <Rectangle
                                                            x:Name="Overlay"
                                                            Fill="Black"
                                                            IsHitTestVisible="False"
                                                            Opacity="0" />
                                                    </Grid>

                                                    <!--  Hover trigger  -->
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="Overlay" Property="Opacity" Value="0.2" />
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </Border>
                                    <!--  Image  -->
                                </StackPanel>

                                <StackPanel
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Orientation="Horizontal">
                                    <Button Margin="0,0,20,0" Command="{Binding Approve_ReviewCampaign}">
                                        <Button.Style>
                                            <Style BasedOn="{StaticResource PrimaryButton}" TargetType="Button">
                                                <Setter Property="Content" Value="Approve" />

                                                <Style.Triggers>
                                                    <!--  When Status == Approved  -->
                                                    <DataTrigger Binding="{Binding SelectedCampaign.Status}" Value="Verified">
                                                        <Setter Property="Content" Value="Review" />
                                                    </DataTrigger>

                                                    <DataTrigger Binding="{Binding SelectedCampaign.Status}" Value="in review">
                                                        <Setter Property="Content" Value="Approve" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                    <Button
                                        Command="{Binding RejectCampaign}"
                                        CommandParameter="{Binding SelectedCampaign.Id}"
                                        Content="Reject"
                                        Style="{StaticResource SecondaryButton}" />
                                </StackPanel>
                            </DockPanel>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Margin" Value="0,0,20,20" />
                                    </Style>
                                </Grid.Resources>
                                <TextBlock Grid.Column="0" TextWrapping="Wrap">
                                    <Run
                                        FontSize="12"
                                        Foreground="Gray"
                                        Text="ID" />
                                    <LineBreak />
                                    <Run FontSize="14" Text="{Binding SelectedCampaign.IdString}" />
                                </TextBlock>

                                <TextBlock Grid.Column="1" TextWrapping="Wrap">
                                    <Run
                                        FontSize="12"
                                        Foreground="Gray"
                                        Text="Title" />
                                    <LineBreak />
                                    <Run FontSize="14" Text="{Binding SelectedCampaign.Title}" />
                                </TextBlock>

                                <TextBlock Grid.Column="2" TextWrapping="Wrap">
                                    <Run
                                        FontSize="12"
                                        Foreground="Gray"
                                        Text="UserID" />
                                    <LineBreak />
                                    <Run FontSize="14" Text="{Binding SelectedCampaign.UserId}" />
                                </TextBlock>

                                <TextBlock Grid.Column="3" TextWrapping="Wrap">
                                    <Run
                                        FontSize="12"
                                        Foreground="Gray"
                                        Text="Description" />
                                    <LineBreak />
                                    <Run FontSize="14" Text="{Binding SelectedCampaign.Description}" />
                                </TextBlock>

                                <TextBlock Grid.Column="4" TextWrapping="Wrap">
                                    <Run
                                        FontSize="12"
                                        Foreground="Gray"
                                        Text="Category" />
                                    <LineBreak />
                                    <Run FontSize="14" Text="{Binding SelectedCampaign.Category}" />
                                </TextBlock>

                                <TextBlock Grid.Row="1" TextWrapping="Wrap">
                                    <Run
                                        FontSize="12"
                                        Foreground="Gray"
                                        Text="Country" />
                                    <LineBreak />
                                    <Run FontSize="14" Text="{Binding SelectedCampaign.Country}" />
                                </TextBlock>

                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    TextWrapping="Wrap">
                                    <Run
                                        FontSize="12"
                                        Foreground="Gray"
                                        Text="ZipCode" />
                                    <LineBreak />
                                    <Run FontSize="14" Text="{Binding SelectedCampaign.ZipCode}" />
                                </TextBlock>

                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    TextWrapping="Wrap">
                                    <Run
                                        FontSize="12"
                                        Foreground="Gray"
                                        Text="Donation Goal" />
                                    <LineBreak />
                                    <Run FontSize="14" Text="{Binding SelectedCampaign.DonationGoal}" />
                                </TextBlock>

                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="3"
                                    TextWrapping="Wrap">
                                    <Run
                                        FontSize="12"
                                        Foreground="Gray"
                                        Text="Created At" />
                                    <LineBreak />
                                    <Run FontSize="14" Text="{Binding SelectedCampaign.CreatedAt}" />
                                </TextBlock>

                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="4"
                                    TextWrapping="Wrap">
                                    <Run
                                        FontSize="12"
                                        Foreground="Gray"
                                        Text="Status" />
                                    <LineBreak />

                                    <InlineUIContainer>
                                        <Border Padding="6,2" CornerRadius="10">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontSize="14"
                                                Text="{Binding SelectedCampaign.Status}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding SelectedCampaign.Status}" Value="in review">
                                                                <Setter Property="Foreground" Value="#856404" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding SelectedCampaign.Status}" Value="Verified">
                                                                <Setter Property="Foreground" Value="#1B5E20" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding SelectedCampaign.Status}" Value="Rejected">
                                                                <Setter Property="Foreground" Value="#721C24" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>

                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding SelectedCampaign.Status}" Value="in review">
                                                            <Setter Property="Background" Value="#FFF3CD" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding SelectedCampaign.Status}" Value="Verified">
                                                            <Setter Property="Background" Value="#C8E6C9" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding SelectedCampaign.Status}" Value="Rejected">
                                                            <Setter Property="Background" Value="#F8D7DA" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                        </Border>
                                    </InlineUIContainer>
                                </TextBlock>

                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>

                <!--  Supporting Documents Section  -->
                <TextBlock
                    Margin="0,0,0,15"
                    FontSize="20"
                    FontWeight="Bold"
                    Text="Supporting Documents" />

                <ItemsControl ItemsSource="{Binding SupportingDocument}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                            <!--  Cards flow horizontally  -->
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="0,0,15,15"
                                Padding="15"
                                Background="White"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                CornerRadius="10">

                                <StackPanel>
                                    <!--  Document info  -->
                                    <DockPanel>
                                        <StackPanel Orientation="Vertical">

                                            <TextBlock
                                                VerticalAlignment="Center"
                                                FontSize="14"
                                                FontWeight="Bold"
                                                Text="{Binding FileName}" />

                                            <TextBlock
                                                FontSize="12"
                                                Foreground="Gray"
                                                Text="{Binding DocumentType}"
                                                TextWrapping="Wrap" />
                                        </StackPanel>

                                        <!--  Buttons  -->
                                        <StackPanel
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                            <Button
                                                Width="100"
                                                Height="30"
                                                Margin="0,0,10,0"
                                                Command="{Binding DataContext.Approve_ReviewSupportingDocument, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding Id}">
                                                <Button.Style>
                                                    <Style BasedOn="{StaticResource PrimaryButton}" TargetType="Button">
                                                        <Setter Property="Content" Value="Approve" />

                                                        <Style.Triggers>
                                                            <!--  When Status == Approved  -->
                                                            <DataTrigger Binding="{Binding Status}" Value="Verified">
                                                                <Setter Property="Content" Value="Review" />
                                                            </DataTrigger>

                                                            <DataTrigger Binding="{Binding Status}" Value="in review">
                                                                <Setter Property="Content" Value="Approve" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                            <Button
                                                Width="100"
                                                Height="30"
                                                Command="{Binding DataContext.RejectDocument, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding Id}"
                                                Content="Reject"
                                                Style="{DynamicResource SecondaryButton}" />
                                        </StackPanel>
                                    </DockPanel>

                                    <Border
                                        Margin="0,20,0,0"
                                        VerticalAlignment="Top"
                                        CornerRadius="8">

                                        <StackPanel Orientation="Horizontal">
                                            <Button
                                                Width="250"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Command="{Binding DataContext.PreviewImageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding FileData}"
                                                Cursor="Hand"
                                                Focusable="False">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Grid>
                                                            <!--  Image  -->
                                                            <Image
                                                                Height="350"
                                                                Source="{Binding FileData, Converter={StaticResource ImageConverter}}"
                                                                Stretch="UniformToFill" />

                                                            <!--  Dark overlay  -->
                                                            <Rectangle
                                                                x:Name="Overlay"
                                                                Fill="Black"
                                                                IsHitTestVisible="False"
                                                                Opacity="0" />
                                                        </Grid>

                                                        <!--  Hover trigger  -->
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="Overlay" Property="Opacity" Value="0.2" />
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>

                                            <StackPanel
                                                Width="Auto"
                                                Margin="30,0,0,0"
                                                Orientation="Vertical">
                                                <StackPanel.Resources>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Margin" Value="0,0,0,10" />
                                                    </Style>
                                                </StackPanel.Resources>
                                                <TextBlock TextWrapping="Wrap">
                                                    <Run
                                                        FontSize="12"
                                                        Foreground="Gray"
                                                        Text="ID" />
                                                    <LineBreak />
                                                    <Run FontSize="14" Text="{Binding Id}" />
                                                </TextBlock>

                                                <TextBlock TextWrapping="Wrap">
                                                    <Run
                                                        FontSize="12"
                                                        Foreground="Gray"
                                                        Text="Content Type" />
                                                    <LineBreak />
                                                    <Run FontSize="14" Text="{Binding ContentType}" />
                                                </TextBlock>

                                                <TextBlock TextWrapping="Wrap">
                                                    <Run
                                                        FontSize="12"
                                                        Foreground="Gray"
                                                        Text="File Size" />
                                                    <LineBreak />
                                                    <Run FontSize="14" Text="{Binding FileSize}" />
                                                </TextBlock>

                                                <TextBlock TextWrapping="Wrap">
                                                    <Run
                                                        FontSize="12"
                                                        Foreground="Gray"
                                                        Text="Upload Date" />
                                                    <LineBreak />
                                                    <Run FontSize="14" Text="{Binding UploadDate}" />
                                                </TextBlock>

                                                <TextBlock
                                                    Grid.Row="1"
                                                    Grid.Column="4"
                                                    TextWrapping="Wrap">
                                                    <Run
                                                        FontSize="12"
                                                        Foreground="Gray"
                                                        Text="Status" />
                                                    <LineBreak />

                                                    <InlineUIContainer>
                                                        <Border Padding="6,2" CornerRadius="10">
                                                            <TextBlock
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"
                                                                FontSize="14"
                                                                Text="{Binding Status}">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding Status}" Value="in review">
                                                                                <Setter Property="Foreground" Value="#856404" />
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Status}" Value="Verified">
                                                                                <Setter Property="Foreground" Value="#1B5E20" />
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Status}" Value="Rejected">
                                                                                <Setter Property="Foreground" Value="#721C24" />
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>

                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Status}" Value="in review">
                                                                            <Setter Property="Background" Value="#FFF3CD" />
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Verified">
                                                                            <Setter Property="Background" Value="#C8E6C9" />
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Rejected">
                                                                            <Setter Property="Background" Value="#F8D7DA" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                        </Border>
                                                    </InlineUIContainer>
                                                </TextBlock>
                                            </StackPanel>

                                        </StackPanel>
                                    </Border>

                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>




            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
