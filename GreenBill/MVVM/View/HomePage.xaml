<UserControl x:Class="GreenBill.MVVM.View.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GreenBill.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1400"
             Background="#F5F5F5">
     <Grid>
     <!-- Header -->
     
    

     <!-- Navigation Frame for Page Content -->
     <Frame x:Name="MainFrame" 
            Margin="0,0,0,-62"
            NavigationUIVisibility="Hidden"/>

     <!-- Main Content (initially visible) -->
     <ScrollViewer x:Name="MainContent"
                  Margin="100,40,100,20" 
                  VerticalAlignment="Stretch"
                  VerticalScrollBarVisibility="Auto">
         <StackPanel>
             <!-- Header Text -->
             <TextBlock Text="Discover projects inspired by your passion for protecting the planet" 
                       FontWeight="Bold"
                       FontSize="28"
                       FontFamily="./Assets/Fonts/#Poppins"
                       Margin="0,0,0,30"
                       TextWrapping="Wrap"/>

             <!-- Filter Dropdown -->
                <ComboBox Width="250"
          HorizontalAlignment="Left"
          Margin="0,0,0,30"
          Height="40"
          Style="{StaticResource ComboBox}"
          ItemContainerStyle="{StaticResource ComboBoxItem}">
                    <ComboBoxItem Content="Happening worldwide" IsSelected="True"/>
                    <ComboBoxItem Content="Local projects"/>
                    <ComboBoxItem Content="Emergency relief"/>
                    <ComboBoxItem Content="Medical fundraisers"/>
                    <ComboBoxItem Content="Environmental causes"/>
                </ComboBox>

                <!-- Cards Grid with Asymmetric Layout -->
                <!-- Replace your current Cards Grid section with this -->
                <ItemsControl ItemsSource="{Binding Campaigns}" Margin="0,0,0,30">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="3" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White"
                    CornerRadius="8"
                    Height="250"
                    Margin="10"
                    Cursor="Hand"
                    MouseLeftButtonUp="Card_Click">
                                <Border.Effect>
                                    <DropShadowEffect Color="Gray" 
                                    BlurRadius="10" 
                                    Opacity="0.1" 
                                    ShadowDepth="2"/>
                                </Border.Effect>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="2*"/>
                                        <RowDefinition Height="1*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Image Area -->
                                    <Button Grid.Row="0" 
                            Background="#E0E0E0"
                            Command="{Binding DataContext.NavigateToFundraisingDetails, 
                                     RelativeSource={RelativeSource AncestorType=UserControl}}">
                                        <Grid>
                                            <Image Source="/Assets/Images/deforestation.jpg" 
                                   Stretch="UniformToFill"/>
                                            <TextBlock Text="975 donations"
                                      Foreground="White"
                                      FontWeight="Bold"
                                      FontSize="12"
                                      Margin="12"
                                      VerticalAlignment="Bottom"
                                      HorizontalAlignment="Left"/>
                                        </Grid>
                                    </Button>

                                    <!-- Content Area -->
                                    <StackPanel Grid.Row="1" 
                                Margin="15">
                                        <TextBlock Text="{Binding Title}"
                                  FontWeight="Bold"
                                  FontSize="14"
                                  FontFamily="./Assets/Fonts/#Poppins"
                                  TextWrapping="Wrap"
                                  Margin="0,0,0,8"/>

                                        <!-- Progress Bar -->
                                        <ProgressBar Value="75" 
                                    Height="6"
                                    Background="#E0E0E0"
                                    Foreground="#4CAF50"
                                    Margin="0,0,0,5"/>

                                        <TextBlock Text="$45,555 raised"
                                  FontWeight="Bold"
                                  FontSize="12"
                                  Foreground="#333"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <StackPanel Margin="0, 70, 0, 0" Background="#00695C">
                    <TextBlock Text="We’ve got you covered." 
                        FontWeight="Bold"
                        FontSize="28"
                        Padding="30, 30, 30, 0"
                        Foreground="White"
                        FontFamily="./Assets/Fonts/#Poppins"
                        Margin="0,0,0,30"
                        TextWrapping="Wrap"/>

                    <TextBlock Text="GoFundMe is a trusted leader in online fundraising. With simple pricing and a team of Trust and Safety experts in your corner, you can raise money or make a donation with peace of mind." 
                               FontSize="35"
                               FontWeight="Medium"
                               Padding="30, 0, 30, 30"
                               Foreground="White"
                               FontFamily="./Assets/Fonts/#Poppins"
                               Margin="0,0,0,30"
                               TextWrapping="Wrap"/>
                </StackPanel>
         </StackPanel>

          
     </ScrollViewer>
 </Grid>
</UserControl>
