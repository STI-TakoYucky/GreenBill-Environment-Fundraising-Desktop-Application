<UserControl
    x:Class="GreenBill.MVVM.View.Admin.AdminAccPreview"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GreenBill.MVVM.View.Admin"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="900"
    d:DesignWidth="1400"
    Background="#f4f4f4"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/DropdownButton.xaml" />
                <ResourceDictionary Source="/Styles/Buttons.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style x:Key="ModernTextBox" TargetType="TextBox">
                <Setter Property="Height" Value="45" />
                <Setter Property="Padding" Value="15,10" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Background" Value="White" />
                <Setter Property="BorderBrush" Value="#E0E0E0" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="Foreground" Value="#333333" />
                <Setter Property="CaretBrush" Value="#4CAF50" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Style.Triggers>
                    <Trigger Property="IsFocused" Value="True">
                        <Setter Property="BorderBrush" Value="#4CAF50" />
                        <Setter Property="BorderThickness" Value="2" />
                        <Setter Property="Background" Value="#FAFAFA" />
                    </Trigger>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="BorderBrush" Value="#D0D0D0" />
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
                <Setter Property="Height" Value="45" />
                <Setter Property="Padding" Value="15,10" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Background" Value="White" />
                <Setter Property="BorderBrush" Value="#E0E0E0" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="Foreground" Value="#333333" />
                <Setter Property="CaretBrush" Value="#4CAF50" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="PasswordBox">
                            <Border
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                                <ScrollViewer
                                    x:Name="PART_ContentHost"
                                    Margin="{TemplateBinding Padding}"
                                    VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="BorderBrush" Value="#4CAF50" />
                                    <Setter Property="BorderThickness" Value="2" />
                                    <Setter Property="Background" Value="#FAFAFA" />
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="BorderBrush" Value="#D0D0D0" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="ModernComboBox" TargetType="ComboBox">
                <Setter Property="Background" Value="White" />
                <Setter Property="BorderBrush" Value="#E3E7EA" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="Padding" Value="8,6" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Margin" Value="0,6,0,6" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ComboBox">
                            <Grid>
                                <Border
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8">
                                    <DockPanel Margin="8,0">
                                        <ContentPresenter VerticalAlignment="Center" Content="{TemplateBinding SelectionBoxItem}" />
                                        <ToggleButton
                                            Width="30"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            DockPanel.Dock="Right"
                                            IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                            <Path
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Data="M 0 0 L 8 0 L 4 5 Z"
                                                Fill="#666"
                                                Stretch="Uniform" />
                                        </ToggleButton>
                                    </DockPanel>
                                </Border>
                                <Popup
                                    AllowsTransparency="True"
                                    IsOpen="{TemplateBinding IsDropDownOpen}"
                                    Placement="Bottom"
                                    PopupAnimation="Fade">
                                    <Border
                                        Padding="6"
                                        Background="White"
                                        BorderBrush="#E3E7EA"
                                        BorderThickness="1"
                                        CornerRadius="8">
                                        <ScrollViewer MaxHeight="200">
                                            <ItemsPresenter />
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="ModernButton" TargetType="Button">
                <Setter Property="Height" Value="45" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontWeight" Value="SemiBold" />
                <Setter Property="Cursor" Value="Hand" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                                <ContentPresenter
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Content="{TemplateBinding Content}" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.9" />
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Opacity" Value="0.8" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style
                x:Key="PrimaryButton"
                BasedOn="{StaticResource ModernButton}"
                TargetType="Button">
                <Setter Property="Background" Value="#4CAF50" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Padding" Value="12,8" />
                <Setter Property="Margin" Value="8,0,0,0" />
            </Style>

            <Style
                x:Key="SecondaryButton"
                BasedOn="{StaticResource ModernButton}"
                TargetType="Button">
                <Setter Property="Background" Value="White" />
                <Setter Property="Foreground" Value="#4CAF50" />
                <Setter Property="BorderBrush" Value="#4CAF50" />
                <Setter Property="BorderThickness" Value="2" />
                <Setter Property="Padding" Value="12,8" />
            </Style>

            <Style x:Key="BadgeStyle" TargetType="Border">
                <Setter Property="CornerRadius" Value="15" />
                <Setter Property="Padding" Value="12,6" />
                <Setter Property="HorizontalAlignment" Value="Left" />
                <Setter Property="Margin" Value="5,0" />
            </Style>

            <Style x:Key="CardStyle" TargetType="Border">
                <Setter Property="Background" Value="White" />
                <Setter Property="CornerRadius" Value="12" />
                <Setter Property="Padding" Value="30" />
                <Setter Property="Margin" Value="10" />
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect
                            BlurRadius="10"
                            Direction="270"
                            Opacity="0.1"
                            ShadowDepth="2"
                            Color="Black" />
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <ScrollViewer Padding="30,0,30,0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock
                    Margin="0,20,0,0"
                    FontSize="24"
                    FontWeight="SemiBold"
                    Foreground="#00695C"
                    Text="Admin Accounts" />

                <Grid Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>


                    <Border
                        Grid.Column="0"
                        Margin="0,0,15,0"
                        Background="White"
                        CornerRadius="12">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="8"
                                Opacity="0.08"
                                ShadowDepth="2"
                                Color="#000000" />
                        </Border.Effect>
                        <StackPanel Margin="25,20">
                            <TextBlock
                                Margin="0,0,0,8"
                                FontSize="14"
                                Foreground="#666666"
                                Text="All Admins" />
                            <TextBlock
                                Margin="0,0,0,5"
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="#00A86B"
                                Text="{Binding AdminCount}" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,5,0"
                                    FontSize="16"
                                    Foreground="#00A86B"
                                    Text="↗" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="#00A86B"
                                    Text="12.5% from last month" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                </Grid>

                <Grid Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*" />
                        <ColumnDefinition Width="25*" />
                        <ColumnDefinition Width="25*" />
                        <ColumnDefinition Width="25*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                </Grid>

                <Grid Margin="0,20,0,40">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid
                        Grid.Row="0"
                        Margin="-5,0,0,15"
                        HorizontalAlignment="Left">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button
                            Width="150"
                            Height="40"
                            Command="{Binding CreateAdminCommand}"
                            Content="Create Admin"
                            Style="{StaticResource PrimaryButton}" />
                    </Grid>

                    <DataGrid
                        Grid.Row="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        AlternatingRowBackground="#FBFBFC"
                        AlternationCount="2"
                        AutoGenerateColumns="False"
                        BorderThickness="0"
                        CanUserAddRows="False"
                        CanUserDeleteRows="False"
                        CanUserReorderColumns="False"
                        CanUserResizeColumns="True"
                        CanUserSortColumns="False"
                        GridLinesVisibility="None"
                        HeadersVisibility="Column"
                        IsReadOnly="True"
                        ItemsSource="{Binding Users}"
                        RowBackground="White"
                        RowHeight="50">

                        <DataGrid.Resources>
                            <!--  keep selection unobtrusive  -->
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent" />
                            <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent" />
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black" />
                            <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="Transparent" />
                            <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" Color="Black" />

                            <!--  modern palette for rows  -->
                            <SolidColorBrush x:Key="RowHoverBrush" Color="#F6F8F9" />
                            <SolidColorBrush x:Key="RowDividerBrush" Color="#e1e7e9" />
                            <SolidColorBrush x:Key="RowSelectedAccent" Color="#4CAF50" />
                        </DataGrid.Resources>

                        <!--  keep header gray shade (#e1e7e9)  -->
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#e1e7e9" />
                                <Setter Property="Foreground" Value="#333" />
                                <Setter Property="FontWeight" Value="SemiBold" />
                                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                <Setter Property="FontSize" Value="14" />
                                <Setter Property="Padding" Value="10,18" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="HorizontalContentAlignment" Value="Left" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridColumnHeader">
                                            <Border
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="6">
                                                <ContentPresenter
                                                    Margin="{TemplateBinding Padding}"
                                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                    VerticalAlignment="Center"
                                                    RecognizesAccessKey="True" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <!--  subtle hover, alternating rows, left accent for selection  -->
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="SnapsToDevicePixels" Value="True" />
                                <Setter Property="FontSize" Value="14" />
                                <Setter Property="Margin" Value="0" />
                                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                <Setter Property="BorderThickness" Value="0,0,0,1" />
                                <Setter Property="BorderBrush" Value="{StaticResource RowDividerBrush}" />
                                <Setter Property="Background" Value="{Binding RelativeSource={RelativeSource AncestorType=DataGrid}, Path=RowBackground}" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridRow">
                                            <Border
                                                x:Name="RowBorder"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                                <Grid>
                                                    <Rectangle
                                                        x:Name="Accent"
                                                        Width="4"
                                                        HorizontalAlignment="Left"
                                                        Fill="{StaticResource RowSelectedAccent}"
                                                        Visibility="Collapsed" />
                                                    <DataGridCellsPresenter Margin="8,0,0,0" />
                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="RowBorder" Property="Background" Value="{StaticResource RowHoverBrush}" />
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Accent" Property="Visibility" Value="Visible" />
                                                    <Setter TargetName="RowBorder" Property="Background" Value="White" />
                                                </Trigger>
                                                <Trigger Property="AlternationIndex" Value="1">
                                                    <Setter TargetName="RowBorder" Property="Background" Value="{Binding RelativeSource={RelativeSource AncestorType=DataGrid}, Path=AlternatingRowBackground}" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.RowStyle>

                        <!--  flat cell style  -->
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="12,0" />
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.CellStyle>

                        <!--  columns unchanged (badges and ellipses menu preserved)  -->
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding FirstName}"
                                Header="First Name" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding LastName}"
                                Header="Last Name" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Username}"
                                Header="Username" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Email}"
                                Header="Email" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Role}"
                                Header="Role" />

                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding CreatedAt}"
                                Header="Created At" />

                            <DataGridTemplateColumn Width="50">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Menu Background="Transparent" BorderBrush="Transparent">
                                            <MenuItem Style="{DynamicResource Services_MenuItem_With_Dropdown}">
                                                <MenuItem.Header>
                                                    <Grid>
                                                        <Viewbox
                                                            Width="20"
                                                            Height="20"
                                                            HorizontalAlignment="Center">
                                                            <Path
                                                                Width="20"
                                                                Height="20"
                                                                HorizontalAlignment="Center"
                                                                Data="M240-400q-33 0-56.5-23.5T160-480q0-33 23.5-56.5T240-560q33 0 56.5 23.5T320-480q0 33-23.5 56.5T240-400Zm240 0q-33 0-56.5-23.5T400-480q0-33 23.5-56.5T480-560q33 0 56.5 23.5T560-480q0 33-23.5 56.5T480-400Zm240 0q-33 0-56.5-23.5T640-480q0-33 23.5-56.5T720-560q33 0 56.5 23.5T800-480q0 33-23.5 56.5T720-400Z"
                                                                Fill="Black"
                                                                Stretch="Uniform" />
                                                        </Viewbox>
                                                    </Grid>
                                                </MenuItem.Header>

                                                <MenuItem
                                                    Command="{Binding DataContext.NavigateToReviewAdmin, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding Id}"
                                                    Cursor="Hand"
                                                    Header="Review" />
                                            </MenuItem>
                                        </Menu>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>



            </StackPanel>

        </ScrollViewer>
    </Grid>
</UserControl>
