<UserControl x:Class="GreenBill.MVVM.View.UserCampaigns"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GreenBill.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1400"
             Background="#F5F5F5">
    <Grid Margin="100, 50, 100, 50">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="My Campaigns" 
                          FontSize="32" 
                          FontWeight="Bold" 
                          Foreground="#2D2D2D"
                          Margin="0,0,0,10"/>
                <TextBlock Text="Manage and track your fundraising campaigns" 
                          FontSize="16" 
                          Foreground="#666666"
                          Margin="0,0,0,20"/>
            </StackPanel>
        </Grid>

        <Border Grid.Row="1" Background="White" CornerRadius="12,12,0,0" Margin="0,0,0,0">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.05" BlurRadius="8" ShadowDepth="1"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                <Button Name="VerifiedTab" 
                       Content="Verified" 
                       Command="{Binding SelectVerifiedTab}"
                       BorderThickness="0"
                       FontWeight="SemiBold"
                       FontSize="14"
                       Padding="30,15"
                       Margin="0,0,10,0"
                       Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="8"
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsVerifiedTabActive}" Value="True">
                                    <Setter Property="Background" Value="#00A86B"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsVerifiedTabActive}" Value="False">
                                    <Setter Property="Background" Value="#F8F9FA"/>
                                    <Setter Property="Foreground" Value="#666666"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Name="InReviewTab" 
                       Content="In Review" 
                       Command="{Binding SelectInReviewTab}"
                       BorderThickness="0"
                       FontWeight="SemiBold"
                       FontSize="14"
                       Padding="30,15"
                       Margin="0,0,10,0"
                       Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="8"
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E9ECEF"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsInReviewTabActive}" Value="True">
                                    <Setter Property="Background" Value="#00A86B"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsInReviewTabActive}" Value="False">
                                    <Setter Property="Background" Value="#F8F9FA"/>
                                    <Setter Property="Foreground" Value="#666666"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Name="RejectedTab" 
                       Content="Rejected" 
                       Command="{Binding SelectRejectedTab}"
                       BorderThickness="0"
                       FontWeight="SemiBold"
                       FontSize="14"
                       Padding="30,15"
                       Margin="0"
                       Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="8"
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E9ECEF"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsRejectedTabActive}" Value="True">
                                    <Setter Property="Background" Value="#00A86B"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsRejectedTabActive}" Value="False">
                                    <Setter Property="Background" Value="#F8F9FA"/>
                                    <Setter Property="Foreground" Value="#666666"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>

        <Border Grid.Row="2" Background="White" CornerRadius="0,0,12,12" Margin="0">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.05" BlurRadius="8" ShadowDepth="1"/>
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" 
                         Margin="20,20,20,20">

                <ItemsControl ItemsSource="{Binding Campaigns}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="3" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#FAFAFA" 
                                   CornerRadius="12"
                                   Margin="0,0,15,20"
                                   Cursor="Hand">
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000" Opacity="0.08" BlurRadius="8" ShadowDepth="1"/>
                                </Border.Effect>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="160"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" CornerRadius="12,12,0,0" Background="#E8F5E8">
                                        <Grid>
                                            <Image Source="{Binding Image, Converter={StaticResource ImageConverter}}"
                                                   Stretch="UniformToFill"/>
                                        </Grid>
                                    </Border>

                                    <Border Grid.Row="0"
                                           Panel.ZIndex="1"
                                           CornerRadius="12"
                                           Padding="8,4"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Top"
                                           Margin="0,12,12,0">
                                        <Border.Background>
                                            <MultiBinding Converter="{StaticResource StatusToColorValueConverter}">
                                                <Binding Path="Status"/>
                                            </MultiBinding>
                                        </Border.Background>
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="6" Height="6" Fill="White" Margin="0,0,4,0"/>
                                            <TextBlock Text="{Binding Status}" 
                                                      FontSize="11" 
                                                      FontWeight="SemiBold"
                                                      Foreground="White"/>
                                        </StackPanel>
                                    </Border>

                                    <StackPanel Grid.Row="1" Margin="20,15">
                                        <TextBlock Text="{Binding Title}" 
                                                  FontSize="18" 
                                                  FontWeight="SemiBold" 
                                                  Foreground="#2D2D2D"
                                                  Margin="0,0,0,8"
                                                  TextTrimming="CharacterEllipsis"/>

                                        <TextBlock FontSize="24" 
                                                  FontWeight="Bold" 
                                                  Foreground="#00A86B"
                                                  Margin="0,0,0,5">
                                            <Run Text="{Binding TotalAmountRaised}"/>
                                         
                                        </TextBlock>

                                        <TextBlock FontSize="14" 
                                                  Foreground="#999999"
                                                  Margin="0,0,0,10">
                                            <Run Text="{Binding Percentage}"/>
                                        </TextBlock>

                                        <Border Background="#F0F0F0" Height="6" CornerRadius="3" Margin="0,0,0,10">
                                            <Border Background="#F0F0F0"
                                                    CornerRadius="10"
                                                    Height="8">
                                                <Border Background="#4CAF50"
                                                        CornerRadius="10"
                                                        HorizontalAlignment="Left"
                                                        Width="200"/>
                                            </Border>
                                        </Border>

                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="8" Height="8" Fill="#9B59B6" Margin="0,0,8,0"/>
                                            <TextBlock FontSize="12" 
                                                      Foreground="#666666">
                                                <Run Text="{Binding DonationsCount}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>

                                    <Button Grid.Row="2" 
                                           Content="View Details" 
                                           Background="Transparent" 
                                           Foreground="#00A86B"
                                           BorderBrush="#E0E0E0"
                                           BorderThickness="0,1,0,0"
                                           FontWeight="SemiBold"
                                           Padding="20,15"
                                           Command="{Binding DataContext.ViewDetails, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                           CommandParameter="{Binding Id}"
                                           Margin="0"
                                           Cursor="Hand">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" 
                                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                                   BorderThickness="{TemplateBinding BorderThickness}"
                                                                   CornerRadius="0,0,12,12"
                                                                   Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                                VerticalAlignment="Center"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#F0F8F5"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>


            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>