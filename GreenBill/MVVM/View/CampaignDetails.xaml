<UserControl x:Class="GreenBill.MVVM.View.CampaignDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GreenBill.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1400"
             Background="#F5F5F5">

    <UserControl.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45A049"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3D8B40"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Back Button Style -->
        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="M15.41,16.58L10.83,12L15.41,7.41L14,6L8,12L14,18L15.41,16.58Z" 
                                      Fill="{TemplateBinding Foreground}" 
                                      Width="16" Height="16" 
                                      Stretch="Uniform"
                                      VerticalAlignment="Center"
                                      Margin="0,0,8,0"/>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F0F0F0"/>
                                <Setter Property="Foreground" Value="#4CAF50"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#E8E8E8"/>
                                <Setter Property="Foreground" Value="#45A049"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Tab Button Style -->
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="#E0E0E0"
                                BorderThickness="0,0,0,2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#4CAF50"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Active Tab Style -->
        <Style x:Key="ActiveTabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#4CAF50"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="#4CAF50"
                                BorderThickness="0,0,0,2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#E0E0E0" BlurRadius="15" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back Button Row -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Button Content="Back to Campaigns" 
                    Style="{StaticResource BackButtonStyle}"
                    HorizontalAlignment="Left"
                    Command="{Binding GoBackCommand}"/>
        </Grid>

        <!-- Header Section -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,30">
            <Grid Margin="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Campaign Image -->
                <Border Grid.Column="0" Background="#E8E8E8" CornerRadius="12" Height="200">
                    <Image Source="{Binding SelectedCampaign.Image, Converter={StaticResource ImageConverter}}" Stretch="UniformToFill"/>
                </Border>

                <!-- Campaign Info -->
                <StackPanel Grid.Column="1" Margin="30,0,0,0" VerticalAlignment="Top">
                    <TextBlock Text="{Binding SelectedCampaign.Title}" 
                             FontSize="28" 
                             FontWeight="Bold" 
                             Foreground="#333333" 
                             Margin="0,0,0,10"/>

                    <!-- Donation Protected Badge -->
                    <Border Background="#E8F5E8" CornerRadius="15" Padding="10,5" HorizontalAlignment="Left" Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Fill="#4CAF50" Width="8" Height="8" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="Donation protected" FontSize="12" Foreground="#4CAF50" FontWeight="Medium"/>
                        </StackPanel>
                    </Border>

                    <!-- Amount Raised -->
                    <StackPanel Margin="0,0,0,15">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="{Binding SelectedCampaign.TotalAmountRaised}" FontSize="32" FontWeight="Bold" Foreground="#4CAF50"/>
                        </StackPanel>
                        <TextBlock Text="{Binding SelectedCampaign.Percentage}" FontSize="14" Foreground="#999999"/>
                    </StackPanel>

                    <!-- Progress Bar -->
                    <Border Background="#F0F0F0" Height="8" CornerRadius="4" Margin="0,0,0,15">
                        <Border Background="#4CAF50" Width="200" HorizontalAlignment="Left" CornerRadius="4"/>
                    </Border>

                    <!-- Recent Donation -->
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Fill="#9C27B0" Width="8" Height="8" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding SelectedCampaign.DonationsCount}" FontSize="14" Foreground="#666666"/>
                    </StackPanel>
                </StackPanel>

                <!-- Withdraw Button -->
                <Button Grid.Column="2" 
                        Content="Withdraw" 
                        Style="{StaticResource ModernButtonStyle}"
                        VerticalAlignment="Top"/>
            </Grid>
        </Border>

        <!-- Navigation Tabs -->
        <Border Grid.Row="2" Background="White" CornerRadius="12,12,0,0" Margin="0,0,0,0">
            <StackPanel Orientation="Horizontal" Margin="0">
                <Button Content="DETAILS" 
                        Command="{Binding SelectDetailsCommand}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsDetailsSelected}" Value="True">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="#4CAF50"
                                                        BorderThickness="0,0,0,2"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Foreground" Value="#4CAF50"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Content="DONORS" 
                        Command="{Binding SelectDonorsCommand}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsDonorsSelected}" Value="True">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="#4CAF50"
                                                        BorderThickness="0,0,0,2"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Foreground" Value="#4CAF50"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="UPDATES" 
          Command="{Binding SelectUpdatesCommand}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsUpdatesSelected}" Value="True">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                          BorderBrush="#4CAF50"
                                          BorderThickness="0,0,0,2"
                                          Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Foreground" Value="#4CAF50"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="SUPPORTING DOCUMENTS" 
                        Command="{Binding SelectSupportingDocumentsCommand}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsSupportingDocumentsSelected}" Value="True">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                BorderBrush="#4CAF50"
                                BorderThickness="0,0,0,2"
                                Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Foreground" Value="#4CAF50"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <Border Grid.Row="3" 
                Background="White" 
                CornerRadius="0,0,12,12">
            <Grid Margin="40">
                <!-- Dynamic Content Control -->
                <ContentPresenter Content="{Binding CurrentTabContent}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>